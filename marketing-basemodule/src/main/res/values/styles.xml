<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="basemodule_layout"></style>

    <style name="basemodule_layout.m">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="basemodule_layout.m.m">
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="login_theme" parent="dialog">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <!--正快餐左侧分栏项-->

    <style name="custom_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/verify_perssion_title</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
