<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="basemodule_layout"></style>

    <style name="basemodule_layout.m">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="basemodule_layout.m.m">
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="basemodule_Loading_Transparent" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!--标题文本-->
    <style name="TitleTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--正快餐左侧分栏项-->
    <style name="LeftItemStyle">
        <item name="android:textColor">@color/dinner_dishname_color</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="title_icon_style">
        <item name="android:background">@drawable/dinner_table_info_button_selector</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="handover_history_item_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#BCBCBC</item>
        <item name="android:focusable">false</item>
        <item name="android:textSize">14.67dp</item>
    </style>

    <style name="handover_title_tv">
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="handover_abandon_title_tv" parent="handover_title_tv">
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#BCBCBC</item>
        <item name="android:textSize">14.67sp</item>
    </style>

    <style name="handover_button">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@drawable/btn_blue_selector</item>
        <item name="android:enabled">true</item>
        <item name="android:textColor">@drawable/handover_but_text_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="handover_pre_next_btn">
        <item name="android:layout_width">106.67dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#40D0AE</item>
        <item name="android:background">@drawable/btn_blue_pre_next_selector</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="login_theme" parent="dialog">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="basemodule_horizontal_line">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--正快餐左侧分栏项-->
    <style name="user_center_left_item_style">
        <item name="android:textColor">@color/dinner_dishname_color</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">17dp</item>
        <item name="android:layout_marginRight">17dp</item>
        <item name="android:paddingLeft">21dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
    </style>

    <style name="custom_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/verify_perssion_title</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
