<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="setting_notify_msg_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/notification_setting_item_height</item>
        <item name="android:minHeight">@dimen/notification_setting_item_height</item>
        <item name="android:paddingLeft">@dimen/notification_setting_item_text_margin_left</item>
        <item name="android:paddingRight">@dimen/notification_setting_item_btn_margin_right</item>
    </style>

    <style name="setting_notify_msg_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/notification_setting_item_size</item>
        <item name="android:textColor">#333333</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="setting_notify_msg_text2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/notification_setting_item_title_size</item>
        <item name="android:textColor">#999999</item>
        <item name="android:layout_marginRight">@dimen/notification_setting_items_drawable_padding
        </item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="setting_notify_msg_to_right_img" parent="@style/customer_info_item_img"></style>

    <style name="customer_info_item_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:src">@drawable/notifycenter_to_right</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="settings_rightTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
    </style>

    <style name="setting_notify_module_ui">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/notification_setting_item_height</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="setting_notify_module_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/notification_setting_items_drawable_padding
        </item>
        <item name="android:textSize">@dimen/notification_setting_item_size</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="setting_notify_module_icon">
        <item name="android:layout_width">@dimen/notification_setting_item_drawable_width</item>
        <item name="android:layout_height">@dimen/notification_setting_item_drawable_width</item>
        <item name="android:layout_marginLeft">@dimen/notification_setting_item_text_margin_left
        </item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="setting_right_content_margin">
        <item name="android:layout_marginTop">@dimen/notification_setting_content_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/notification_setting_content_margin_left
        </item>
        <item name="android:layout_marginRight">@dimen/notification_setting_content_margin_left
        </item>
        <item name="android:layout_marginBottom">@dimen/notification_setting_content_margin_top
        </item>
    </style>

    <style name="setting_item_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/notification_setting_item_title_size</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="setting_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/notification_setting_item_height</item>
        <item name="android:background">@drawable/notifycenter_setting_item_bg</item>
        <item name="android:layout_marginTop">@dimen/notification_setting_item_margin_top</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="setting_item_name_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/notification_setting_item_size</item>
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/notification_setting_item_text_margin_left
        </item>
    </style>

    <style name="setting_switch_item_toggle">
        <item name="android:layout_width">@dimen/notification_setting_item_btn_width</item>
        <item name="android:layout_height">@dimen/notification_setting_item_btn_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/notifycenter_setting_switch_selector</item>
        <item name="android:layout_marginRight">@dimen/notification_setting_item_btn_margin_right
        </item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

</resources>