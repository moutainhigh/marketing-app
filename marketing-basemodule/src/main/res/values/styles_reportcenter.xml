<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="reportcenter_head">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#c2c2c2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableRight">@drawable/reportcenter_head_icon</item>
        <item name="android:drawablePadding">10dp</item>


    </style>

    <style name="reportcenter_listitem">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="style_reportcenter_column_hint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_reportcenter_spinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="style_reportcenter_spinner_content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/reportcenter_icon_bg_spinner_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:text">text</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">#33adf6</item>
    </style>

    <style name="style_queue_reportcenter_spinner_content">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/reportcenter_icon_bg_spinner_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:text">text</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">#33adf6</item>
    </style>

    <style name="style_reportcenter_spinner_arrow">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/reportcenter_icon_arrow_down_gray</item>
        <item name="android:background">@drawable/reportcenter_btn_spinner_arrow_selector</item>
    </style>

    <style name="style_reportcenter_btn_blue">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:background">@drawable/reportcenter_btn_blue_selector</item>
        <item name="android:gravity">center</item>
    </style>
</resources>