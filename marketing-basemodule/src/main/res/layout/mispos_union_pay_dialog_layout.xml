<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/union_pay_layout"
        android:layout_width="560dp"
        android:layout_height="wrap_content"
        android:background="@drawable/mispos_uion_background"
        android:paddingBottom="20dp">

        <Button
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/mispos_uion_close_button"></Button>

        <ImageView
            android:id="@+id/center_iv"
            android:layout_width="234dp"
            android:layout_height="234dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp" />

        <TextView
            android:id="@+id/show_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/center_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/credit_card_transaction_failed"
            android:textColor="#555555"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/reminder_msg_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/show_info_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="@string/pay_amount"
            android:textColor="#555555"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pay_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reminder_msg_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="@string/pay_amount"
            android:textColor="#ff7901"
            android:textSize="24sp" />

        <Button
            android:id="@+id/try_again_button"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_below="@+id/show_info_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/mispos_uion_try_again_selector"
            android:text="@string/try_again"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:visibility="visible"></Button>
    </RelativeLayout>

</LinearLayout>