<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:minHeight="66dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="12dp">

    <ImageView
        android:id="@+id/choose_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/reportcenter_checkbox_nomal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/text_20"
        android:textColor="#333333"
        android:text="@string/reportcenter_print_first_few"
        android:layout_marginLeft="12dp" />

    <EditText
        android:id="@+id/number_et"
        android:layout_width="128dp"
        android:layout_height="42dp"
        android:gravity="center"
        android:textSize="@dimen/text_20"
        android:textColor="#333333"
        android:text=""
        android:hint="@string/reportcenter_userdefine_input"
        android:textColorHint="#c3c8ce"
        android:maxLength="2"
        android:inputType="number"
        android:layout_marginLeft="10dp"
        android:background="@drawable/reportcenter_bg_order_center_dialog_radiogroup_all" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/text_20"
        android:textColor="#333333"
        android:text="@string/reportcenter_print_goods"
        android:layout_marginLeft="10dp" />


</LinearLayout>