<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/barcodeScan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/showBarcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="26dp"
            android:scaleType="fitXY"
            android:src="@drawable/get_bg_loading" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/barcodeSmallScanSuccess"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:src="@drawable/display_barcode_scan_success" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/display_barcode_success"
            android:textColor="#ff34d3b3"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/display_barcode_success_wait"
            android:textColor="#ff999999"
            android:textSize="22sp" />
    </LinearLayout>
</FrameLayout>