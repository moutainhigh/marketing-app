<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f3f6"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    android:paddingLeft="48dp"
    android:paddingRight="48dp">


    <LinearLayout
        android:id="@+id/bottom_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_revert"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="16dp"
            android:layout_weight="2"
            android:background="@drawable/btn_green_selector"
            android:singleLine="true"
            android:text="@string/revert_str"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_22" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="8"
            android:background="@drawable/btn_green_selector"
            android:singleLine="true"
            android:text="@string/save"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_22" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_above="@id/bottom_content"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/income_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/all_income_str"
                android:textColor="#111111"
                android:textSize="@dimen/text_14"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:id="@+id/income_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/close_bill_lin_selector"
                android:layout_marginBottom="28dp"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/expenses_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/all_expenses_str"
                android:textColor="#111111"
                android:textSize="@dimen/text_14" />

            <LinearLayout
                android:id="@+id/expenses_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/close_bill_lin_selector"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/empty_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/customer_empty_icon"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>