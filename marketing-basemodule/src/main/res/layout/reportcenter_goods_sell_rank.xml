<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f3f6"
    android:orientation="vertical"
    android:paddingBottom="24dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="24dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/style_reportcenter_spinner"
            android:background="@drawable/bg_white_cycle">

            <LinearLayout
                android:id="@+id/layout_business_day"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/rb_business_day"
                    style="@style/style_reportcenter_column_hint"
                    android:drawableLeft="@drawable/buffet_dinner_table_checkbutton_selector"
                    android:button="@null"
                    android:drawablePadding="5dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:checked="true"
                    android:text="@string/reportcenter_sell_rank_wd" />
            </LinearLayout>

            <View style="@style/vertical_line" />

            <LinearLayout
                android:id="@+id/layout_nature_day"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/rb_nature_day"
                    style="@style/style_reportcenter_column_hint"
                    android:drawableLeft="@drawable/buffet_dinner_table_checkbutton_selector"
                    android:button="@null"
                    android:drawablePadding="5dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="@string/reportcenter_sell_rank_nd" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            style="@style/style_reportcenter_column_hint"
            android:text="@string/reportcenter_trade_time_title"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/begin_date_tv"
            style="@style/style_reportcenter_spinner_content" />

        <ImageButton
            android:id="@+id/begin_btn"
            style="@style/style_reportcenter_spinner_arrow" />


        <TextView
            style="@style/style_reportcenter_column_hint"
            android:layout_marginLeft="5dp"
            android:text="@string/reportcenter_to" />

        <TextView
            android:id="@+id/end_date_tv"
            style="@style/style_reportcenter_spinner_content" />

        <ImageButton
            android:id="@+id/end_btn"
            style="@style/style_reportcenter_spinner_arrow" />


        <TextView
            style="@style/style_reportcenter_column_hint"
            android:text="@string/reportcenter_cashier_position"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/tv_spinner_cashier_name"
            style="@style/style_reportcenter_spinner_content"
            android:text="@string/reportcenter_cashier_all" />

        <ImageButton
            android:id="@+id/ib_spinner_cashier"
            style="@style/style_reportcenter_spinner_arrow" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            style="@style/style_reportcenter_column_hint"
            android:text="@string/reportcenter_goods_category_title" />

        <TextView
            android:id="@+id/tv_spinner_category_name"
            style="@style/style_reportcenter_spinner_content"
            android:text="@string/reportcenter_category_all" />

        <ImageButton
            android:id="@+id/ib_spinner_category"
            style="@style/style_reportcenter_spinner_arrow" />


        <TextView
            style="@style/style_reportcenter_column_hint"
            android:text="@string/reportcenter_goods_type"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/tv_spinner_type_name"
            style="@style/style_reportcenter_spinner_content"
            android:text="@string/reportcenter_type_all" />

        <ImageButton
            android:id="@+id/ib_spinner_type"
            style="@style/style_reportcenter_spinner_arrow" />


        <TextView
            style="@style/style_reportcenter_column_hint"
            android:text="@string/reportcenter_goods_number"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/tv_spinner_size_name"
            style="@style/style_reportcenter_spinner_content"
            android:text="@string/reportcenter_goods_all" />

        <ImageButton
            android:id="@+id/ib_spinner_size"
            style="@style/style_reportcenter_spinner_arrow" />

        <LinearLayout
            android:id="@+id/layout_query"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:background="@drawable/reportcenter_btn_green_selector"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reportcenter_query"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:background="@drawable/reportcenter_bg_white_corner_graystroke_shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/goods_rank_tv"
                        style="@style/reportcenter_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reportcenter_sale_rank" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/goods_name_tv"
                        style="@style/reportcenter_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@null"
                        android:text="@string/reportcenter_goods_name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/goods_category_tv"
                        style="@style/reportcenter_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@null"
                        android:text="@string/reportcenter_goods_category" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/goods_type_tv"
                        style="@style/reportcenter_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@null"
                        android:text="@string/reportcenter_goods_middle_type" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/goods_number_tv"
                        style="@style/reportcenter_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reportcenter_quantity_sale" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/goods_money_tv"
                        style="@style/reportcenter_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reportcenter_amount_sale" />
                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f3f5" />

        </LinearLayout>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:cacheColorHint="@null"
            android:clickable="true"
            android:divider="@null"
            android:listSelector="@android:color/transparent" />
    </LinearLayout>


    <Button
        android:id="@+id/print_btn"
        style="@style/style_reportcenter_btn_blue"
        android:layout_height="48dp"
        android:text="@string/print"
        android:layout_marginTop="15dp" />

</LinearLayout>