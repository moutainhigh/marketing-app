<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvTitle_HsCommTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hs_bracelet_pay_title"
            android:textColor="#ff7901"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/llLabel_HsCommTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle_HsCommTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLabel_HsCommTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_handset_bracelet" />

            <TextView
                android:id="@+id/tvMoney_HsCommTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_16"
                tools:text="127" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/btnClose_HsCommTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="22dp"
        android:src="@drawable/dinner_close" />
</RelativeLayout>