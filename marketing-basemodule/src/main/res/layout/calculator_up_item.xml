<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="184dp"
    android:layout_height="37.33dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_Denomination"
        android:layout_width="58.67dp"
        android:layout_height="37.33dp"
        android:background="@drawable/calcutor_denomination_bg"
        android:gravity="center"
        android:textColor="@color/customer_text_black"
        android:textSize="@dimen/text_16" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/et_amout"
            android:layout_width="121.33dp"
            android:layout_height="match_parent"
            android:background="@drawable/calcutor_amount_edittext_bg_selector"
            android:gravity="center"
            android:hint="@string/please_input_count"
            android:inputType="number"
            android:maxLength="8"
            android:textColor="@color/kds_dish_finish_color"
            android:textColorHint="@color/card_active_unenable"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_14" />

        <ImageButton
            android:id="@+id/bt_clear_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/et_amout"
            android:layout_centerVertical="true"
            android:layout_marginEnd="6dp"
            android:background="@drawable/calcutor_amount_detele" />

    </RelativeLayout>


</LinearLayout>