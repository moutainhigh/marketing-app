<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="460dp"
    android:layout_height="588dp"
    android:background="@drawable/reportcenter_dialog_background">

    <RelativeLayout
        android:layout_width="460dp"
        android:layout_height="588dp">
        <!--
                android:background="@drawable/common_dialog_background">
        -->
        <ImageView
            android:id="@+id/close_iv"
            android:layout_width="35px"
            android:layout_height="35px"
            android:background="@drawable/dinner_close"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="22px"
            android:layout_marginRight="22px"
            android:paddingBottom="0px"
            android:clickable="true" />

        <TextView
            android:id="@+id/common_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/reportcenter_print_filter"
            android:layout_alignTop="@+id/close_iv"
            android:textColor="#ff7901"
            android:textSize="26sp" />

        <LinearLayout
            android:id="@+id/goods_category_ll"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/common_dialog_title"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/reportcenter_bg_order_center_dialog_radiogroup_all">

            <TextView
                android:id="@+id/category_name_tv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/reportcenter_whole_goods"
                android:textSize="20sp"
                android:textColor="#333333"
                android:paddingLeft="20dp"
                android:gravity="center_vertical" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#FFE6E9ED" />

            <ImageView
                android:id="@+id/arrow_iv"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:src="@drawable/reportcenter_head_icon"
                android:scaleType="centerInside" />
        </LinearLayout>

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:minHeight="340dp"
            android:background="@drawable/reportcenter_bg_order_center_dialog_radiogroup_all"
            android:divider="#FFDFE3E8"
            android:dividerHeight="1px"
            android:listSelector="@android:color/transparent"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_below="@+id/goods_category_ll"
            android:layout_above="@+id/bottom_ll"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="23dp"></ListView>

        <LinearLayout
            android:id="@+id/bottom_ll"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"

            >

            <Button
                android:id="@+id/negative_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/commonmodule_dialog_nagetive"
                android:textColor="@color/text_white"
                android:textSize="21sp"
                android:visibility="gone"></Button>

            <Button
                android:id="@+id/positive_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/commonmodule_dialog_positive"
                android:textColor="@color/text_white"
                android:textSize="24sp"
                android:visibility="visible"></Button>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
