<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54.67dp"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/bg_white"
    android:gravity="center_vertical">

    <CheckBox
        android:id="@+id/cb_select_label_device"
        android:layout_width="29.33dp"
        android:layout_height="29.33dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="14.67dp"
        android:button="@null"
        android:background="@drawable/sale_promotion_choose_purchase_goods_item_selector" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="17dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:text="梅子酒"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_goods_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/tv_goods_name"
            android:text="×1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:layout_below="@+id/tv_goods_name"
            android:text="¥34"
            android:textSize="16sp" />
    </RelativeLayout>


</LinearLayout>