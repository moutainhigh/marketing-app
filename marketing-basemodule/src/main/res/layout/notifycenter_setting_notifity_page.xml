<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F3F6">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            style="@style/settings_rightTitle"
            android:background="@color/settings_blue"
            android:gravity="center"
            android:text="@string/notify_nofity"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/notification_setting_title_bar_size" />

        <ImageView
            android:id="@+id/notifity_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/notifycenter_back_icon"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/notification_setting_content_margin_left" />
    </FrameLayout>

    <ScrollView
        android:id="@+id/notifity_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/notification_setting_content_margin_left"
            android:layout_marginRight="@dimen/notification_setting_content_margin_left">

            <TextView
                style="@style/setting_item_title_text"
                android:layout_marginTop="@dimen/notification_setting_content_margin_top"
                android:text="@string/setting_notify_annotation" />

            <LinearLayout
                android:id="@+id/ll_notify_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/notification_setting_item_margin_top"
                android:background="@drawable/notifycenter_setting_item_bg"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/notification_setting_content_margin_top"></LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/set_notify_module"
        layout="@layout/notifycenter_setting_notify_module"
        android:visibility="visible" />

</LinearLayout>