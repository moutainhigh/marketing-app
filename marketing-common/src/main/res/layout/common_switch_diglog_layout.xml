<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/commonmodule_dialog_common_weight"
        android:layout_height="@dimen/commonmodule_dialog_common_height"
        android:background="@drawable/calmui_dialog_background">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/commonmodule_dialog_common_margin_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/common_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:textSize="24sp"
                tools:text="Title" />


            <TextView
                android:id="@+id/common_dialog_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="@color/commonmodule_text_color_gray"
                android:textSize="@dimen/text_18"
                android:visibility="gone"
                tools:text="Message" />

            <CheckBox
                android:id="@+id/print_checkedCategory_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="6dp"
                android:drawableStart="@drawable/bg_rectangle_check_box_selector"
                android:gravity="center"
                android:textColor="#333333"
                android:visibility="gone"
                android:textSize="@dimen/text_14" />

            <CheckBox
                android:id="@+id/print_checkedType_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="6dp"
                android:drawableStart="@drawable/bg_rectangle_check_box_selector"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="@dimen/text_14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/negative_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/commonmodule_dialog_nagetive"
                android:textColor="@color/text_white"
                android:textSize="21sp"
                android:visibility="gone"></Button>

            <Button
                android:id="@+id/positive_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/commonmodule_dialog_positive"
                android:textColor="@color/text_white"
                android:textSize="21sp"
                android:visibility="gone"></Button>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
