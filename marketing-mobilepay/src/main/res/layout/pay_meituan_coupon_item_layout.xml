<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pay_shape_coupon_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ticket_datalist_ll"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ticket_serialNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="113566380571"
            android:textColor="#333333"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/ticket_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:gravity="center"
            android:text="代金券"
            android:textColor="#333333"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/ticket_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text="1"
            android:textColor="#333333"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/ticket_face_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="34"
            android:textColor="#333333"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/ticket_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="20"
            android:textColor="#333333"
            android:textSize="@dimen/text_16" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingRight="18dp">

            <ImageButton
                android:id="@+id/ticket_button_remove"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="right|center_vertical"
                android:src="@drawable/selector_pay_remove_bainuo_coupon_icon" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/dish_View_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/pay_shape_coupon_dish_bg"
        android:orientation="vertical" />
</LinearLayout>