<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:background="@color/bg_white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ticket_serialNumber"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.2"
        android:gravity="left|center_vertical"
        android:textColor="#333333"
        android:textSize="@dimen/text_18" />

    <TextView
        android:id="@+id/ticket_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:gravity="center"
        android:text="2"
        android:textColor="#333333"
        android:textSize="@dimen/text_18" />

    <TextView
        android:id="@+id/ticket_amount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="@dimen/text_18" />

    <!-- <ImageButton
         android:id="@+id/ticket_button_modify"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="0.5"
         android:background="@android:color/transparent"
         android:src="@drawable/pay_meituancoupon_modify_icon" />-->

    <ImageButton
        android:id="@+id/ticket_button_remove"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/selector_pay_remove_bainuo_coupon_icon" />
</LinearLayout>