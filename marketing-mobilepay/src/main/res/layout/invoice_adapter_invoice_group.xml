<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F0F3F6"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="20dp">

    <ImageView
        android:id="@+id/adapter_invoice_group_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_invoice_delete" />

    <TextView
        android:id="@+id/adapter_invoice_group_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:textColor="#333333"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/adapter_invoice_group_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_invoice_expand_label"
        android:text="@string/check_rule"
        android:textColor="#33ADF6"
        android:textSize="15sp" />

</LinearLayout>