<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="430dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:paddingTop="25dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:text="@string/meituan_dianping_coupon"
            android:textColor="#fa7d29"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_meituan_count_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:textColor="#333333"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/dinner_close" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#F7F8F8"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/minus_coupon_iv"
            android:layout_width="102dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_number_left_selector"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_number_minus" />

        <EditText
            android:id="@+id/coupon_num_tv"
            android:layout_width="158dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_number_center_white"
            android:focusable="false"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="#03A9F4"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/add_coupon_iv"
            android:layout_width="102dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_number_right_selector"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_number_plus" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="@string/coupon_name_title"
            android:textSize="@dimen/text_18" />

        <TextView
            android:id="@+id/meituan_coupon_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="left|center_vertical"
            android:text="@string/meituan_coupon"
            android:textColor="#333333"
            android:textSize="@dimen/text_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="65dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="@string/face_amount_title"
            android:textSize="@dimen/text_18" />

        <TextView
            android:id="@+id/meituan_coupon_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="left|center_vertical"
            android:textColor="#333333"
            android:textSize="@dimen/text_18" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="-1dp"
        android:background="@drawable/common_number_keyboard_bt_selector"
        android:enabled="true"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/pay_ok"
        android:textColor="#FFFFFF"
        android:textSize="26sp" />

</LinearLayout>