<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#BEE1F6" />
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="#2e9bdd" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <solid android:color="#D9F0FE" />
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="#32ADF6" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#D9F0FE" />
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="#32ADF6" />
        </shape>
    </item>


</selector>