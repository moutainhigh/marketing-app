<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="beauty.customer" />

    <style name="beauty.customer.list" />

    <style name="beauty.customer.list.title_button">
        <item name="android:background">@drawable/beauty_customer_title_button_selector</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="beauty.customer.list.item_text_main">
        <item name="android:textColor">@color/beauty_color_333333</item>
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="beauty.customer.list.item_text_second">
        <item name="android:textColor">@color/beauty_color_999999</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="beauty.customer.detail" />

    <style name="beauty.customer.detail.baseinfo" />

    <style name="beauty.customer.detail.baseinfo.info_layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="beauty.customer.detail.baseinfo.info_title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:textColor">@color/beauty_color_666666</item>
    </style>

    <style name="beauty.customer.detail.baseinfo.info_content">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/beauty_color_FFB729</item>
    </style>

    <style name="beauty.customer.detail.cardinfo" />

    <style name="beauty.customer.detail.cardinfo.card_title">
        <item name="android:layout_width">53dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/beauty_customer_cardinfo_card_title_bg</item>
        <item name="android:textColor">@color/beauty_color_999999</item>
    </style>

    <style name="beauty.customer.detail.cardinfo.content">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/beauty_color_333333</item>
    </style>

    <style name="beauty.customer.detail.cardinfo.content_desc">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/beauty_color_999999</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="beauty.customer.detail.cardinfo.project_item_content">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/beauty_color_333333</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="beauty.customer.detail.cardinfo.project_item_header">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/beauty_color_333333</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="beauty.customer.detail.cardinfo.consume_record">
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/beauty_color_333333</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="beauty.customer.detail.cardinfo.consume_record_desc">
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/beauty_color_999999</item>
    </style>

    <style name="beauty.order" />

    <style name="beauty.order.customer" />

    <style name="beauty.order.customer.customer_baseinfo">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/beauty_color_666666</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="beauty.order.membership" />

    <style name="beauty.order.membership.item_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:textColor">@color/beauty_color_white</item>
    </style>

    <style name="beauty.order.membership.item_desc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:textColor">@color/beauty_color_white</item>
    </style>

    <style name="beauty.waiterdialog" />

    <style name="beauty.waiterdialog.btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">17dp</item>
        <item name="android:paddingBottom">17dp</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:textColor">@color/beauty_middle_btn_color_selector</item>
        <item name="android:background">@drawable/beauty_dish_type_item_bg_recharge</item>
    </style>

    <style name="beauty.waiterdialog.h_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/beauty_color_DEDEDE</item>
    </style>
</resources>