<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/beauty_color_505050" />
            <corners android:topRightRadius="5dp" android:bottomRightRadius="5dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/beauty_color_505050" />
            <corners android:topRightRadius="5dp" android:bottomRightRadius="5dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/beauty_color_505050" />
            <corners android:topRightRadius="5dp" android:bottomRightRadius="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/beauty_bg_white" />
            <corners android:topRightRadius="5dp" android:bottomRightRadius="5dp" />
            <stroke android:width="1dp" android:color="@color/beauty_bg_gray" />
        </shape>
    </item>
</selector>  