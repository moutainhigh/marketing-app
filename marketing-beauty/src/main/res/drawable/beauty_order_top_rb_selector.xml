<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/beauty_bg_gray" />
            <corners android:radius="@dimen/beauty_btn_corner_radius" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/beauty_bg_gray" />
            <corners android:radius="@dimen/beauty_btn_corner_radius" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/beauty_main_text_color2" />
            <corners android:radius="@dimen/beauty_btn_corner_radius" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/beauty_main_text_color2" />
            <corners android:radius="@dimen/beauty_btn_corner_radius" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/beauty_main_text_color2" />
            <corners android:radius="@dimen/beauty_btn_corner_radius" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/beauty_bg_white" />
            <corners android:radius="@dimen/beauty_btn_corner_radius" />
        </shape>
    </item>
</selector>