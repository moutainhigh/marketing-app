<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#BCBCBC" />
            <corners android:radius="@dimen/beauty_btn_corner_radius" />
            <stroke android:width="@dimen/beauty_btn_skroke_width" android:color="@color/beauty_color_BCBCBC" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/beauty_bg_white" />
            <stroke android:width="@dimen/beauty_btn_skroke_width" android:color="@color/beauty_color_BCBCBC" />
            <corners android:radius="@dimen/beauty_btn_corner_radius" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/beauty_bg_white" />
            <corners android:radius="@dimen/beauty_btn_corner_radius" />
            <stroke android:width="@dimen/beauty_btn_skroke_width" android:color="@color/beauty_color_BCBCBC" />
        </shape>
    </item>
</selector>