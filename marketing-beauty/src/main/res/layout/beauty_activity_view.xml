<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_dish_right_bottom"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/beauty_middle_content_titlte_style"
        android:text="@string/beauty_program_activity" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"
        android:layout_marginTop="@dimen/beauty_content_title_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/beauty_content_title_margin"
        android:layout_marginLeft="@dimen/beauty_tab_margin"
        android:layout_marginRight="@dimen/beauty_tab_margin"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_program"
            android:layout_width="0dp"
            android:layout_height="@dimen/beauty_middle_tab_title_height"
            android:layout_weight="1"
            android:background="@drawable/beauty_order_tab_left_selector"
            android:gravity="center"
            android:text="@string/beauty_program_activity"
            android:textColor="@color/beauty_tab_text_selector"
            android:textSize="@dimen/beauty_middle_discount_title_size"
            android:layout_marginRight="-0.5dp" />

        <TextView
            android:id="@+id/tv_market_activity"
            android:layout_width="0dp"
            android:layout_height="@dimen/beauty_middle_tab_title_height"
            android:layout_weight="1"
            android:background="@drawable/beauty_order_tab_right_selector"
            android:gravity="center"
            android:text="@string/beauty_market_activity"
            android:textColor="@color/beauty_tab_text_selector"
            android:textSize="@dimen/beauty_middle_discount_title_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"></LinearLayout>

</LinearLayout>