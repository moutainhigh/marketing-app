<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_allot_technician"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/beauty_bg_booking_notechnician_titlebar"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/beauty_text_white"
            android:text="@string/beauty_allot_technical" />

        <TextView
            android:id="@+id/tv_trades_number"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textColor="#6E8DFF"
            android:textSize="@dimen/text_12"
            android:layout_toRightOf="@id/tv_title"
            android:layout_centerVertical="true"
            android:background="@drawable/beauty_bg_white_oral"
            android:text="99" />

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/beauty_text_white"
            android:textSize="@dimen/text_12"
            android:layout_alignParentRight="true"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/beauty_icon_reserver_right_arrow"
            android:text="收起" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_booking_trades"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/beauty_bg_booking_notechnician_trades"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:scrollbars="none" />

</LinearLayout>