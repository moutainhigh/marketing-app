<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <!--<corners android:radius="5dip" />-->

            <gradient
                android:angle="270"
                android:centerColor="#C9C9C9"
                android:centerY="0.75"
                android:endColor="#C9C9C9"
                android:startColor="#C9C9C9" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <!--<corners android:radius="5dip" />-->

                <gradient
                    android:angle="270"
                    android:centerColor="#80C07AB8"
                    android:centerY="0.75"
                    android:endColor="#a0C07AB8"
                    android:startColor="#80C07AB8" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <!--<corners android:radius="5dip" />-->

                <gradient
                    android:angle="270"
                    android:centerColor="#EE5E1F"
                    android:centerY="0.75"
                    android:endColor="#EE5E1F"
                    android:startColor="#EE5E1F" />
            </shape>
        </clip>
    </item>

</layer-list>