<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <solid android:color="#F0F3F6" />
            <stroke android:width="1px" android:color="#DFE4E9" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#A4D6F4" />
            <stroke android:width="1px" android:color="#32ADF6" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#D9F0FE" />
            <stroke android:width="1px" android:color="#32ADF6" />
            <corners android:radius="4dp" />
        </shape>
    </item>

</selector>