<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/beauty_main_text_color" />
            <stroke android:color="@color/beauty_main_text_color" android:width="1dp" />
            <corners android:topRightRadius="5dp" android:topLeftRadius="5dp"></corners>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <solid android:color="@color/beauty_color_d7dddf" />
            <stroke android:color="@color/beauty_color_d7dddf" android:width="1dp" />
            <corners android:topRightRadius="5dp" android:topLeftRadius="5dp"></corners>
        </shape>
    </item>

</selector>