<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@android:color/holo_blue_bright"></stroke>

            <solid android:color="#ffffff" />

            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:drawable="@drawable/edit_gray_bg_focused" android:state_focused="true"></item>
    <item android:drawable="@drawable/edit_gray_bg_default"></item>

</selector>