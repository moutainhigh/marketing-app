<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#c3c8ce" />

            <corners android:bottomLeftRadius="5.0dip" android:bottomRightRadius="5.0dip" android:topLeftRadius="0.0dip" android:topRightRadius="0.0dip" />

            <stroke android:width="0.5dp" android:color="#c3c8ce" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#eeFF8251" />

            <corners android:bottomLeftRadius="5.0dip" android:bottomRightRadius="5.0dip" android:topLeftRadius="0.0dip" android:topRightRadius="0.0dip" />

            <stroke android:width="0.5dp" android:color="#FF8251" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF8251" />

            <corners android:bottomLeftRadius="5.0dip" android:bottomRightRadius="5.0dip" android:topLeftRadius="0.0dip" android:topRightRadius="0.0dip" />

            <stroke android:width="0.5dp" android:color="#FF8251" />
        </shape>
    </item>

</selector>