<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#108fdc" />
            <stroke android:width="1dp" android:color="#0a83cc" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#33adf6" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#eef0f1" />
            <stroke android:width="1dp" android:color="#dadee0" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_D9F0FE" />
            <stroke android:width="1dp" android:color="#24a5f2" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>