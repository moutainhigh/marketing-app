<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ffe6d9" />
            <!-- 边框色 -->
            <stroke android:width="0.5dip" android:color="#ff8251" />
            <!-- 边框圆角 -->
            <corners android:radius="4dp"></corners>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#F0F3F6" />
            <!-- 边框色 -->
            <stroke android:width="0.5dip" android:color="#DFE4E9" />
            <!-- 边框圆角 -->
            <corners android:radius="4dp"></corners>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#ffffff" />
            <!-- 边框色 -->
            <stroke android:width="0.5dip" android:color="#FF8251" />
            <!-- 边框圆角 -->
            <corners android:radius="4dp"></corners>
        </shape>
    </item>
</selector>