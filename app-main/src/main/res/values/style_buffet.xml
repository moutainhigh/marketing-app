<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buffet_horizontal_line">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#E4EAEE</item>
    </style>

    <style name="buffet_trade_property_title">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/color_333333</item>
    </style>

    <style name="buffet_trade_property_hint">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/color_999999</item>
    </style>

    <style name="buffet_trade_property_radiobutton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:button">@drawable/buffet_dinner_table_checkbutton_selector</item>
    </style>

    <style name="buffet_tradelist_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="buffet_tradelist_second_title" parent="buffet_tradelist_title">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/color_999999</item>
    </style>

    <style name="buffet_btn_tradefinish">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:background">@drawable/btn_buffetfinish_selector</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>
</resources>