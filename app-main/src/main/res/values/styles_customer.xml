<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="customer_charging_success_dialog_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/customer_charging_dialog_info</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- 绑卡  会员信息 info -->


    <style name="customer_info_item_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/customer_detail_info_text</item>
        <item name="android:textColor">@color/customer_detail_info_text_color</item>

    </style>

    <style name="customer_info_item_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/customer_detail_info_text</item>
        <item name="android:textColor">@color/customer_detail_info_text_value_color</item>
    </style>

    <style name="customer_info_item_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:src">@drawable/customer_to_right</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>


    <style name="customer_bottom_btn_text">
        <item name="android:textColor">@color/write</item>
        <item name="android:textSize">20dp</item>

    </style>

    <style name="customer_dialog_line">
        <item name="android:layout_height">@dimen/customer_dailog_line_high</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/customer_dialog_edit_bg</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">#bcbcbc</item>
    </style>

    <style name="customer_ordercenter_head">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/color_999999</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="customer_ordercenter_listitem">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/text_15</item>
    </style>

    <style name="customer_ordercenter_detail_listitem">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/color_5F6A70</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="customer_ordercenter_tradecategory_tv">
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:textColor">@color/color_666666</item>
    </style>

    <style name="customer_login_edittext">
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:drawableRight">@drawable/icon_delete</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:textColorHint">@color/color_bcbcbc</item>
        <item name="android:background">@drawable/input_price_edit_selector</item>
    </style>

    <style name="customer_login_dialog_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="customer_login_dialog_btn_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="customer_login_dialog_input_face">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="dinner_customer_memo_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">53dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:textSize">@dimen/text_13</item>
    </style>


</resources>
