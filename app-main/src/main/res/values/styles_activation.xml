<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="activation_tv_head_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dinner_label_printed</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="activation_tv_second_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/second_title_gray</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="activation_tv_property_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/second_title_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:state_single">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="activation_tv_property">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:state_single">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="activation_et_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/customer_edit_bg</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="activation_btn_next_step">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:background">@drawable/btn_green_selector</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="activation_btn_pre_step" parent="@style/activation_btn_next_step">
        <item name="android:textColor">@color/dinner_label_printed</item>
        <item name="android:background">@drawable/selector_btn_bg_pre_step</item>
    </style>


    <style name="tv_activition_lable_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/second_title_gray</item>
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <style name="tv_activition_info_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/dinner_dishname_color</item>
        <item name="android:textSize">@dimen/text_18</item>
    </style>
</resources>