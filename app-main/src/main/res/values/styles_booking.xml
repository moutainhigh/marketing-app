<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="edit_style">
        <item name="android:background">@drawable/booking_detail_bg</item>
        <item name="android:layout_height">@dimen/booking_create_edit_height</item>
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:paddingStart">20dp</item>
    </style>

    <style name="tv_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="title_icon_style">
        <item name="android:background">@drawable/dinner_table_info_button_selector</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>