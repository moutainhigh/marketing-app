<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="inventoryStockTakeEditLabelStyle">
        <item name="android:textSize">13.33sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:layout_width">66.67dp</item>
        <item name="android:layout_height">33.33dp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="inventoryStockTakeEditValueStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">#BCBCBC</item>
        <item name="android:layout_width">161.33dp</item>
        <item name="android:layout_height">33.33dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="inventoryStockTakeItemHeadStyle">
        <item name="android:textSize">14.67sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="inventoryStockTakeItemProductStyle">
        <item name="android:textSize">13.33sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">#BCBCBC</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RetailDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="StockTakeDetailEditLabelStyle">
        <item name="android:textSize">13.33sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="StockTakeDetailEditValueStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">33.33dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/retail_stock_take_edit_value_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
</resources>