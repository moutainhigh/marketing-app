<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="handover_header_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">14.67sp</item>
    </style>

    <style name="handover_item_value_tv" parent="handover_header_tv">
        <item name="android:text">--</item>
        <item name="android:textColor">@color/color_333333</item>
    </style>

    <style name="handover_title_tv">
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="handover_abandon_title_tv" parent="handover_title_tv">
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#BCBCBC</item>
        <item name="android:textSize">14.67sp</item>
    </style>

    <style name="handover_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/shape_handover_layout</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
    </style>

    <style name="handover_edit_view">
        <item name="android:background">@drawable/selector_handover_edit_view</item>
        <item name="android:inputType">none</item>
        <item name="android:textSize">14.67sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">33.33dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_333333</item>
        <!--<item name="android:hint">@string/input_amount</item>-->
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="handover_button">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@drawable/btn_blue_selector</item>
        <item name="android:enabled">true</item>
        <item name="android:textColor">@drawable/handover_but_text_color</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="handover_amount_tv">
        <item name="android:maxWidth">160dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/orderdish_text_black</item>
        <item name="android:textSize">13.33sp</item>
    </style>

    <style name="handover_history_item_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#BCBCBC</item>
        <item name="android:focusable">false</item>
        <item name="android:textSize">14.67dp</item>
    </style>

    <style name="handover_pre_next_btn">
        <item name="android:layout_width">106.67dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#40D0AE</item>
        <item name="android:background">@drawable/btn_blue_pre_next_selector</item>
        <item name="android:scaleType">center</item>
    </style>


</resources>