<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/bg_round_white_large"    android:orientation="vertical">    <TextView        android:layout_width="match_parent"        android:layout_height="64dp"        android:text="@string/dinner_total_page_label"        android:gravity="center"        android:textColor="@color/text_blue"        android:textSize="@dimen/text_24" />    <TextView        android:layout_width="match_parent"        android:layout_height="30dp"        android:text="@string/dinner_click_to_pay_label"        android:gravity="center"        android:textColor="@color/print_font_color"        android:textSize="@dimen/text_16"        android:paddingLeft="2dp"        android:paddingRight="2dp"        android:background="@color/pay_title_lable_bg" />    <ListView        android:id="@+id/dinner_balance_list"        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:cacheColorHint="@null"        android:divider="@null"        android:fadeScrollbars="false"        android:listSelector="@drawable/orderdish_select_dish_item_bg"        android:overScrollMode="never"        android:scrollbarSize="0dp"        android:scrollbars="none"></ListView>    <TextView        android:id="@+id/goods_total_number"        style="@style/goodsTotal"        android:layout_width="match_parent"        android:layout_height="50dp"        android:layout_marginBottom="-2dp"        android:layout_marginLeft="10dp"        android:layout_marginTop="4dp"        android:layout_weight="0"        android:padding="5dp"        android:text="@string/goods_total_quantity"        android:visibility="visible"        android:textColor="@color/goods_total_text_color" />    <View        android:layout_width="match_parent"        android:layout_height="1dp"        android:background="@color/bg_gray" />    <LinearLayout        android:id="@+id/operate_ll"        android:layout_width="match_parent"        android:layout_height="@dimen/dinner_bottom_height2"        android:layout_gravity="bottom"        android:layout_margin="10dp"        android:gravity="center"        android:orientation="horizontal">        <Button            android:id="@+id/btn_select"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="4"            android:background="@drawable/btn_green_selector"            android:text="@string/dinner_do_selection_txt"            android:textColor="@color/text_white"            android:textSize="@dimen/pay_shupcatr_bottom_btn_size" />        <Button            android:id="@+id/btn_ok"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_marginLeft="10dp"            android:layout_weight="2"            android:background="@drawable/btn_blue_selector"            android:text="@string/dinner_fastcash_dialog_ok"            android:textColor="@color/text_white"            android:textSize="@dimen/pay_shupcatr_bottom_btn_size" />    </LinearLayout></LinearLayout>