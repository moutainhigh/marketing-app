<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_dinner_cards_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/setting_template_bg"
    android:orientation="vertical">

    <com.zhongmei.bty.common.view.LabelView
        android:id="@+id/iv_use_mede"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:backgroundColor="#FF8080"
        app:labelTopDistance="15dp"
        app:labelTopPadding="3dp"
        app:labelBottomPadding="6dp"
        app:textContent="@string/using"
        app:textContentSize="@dimen/text_12"
        app:textContentStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mode_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/setting_dinner_card_image_margin_top"
            android:src="@drawable/dinner_mode1_unchecked" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/mode_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/setting_dinner_card_template_size"
                android:text="模板01" />

            <TextView
                android:id="@+id/tv_mode_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/setting_dinner_card_text_margin"
                android:textSize="@dimen/setting_dinner_card_template_content_size"
                android:textColor="#666666"
                android:text="" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>