<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/print_setting_item_height2"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/print_setting_item_content_margin_left">

    <CheckBox
        android:id="@+id/Kitchen_print_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/print_setting_item_drawable_padding"
        android:button="@drawable/setting_content_item_selector"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Kitchen_print_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="@dimen/print_setting_item_size" />

        <TextView
            android:id="@+id/Kitchen_print_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="@dimen/print_setting_item_title_size" />
    </LinearLayout>


    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/Kitchen_warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/print_setting_item_drawable_padding"
        android:text="@string/setting_miss"
        android:textColor="#ff7733"
        android:textSize="@dimen/print_setting_item_size"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/Kitchen_print_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/print_setting_item_content_margin_right"
        android:src="@drawable/print_setting_item_right" />

</LinearLayout>