<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F0F3F6"
    android:baselineAligned="false"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/settings_rightTitle"
        android:background="@color/settings_blue"
        android:gravity="center"
        android:text="@string/queue_manager"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/setting_title_bar_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        style="@style/setting_right_content_margin">

        <GridView
            android:id="@+id/queue_setting_right_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:horizontalSpacing="@dimen/setting_dinner_cards_horizontal_spacing"
            android:verticalSpacing="@dimen/setting_dinner_cards_horizontal_spacing"
            android:numColumns="2"
            android:scrollbars="none" />

        <FrameLayout
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/dinner_order_center_no_data" />
        </FrameLayout>


        <Button
            android:id="@+id/queue_clean_all"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_pay_bottom_btn_height"
            android:layout_marginTop="@dimen/setting_pay_bottom_btn_margin_top"
            android:background="@drawable/setting_queue_btn_selector"
            android:text="@string/queue_clean_all"
            android:textColor="#FF8249"
            android:textSize="@dimen/setting_pay_bottom_btn_size" />
    </LinearLayout>


</LinearLayout>