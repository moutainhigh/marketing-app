<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="130dp"
    android:layout_marginRight="130dp"
    android:background="@color/text_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/order_dish_takeout_back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/takeout_human_info"
            android:textColor="#6B6D6C"
            android:textSize="30sp" />

        <Button
            android:id="@+id/ok"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/handover_button"
            android:text="@string/customer_inspect"
            android:textColor="@drawable/bule_but_text_color"
            android:textSize="21sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#CECECE" />

    <ScrollView
        android:id="@+id/takeout_sw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:paddingLeft="76dp"
        android:paddingRight="76dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/takeout_add_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="@string/customer_mobile_text"
                    android:textColor="#595757"
                    android:textSize="21sp" />

                <com.zhongmei.bty.commonmodule.view.EditTextWithDeleteIcon
                    android:id="@+id/mobile"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/customer_edit_bg"
                    android:digits="0123456789+-"
                    android:drawableRight="@drawable/input_close_pressed"
                    android:gravity="center_vertical"
                    android:inputType="phone"
                    android:maxLength="15"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:textColor="#595757"
                    android:textSize="21sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/name_txt"
                    android:textColor="#595757"
                    android:textSize="21sp" />

                <com.zhongmei.bty.commonmodule.view.EditTextWithDeleteIcon
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/customer_edit_bg"
                    android:drawableRight="@drawable/input_close_pressed"
                    android:gravity="center_vertical"
                    android:maxLength="20"
                    android:paddingLeft="20dp"
                    android:paddingTop="3dp"
                    android:singleLine="true"
                    android:textColor="#595757" />

                <RadioGroup
                    android:id="@+id/customer_edit_sex_rg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/customer_edit_female_bg"
                        android:drawablePadding="5dp"
                        android:gravity="right|center_vertical"
                        android:text="@string/customer_sex_female"
                        android:textColor="@drawable/customer_edit_font_selector"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/customer_edit_male_bg"
                        android:drawablePadding="5dp"
                        android:gravity="right|center_vertical"
                        android:text="@string/customer_sex_male"
                        android:textColor="@drawable/customer_edit_font_selector"
                        android:textSize="18sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/select_takeout_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_address_text"
                    android:textColor="#595757"
                    android:textSize="21sp" />

                <com.zhongmei.bty.snack.orderdish.view.AutoEditTextWithDeleteIcon
                    android:id="@+id/takeout_info_address"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/customer_edit_bg"
                    android:completionThreshold="1"
                    android:drawableRight="@drawable/input_close_pressed"
                    android:dropDownVerticalOffset="3dp"
                    android:gravity="center_vertical"
                    android:maxLength="50"
                    android:paddingLeft="20dp"
                    android:popupBackground="@drawable/address"
                    android:singleLine="true"
                    android:textColor="#595757"
                    android:textSize="21sp" />

                <CheckBox
                    android:id="@+id/usual_address_bt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/button_blue_bg"
                    android:button="@null"
                    android:drawableRight="@drawable/takeout_usual_icon_bg"
                    android:gravity="center"
                    android:paddingRight="5dp"
                    android:text="@string/common_user"
                    android:textColor="@drawable/customer_font_selector"
                    android:textSize="21sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/select_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_address_text"
                    android:textColor="#595757"
                    android:textSize="21sp"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#CECECE" />

                    <GridView
                        android:id="@+id/ususal_address_gv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="25dp"
                        android:descendantFocusability="blocksDescendants"
                        android:horizontalSpacing="16dp"
                        android:numColumns="3"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#CECECE" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_invoice_text"
                    android:textColor="#595757"
                    android:textSize="21sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/no_invoice"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@drawable/takeout_address_gridview_item_bg"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:text="@string/no_invoice"
                            android:textColor="@drawable/customer_font_selector"
                            android:textSize="21sp" />

                        <CheckBox
                            android:id="@+id/personal_invoice"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/takeout_address_gridview_item_bg"
                            android:button="@null"
                            android:checked="false"
                            android:gravity="center"
                            android:text="@string/personal_invoice"
                            android:textColor="@drawable/customer_font_selector"
                            android:textSize="21sp" />
                    </LinearLayout>

                    <com.zhongmei.bty.snack.orderdish.view.AutoEditTextWithDeleteIcon
                        android:id="@+id/company_invoice"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/customer_edit_bg"
                        android:completionThreshold="1"
                        android:drawableRight="@drawable/input_close_pressed"
                        android:dropDownVerticalOffset="6dp"
                        android:gravity="center_vertical"
                        android:hint="@string/company_invoice"
                        android:maxLength="30"
                        android:paddingLeft="20dp"
                        android:popupBackground="@drawable/address"
                        android:singleLine="true"
                        android:textColor="#595757" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/receive_goods"
                        android:textColor="#595757"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:text="@string/order_pay_time"
                        android:textColor="#595757"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/select_time_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/customer_edit_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:textColor="#595757"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:id="@+id/select_time_rl"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_blueborder_bg"
                    android:focusable="true"
                    android:visibility="gone">

                    <com.zhongmei.bty.snack.orderdish.view.InnerListView
                        android:id="@+id/time_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp"
                        android:divider="@null" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>