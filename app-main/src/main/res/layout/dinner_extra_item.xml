<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/bg_extra_charge_pressed"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/dinner_extra_anchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:button="@null"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_dinner_extracharge_selector"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/dinner_extra_anchor"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dinner_extra_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/dinner_extra_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_12" />
    </LinearLayout>


</RelativeLayout>