<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F0F3F6"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/printer_title"
        style="@style/settings_rightTitle"
        android:background="@drawable/cashier_bg_title_bar"
        android:paddingRight="@dimen/print_setting_content_margin_left">

        <RelativeLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/print_setting_content_margin_left"
            android:paddingRight="@dimen/print_setting_content_margin_left">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/print_setting_back_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/iv_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/blue"
            android:text="@string/select_kitchen_printer"
            android:textColor="@color/text_white"
            android:textSize="@dimen/setting_title_bar_size" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="@dimen/print_setting_item_btn_width"
            android:layout_height="@dimen/print_setting_item_btn_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/print_setting_title_btn_selector"
            android:text="@string/common_save"
            android:textColor="@color/write"
            android:textSize="@dimen/print_setting_item_title_size"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        style="@style/print_setting_content_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/select_printer"
            style="@style/print_setting_item_title_style"
            android:text="@string/select_printer" />

        <ListView
            android:id="@+id/list_printer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/print_setting_item_margin_top"
            android:layout_weight="1"
            android:background="@drawable/setting_on_of_item_bg"
            android:divider="@color/gray_line"
            android:dividerHeight="0.5dp" />

        <TextView
            android:id="@+id/select_usb_printer"
            style="@style/print_setting_item_title_style"
            android:layout_marginTop="@dimen/print_setting_item_margin_top"
            android:visibility="gone"
            android:text="@string/setting_printer_list_usb_label_tips" />

        <ListView
            android:id="@+id/list_usb_printer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/print_setting_item_margin_top"
            android:layout_weight="1"
            android:background="@drawable/setting_on_of_item_bg"
            android:visibility="gone"
            android:divider="@color/gray_line"
            android:dividerHeight="0.5dp" />
    </LinearLayout>

</LinearLayout>