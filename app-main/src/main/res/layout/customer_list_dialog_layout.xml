<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout.m.m"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:background="@drawable/calmui_dialog_background">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/commonmodule_dialog_icon_success" />

        <TextView
            android:id="@+id/common_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:text="@string/customer_charging_success"
            android:textSize="26sp" />

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/common_dialog_title"
            android:layout_marginTop="20dp"
            android:paddingLeft="130dp"
            android:divider="@color/transparent"
            android:dividerHeight="12dp"></ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_below="@+id/listview"
            android:orientation="horizontal">

            <!-- <Button
                 android:id="@+id/negative_button"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:background="@drawable/common_dialog_nagetive"
                 android:textColor="@color/text_white"
                 android:textSize="21sp"
                 android:visibility="gone"></Button>-->

            <Button
                android:id="@+id/positive_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_number_keyboard_bt_selector"
                android:padding="5dp"
                android:text="@string/ok"
                android:textColor="@color/text_white"
                android:textSize="21sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
