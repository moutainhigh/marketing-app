<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="370dp"
    android:layout_height="500dp"
    android:background="@drawable/bg_round_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/dialog_estimate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/surplus_estimate_set"
            android:textColor="@color/market_activity_red"
            android:textSize="22sp" />

        <Button
            android:id="@+id/dialog_estimate_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            android:background="@drawable/dinner_close" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/dialog_estimate_label"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_operate_reason_title_height"
            android:background="#FFE6EBEF"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:text="@string/surplus_estimate_label"
            android:textColor="#FFB2B7BC"
            android:textSize="@dimen/dialog_operate_reason_title_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/orderdish_bg_order_center_dialog_radiogroup_all"
            android:divider="@drawable/shape_line"
            android:orientation="vertical"
            android:showDividers="middle">

            <LinearLayout
                android:id="@+id/dialog_estimate_item_putaway_lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <RadioButton
                    android:id="@+id/dialog_estimate_item_putaway_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/orderdish_bg_order_center_dialog_radiogroup_item"
                    android:clickable="false"
                    android:duplicateParentState="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/surplus_putaway"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/dialog_operate_reason_list_item_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/surplus_putaway_desc"
                        android:textColor="#FFB2B7BC"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_estimate_item_estimate_lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <RadioButton
                    android:id="@+id/dialog_estimate_item_estimate_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/orderdish_bg_order_center_dialog_radiogroup_item"
                    android:clickable="false"
                    android:duplicateParentState="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/surplus_estimate"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/dialog_operate_reason_list_item_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/surplus_estimate_desc"
                        android:textColor="#FFB2B7BC"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_estimate_item_value_lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <RadioButton
                    android:id="@+id/dialog_estimate_item_value_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/orderdish_bg_order_center_dialog_radiogroup_item"
                    android:clickable="false"
                    android:duplicateParentState="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/surplus_value"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/dialog_operate_reason_list_item_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="2"
                        android:text="@string/surplus_value_desc"
                        android:textColor="#FFB2B7BC"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/dialog_estimate_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="-1dp"
        android:background="@drawable/common_number_keyboard_bt_selector"
        android:enabled="true"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/pay_ok"
        android:textColor="@color/text_white"
        android:textSize="26sp" />
</LinearLayout>