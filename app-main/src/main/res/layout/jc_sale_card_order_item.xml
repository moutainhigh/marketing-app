<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:id="@+id/tr_content"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/tv_sale_order_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/jc_sale_card_time"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tv_sale_order_card_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/jc_sale_card_num"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tv_sale_order_card_mobile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/jc_sale_card_tel"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tv_sale_order_card_fee"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/jc_sale_card_amount"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tv_sale_order_card_creator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/jc_sale_card_user"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_14" />

    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_below="@id/tr_content"
        android:background="@color/print_line" />

</RelativeLayout>