                    </LinearLayout>
                    <!--系统信息-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/settings_left1"
                            android:text="@string/system_information" />

                        <TextView
                            android:id="@+id/Seting_customerInfo"
                            style="@style/settings_left2"
                            android:tag="@string/system_information"
