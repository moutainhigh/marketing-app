                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/set"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/setting_title_bar_size" />
            </FrameLayout>

            <ScrollView
                android:id="@+id/sv_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--正餐设置-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            style="@style/settings_left1"
                            android:text="@string/dinner_setting" />

                        <TextView
                            android:id="@+id/tv_dinner_layout_option"
                            style="@style/settings_left2"
                            android:tag="@string/dinner_setting"
                            android:text="@string/layout_option" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/print_line" />

                        <TextView
                            android:id="@+id/tv_dinner_western_layout_option"
                            style="@style/settings_left2"
                            android:tag="@string/dinner_setting"
                            android:text="@string/layout_dinner_western_option" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/print_line" />

                        <TextView
                            android:id="@+id/tv_dinner_western_setting"
                            android:tag="@string/dinner_setting"
                            style="@style/settings_left2"
                            android:text="@string/settings_european" />

                        <View
                            android:id="@+id/v_dinner_western_setting"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/print_line" />

                        <TextView
                            android:id="@+id/tv_prepay_setting"
                            style="@style/settings_left2"
                            android:tag="@string/dinner_setting"
                            android:text="@string/prepay_and_kitchen_setting" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/print_line" />

                        <TextView
                            android:id="@+id/tv_dinner_order_dish"
                            style="@style/settings_left2"
                            android:tag="@string/dinner_setting"
                            android:text="@string/setting_dinner_order_dish_title" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/print_line" />

                        <TextView
                            android:id="@+id/tv_dinner_order_accept"
                            style="@style/settings_left2"
                            android:tag="@string/dinner_setting"
                            android:text="@string/order_accept_settings"
                            android:visibility="visible" />

                        <View
                            android:id="@+id/v_dinner_order_accept"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/print_line" />

                        <TextView
                            android:id="@+id/tv_dinner_menu_setting"
                            style="@style/settings_left2"
                            android:tag="@string/dinner_setting"
                            android:text="@string/dinner_menu_settings"
                            android:visibility="visible" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/print_line" />

                        <TextView
                            android:id="@+id/tv_dinner_face_setting"
                            style="@style/settings_left2"
                            android:tag="@string/dinner_setting"
