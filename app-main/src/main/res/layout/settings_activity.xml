                            android:layout_height="0.5dip"
                            android:background="@color/print_line" />

                        <TextView
                            android:id="@+id/Setting_GroupPay"
                            style="@style/settings_left2"
                            android:tag="@string/setting_pay"
                            android:text="@string/setting_group_pay_setting_label" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/print_line" />

                        <TextView
                            android:id="@+id/Setting_MobilePay"
                            style="@style/settings_left2"
                            android:tag="@string/setting_pay"
                            android:text="@string/setting_mobile_pay_setting_label" />

                        <View
