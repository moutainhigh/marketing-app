                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/print_line" />
                    </LinearLayout>
                    <!--排队设置-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            style="@style/settings_left1"
                            android:text="@string/queue_setting" />

                        <TextView
                            android:id="@+id/queue_common_switch"
                            style="@style/settings_left2"
                            android:tag="@string/queue_setting"
                            android:text="@string/common_switch" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/print_line" />

                        <TextView
                            android:id="@+id/queue_manager"
                            style="@style/settings_left2"
                            android:tag="@string/queue_setting"
                            android:text="@string/queue_manager" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/print_line" />

                        <TextView
                            android:id="@+id/voice_manager"
                            style="@style/settings_left2"
                            android:tag="@string/queue_setting"
                            android:text="@string/voice_manager" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/print_line"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/queue_sms_remind"
                            style="@style/settings_left2"
                            android:tag="@string/queue_setting"
                            android:text="@string/queue_sms_remind"
                            android:visibility="gone" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/print_line"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/queue_tv_miracast"
                            style="@style/settings_left2"
                            android:tag="@string/queue_setting"
                            android:text="@string/queue_tv_miracast"
                            android:visibility="visible" />
                    </LinearLayout>
                    <!--预订设置-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            style="@style/settings_left1"
                            android:text="@string/booking_setting" />

                        <TextView
                            android:id="@+id/book_switch"
                            style="@style/settings_left2"
                            android:tag="@string/queue_setting"
                            android:text="@string/common_switch" />
                    </LinearLayout>
                    <!--交接设置   8.1屏蔽，改交服务器处理-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/settings_left1"
                            android:text="@string/setting_handover" />

                        <TextView
                            android:id="@+id/tv_snack_handover_type"
                            style="@style/settings_left2"
                            android:tag="@string/setting_handover"
                            android:text="@string/handover_type_setting"
                            android:visibility="visible" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/print_line" />
                    </LinearLayout>
                    <!--通知-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/settings_left1"
                            android:text="@string/notify_center" />

                        <TextView
                            android:id="@+id/Seting_notifity"
                            style="@style/settings_left2"
                            android:tag="@string/notify_center"
                            android:text="@string/notify_nofity" />
                    </LinearLayout>
                    <!--打印配置-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            style="@style/settings_left1"
                            android:text="@string/print_allocation" />

                        <TextView
                            android:id="@+id/setting_basic"
                            style="@style/settings_left2"
                            android:tag="@string/print_allocation"
                            android:text="@string/print_basic_setting" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/print_line" />

                        <TextView
                            android:id="@+id/Setting_CashierPointManagement"
                            style="@style/settings_left2"
                            android:tag="@string/print_allocation"
                            android:text="@string/cash_point_management" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/print_line" />

                        <TextView
                            android:id="@+id/Setting_KitchenManagement"
                            style="@style/settings_left2"
                            android:tag="@string/print_allocation"
                            android:text="@string/kitchen_management" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/print_line" />


                        <TextView
                            android:id="@+id/Seting_ticketStyle"
                            style="@style/settings_left2"
                            android:tag="@string/print_allocation"
                            android:text="@string/ticket_style" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
