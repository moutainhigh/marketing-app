                    </LinearLayout>
                    <!--外设管理-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/settings_left1"
                            android:text="@string/peripheral_management" />

                        <TextView
                            android:id="@+id/Seting_price_scale"
                            style="@style/settings_left2"
                            android:tag="@string/peripheral_management"
                            android:text="@string/setting_price_scale" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/print_line" />

                        <TextView
                            android:id="@+id/Seting_printer"
                            style="@style/settings_left2"
