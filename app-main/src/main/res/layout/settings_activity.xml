                            style="@style/settings_left2"
                            android:visibility="gone"
                            android:tag="@string/front_silver"
                            android:text="@string/setting_order_display_device" />
                    </LinearLayout>
                    <!--支付设置-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            style="@style/settings_left1"
                            android:text="@string/setting_pay" />

                        <TextView
                            android:id="@+id/Setting_PayModelOrder"
                            style="@style/settings_left2"
                            android:tag="@string/setting_pay"
                            android:text="@string/setting_pay_method_set_label" />

                        <View
