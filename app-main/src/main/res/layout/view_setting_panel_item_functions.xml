<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/setting_dinner_switch_item_title_margin_top">

    <TextView
        style="@style/setting_switch_item_title_text"
        android:text="@string/settings_panel_functions" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/setting_on_of_item_bg"
        android:layout_marginTop="@dimen/setting_dinner_switch_item_margin_top">

        <LinearLayout
            android:id="@+id/view_setting_panel_item_functions_sale"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_dinner_switch_item_height">

            <TextView
                style="@style/setting_switch_item_text"
                android:text="@string/settings_panel_functions_sale" />

            <ToggleButton
                android:id="@+id/view_setting_panel_item_functions_sale_tbtn"
                style="@style/setting_switch_item_toggle" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray" />

        <LinearLayout
            android:id="@+id/view_setting_panel_item_functions_coupon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_dinner_switch_item_height">

            <TextView
                style="@style/setting_switch_item_text"
                android:text="@string/settings_panel_functions_coupon" />

            <ToggleButton
                android:id="@+id/view_setting_panel_item_functions_coupon_tbtn"
                style="@style/setting_switch_item_toggle" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray" />

        <LinearLayout
            android:id="@+id/view_setting_panel_item_functions_extra_charge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_dinner_switch_item_height">

            <TextView
                style="@style/setting_switch_item_text"
                android:text="@string/setting_panel_functions_extra_charge" />

            <ToggleButton
                android:id="@+id/view_setting_panel_item_functions_extra_charge_tbtn"
                style="@style/setting_switch_item_toggle" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray" />

        <LinearLayout
            android:id="@+id/view_setting_panel_item_functions_motto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_dinner_switch_item_height">

            <TextView
                style="@style/setting_switch_item_text"
                android:text="@string/setting_panel_motto" />

            <ToggleButton
                android:id="@+id/view_setting_panel_item_functions_motto_tbtn"
                style="@style/setting_switch_item_toggle" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray" />

        <LinearLayout
            android:id="@+id/view_setting_panel_item_functions_guadan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_dinner_switch_item_height">

            <TextView
                style="@style/setting_switch_item_text"
                android:text="@string/setting_panel_guadan" />

            <ToggleButton
                android:id="@+id/view_setting_panel_item_functions_guadan_tbtn"
                style="@style/setting_switch_item_toggle" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray" />

        <LinearLayout
            android:id="@+id/view_setting_panel_item_functions_sales_promotion"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_dinner_switch_item_height">

            <TextView
                style="@style/setting_switch_item_text"
                android:text="@string/settings_panel_sales_promotion" />

            <ToggleButton
                android:id="@+id/view_setting_panel_item_functions_sales_promotion_tbtn"
                style="@style/setting_switch_item_toggle" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>