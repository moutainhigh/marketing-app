<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="47dp"
    android:background="@color/beauty_bg_white"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="47dp">

        <ImageView
            android:id="@+id/iv_member_header"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/beauty_icon_member_female" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:orientation="vertical"
            android:paddingRight="25dp">

            <TextView
                android:id="@+id/tv_name"
                style="@style/beauty_notify_textview_value"
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/tv_phone"
                style="@style/beauty_notify_textview_hint"
                android:text="13588888888"
                android:textSize="@dimen/text_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_serial_no"
            style="@style/beauty_notify_textview_hint"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_servers"
            style="@style/beauty_notify_textview_hint"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center" />

        <com.zhongmei.bty.commonmodule.view.CurrencyTextView
            android:id="@+id/tv_amount"
            style="@style/beauty_notify_textview_hint"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="28dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_status"
                style="@style/beauty_notify_textview_value"
                android:textColor="#666666"
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/beauty_notify_textview_hint"
                android:text="2018-03-22 10:33"
                android:textSize="@dimen/text_10" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/beauty_btn_main_modify_selectory"
                android:paddingLeft="21dp"
                android:paddingRight="21dp"
                android:textSize="@dimen/text_12"
                android:text="@string/beauty_delete"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_trade_details"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="28dp"
                android:background="@drawable/beauty_btn_main_create_trade_selectory"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:textSize="@dimen/text_12"
                android:text="@string/beauty_trade_details"
                android:textColor="@color/beauty_text_white" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/beauty_horizontal_line"
        android:layout_weight="1" />
</LinearLayout>