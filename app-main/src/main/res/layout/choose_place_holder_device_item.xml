<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_place_holder_device_item"
    android:layout_width="match_parent"
    android:background="@drawable/setting_item_bg_selector"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:minHeight="@dimen/print_setting_item_height"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="@dimen/print_setting_item_size"
        android:layout_marginLeft="@dimen/print_setting_item_content_margin_left" />

    <TextView
        android:id="@+id/tv_name_mark"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="#3F3F3F"
        android:textSize="@dimen/print_setting_item_size"
        android:text="@string/setting_print_local" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/iv_choose_device_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:layout_marginRight="@dimen/print_setting_item_content_margin_right"
        android:gravity="center"
        android:src="@drawable/print_cashbox_select"
        android:visibility="visible" />

</LinearLayout>

