<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/cashier_bg_title_bar"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_closing_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/cashier_main_menu" />

        <TextView
            android:id="@+id/tv_left_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="@string/dinner_closing"
            android:textColor="@color/text_white"
            android:textSize="22sp" />
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="64dp"
        android:background="#108fdc" />

    <TextView
        android:id="@+id/tv_right_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/dinner_closing"
        android:textColor="@color/text_white"
        android:textSize="22sp" />

</LinearLayout>