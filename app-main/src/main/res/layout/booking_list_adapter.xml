<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/booking_list_bg_selected"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/booking_listview_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="30dp"
        android:paddingStart="30dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/booking_list_adapter_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:textColor="@color/color_333333"
                android:textSize="14sp"
                tools:text="@string/booking_order_time" />

            <ImageView
                android:id="@+id/booking_list_item_confirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/booking_list_adapter_order_time"
                android:src="@drawable/booking_list_item_confirmed" />

            <ImageView
                android:id="@+id/booking_is_group_dinner"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginStart="-15dp"
                android:layout_marginTop="0dp"
                android:layout_toLeftOf="@id/booking_list_adapter_order_time"
                android:src="@drawable/booking_item_group_dinner"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/booking_is_import"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginStart="-14dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/booking_list_adapter_order_time"
                android:src="@drawable/booing_is_import"
                android:visibility="visible" />

            <!--没有预订桌台警告提示-->
            <ImageView
                android:id="@+id/booking_warn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@id/booking_list_adapter_order_time"
                android:scaleType="centerInside"
                android:src="@drawable/booking_item_warn" />

        </RelativeLayout>
        <!--顾客-->
        <TextView
            android:id="@+id/booking_list_adapter_customer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            tools:text="@string/booking_customer" />
        <!--电话-->
        <TextView
            android:id="@+id/booking_list_adapter_customer_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            tools:text="@string/booking_phone_number" />


        <TextView
            android:id="@+id/booking_list_adapter_personcount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/booking_list_adapter_order_dishes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            tools:text="@string/booking_is_order_dish" />

        <!--定金-->
        <TextView
            android:id="@+id/tv_booking_deposit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            android:visibility="visible"
            tools:text="@string/booking_reposit" />

        <TextView
            android:id="@+id/booking_list_adapter_table"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:maxEms="4"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="14sp"
            android:visibility="gone" />
        <!--来源-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:id="@+id/booking_list_adapter_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/booking_source"
                android:scaleType="centerInside"
                android:src="@drawable/source_daodian_icon" />
        </LinearLayout>
        <!--状态-->
        <TextView
            android:id="@+id/booking_list_adapter_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            tools:text="@string/booking_status" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#D0D6DC" />

</LinearLayout>