<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RadioGroup
        android:id="@+id/menu_group"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/table"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/slidemenu_item_click"
            android:button="@null"
            android:drawableLeft="@drawable/order_dishes_icon"
            android:drawablePadding="10dip"
            android:gravity="center_vertical"
            android:paddingBottom="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="30dip"
            android:text="@string/dinner_tables"
            android:textColor="@color/text_white"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/ordercenter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/slidemenu_item_click"
            android:button="@null"
            android:drawableLeft="@drawable/order_center_icon"
            android:drawablePadding="10dip"
            android:gravity="center_vertical"
            android:paddingBottom="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="30dip"
            android:text="@string/dinner_order_center"
            android:textColor="@color/text_white"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/shop_management"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/slidemenu_item_click"
            android:button="@null"
            android:drawableLeft="@drawable/ic_shop_management"
            android:drawablePadding="10dip"
            android:gravity="center_vertical"
            android:paddingBottom="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="30dp"
            android:text="@string/shop_management"
            android:textColor="@color/text_white"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/form_center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/slidemenu_item_click"
            android:button="@null"
            android:drawableLeft="@drawable/slidemenu_report_form_icon"
            android:drawablePadding="10dip"
            android:gravity="center_vertical"
            android:paddingBottom="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="30dp"
            android:text="@string/dinner_form_center"
            android:textColor="@color/text_white"
            android:textSize="17sp"
            android:checked="false" />
    </RadioGroup>

    <TextView
        android:id="@+id/dinner_quiet"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/exit_item_click"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dip"
        android:maxLines="1"
        android:text="@string/back_home"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_gray"
        android:layout_above="@id/dinner_quiet" />
</RelativeLayout>