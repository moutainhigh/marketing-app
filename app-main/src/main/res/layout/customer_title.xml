<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/printer_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@drawable/cashier_bg_title_bar"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/iv_title_bar_menu"
            style="@style/title_icon_style"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/queue_menu" />

        <ImageView
            android:id="@+id/iv_queue_notify_center"
            style="@style/title_icon_style"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_title_bar_menu"
            android:scaleType="centerInside"
            android:src="@drawable/notice_icon" />

        <ImageView
            android:id="@+id/tip_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_alignLeft="@id/iv_queue_notify_center"
            android:layout_alignParentBottom="true"
            android:scaleType="centerInside"
            android:src="@drawable/notice_tip"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/view_notify_tip_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_alignStart="@+id/iv_queue_notify_center"
            android:layout_alignTop="@+id/iv_queue_notify_center"
            android:background="@drawable/notice_tips_number_other"
            android:gravity="center"
            android:textColor="@color/text_white"
            android:textSize="@dimen/notification_item_textSize2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/view_notify_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignEnd="@+id/iv_queue_notify_center"
            android:layout_alignTop="@+id/iv_queue_notify_center"
            android:background="@drawable/order_tips_num_bar_other"
            android:gravity="center"
            android:textColor="@color/notifycenter_tips_trade"
            android:textSize="@dimen/notification_item_textSize2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/customer_title_layout"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/blue"
            android:text="@string/customer_customer_info_manage"
            android:textColor="@android:color/white"
            android:textSize="@dimen/customer_toolbar_text_size" />


        <RadioGroup
            android:id="@+id/customer_ordercenter_titletab_rg"
            android:layout_width="480dp"
            android:layout_height="@dimen/customer_title_items_height"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:visibility="visible">

            <RadioButton
                android:id="@+id/card_sell_rb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/customer_ordercenter_titletab_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/customer_card_sale"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_15" />

            <RadioButton
                android:id="@+id/member_store_value_rb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/customer_ordercenter_titletab_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/customer_member_storevalue"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_15" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#D4EFFF" />

            <RadioButton
                android:id="@+id/card_store_value_rb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/customer_ordercenter_titletab_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/card_storevalue"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_15" />

            <RadioButton
                android:id="@+id/entity_card_change_rb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/customer_ordercenter_titletab_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/customer_entity_card_change"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_15" />
        </RadioGroup>

        <!-- v8.2 金城充值记录 -->
        <TableRow
            android:id="@+id/tr_jc_orders"
            android:layout_width="240dp"
            android:layout_height="38dp"
            android:padding="0.5dp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_jc_entity_card_order_record">

            <CheckedTextView
                android:id="@+id/ctv_jc_sale_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_jc_entity_card_order_record_left"
                android:checked="true"
                android:gravity="center"
                android:text="@string/order_card_sale_record"
                android:textColor="@color/text_jc_entity_card_order_record"
                android:textSize="@dimen/text_15" />

            <CheckedTextView
                android:id="@+id/ctv_jc_charge_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_jc_entity_card_order_record_right"
                android:checked="false"
                android:gravity="center"
                android:text="@string/order_card_charge_record"
                android:textColor="@color/text_jc_entity_card_order_record"
                android:textSize="@dimen/text_15" />

        </TableRow>

        <!-- v7.15 换卡 -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/ivCreate_Customer"
                style="@style/title_icon_style"
                android:scaleType="centerInside"
                android:src="@drawable/customer_create_title" />

            <Button
                android:id="@+id/btn_entity_card_change"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:paddingLeft="6dp"
                android:background="@drawable/selector_entity_card_change"
                android:drawableLeft="@drawable/entity_card_change"
                android:gravity="center"
                android:text="@string/entity_card_change"
                android:textColor="@color/customer_charging_pay_cash_off"
                android:textSize="@dimen/text_15"
                android:visibility="gone" />

        </TableRow>

    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@drawable/line" />

    <RelativeLayout
        android:id="@+id/titleRightView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/customer_title_right"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/blue"
            android:text="@string/customer_detail_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/customer_toolbar_text_size" />

        <ImageView
            android:id="@+id/customer_edit"
            style="@style/title_icon_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/customer_edit1"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>