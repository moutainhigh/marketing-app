<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/dinnerdish_bg"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/group_statusbar_height"
        android:background="@color/group_statusbar_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/group_title_height"
        android:background="@color/group_title_bg">

        <ImageButton
            android:id="@+id/menu_back"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/dinner_table_info_button_selector"
            android:src="@drawable/dinner_back" />

        <TextView
            style="@style/tv_title_style"
            android:layout_centerInParent="true"
            android:text="@string/group_manager_menu_title"
            android:textSize="@dimen/group_toolbar_title_size" />

        <TextView
            android:id="@+id/menu_delete"
            style="@style/tv_title_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:text="@string/group_menu_delete"
            android:textColor="@color/dinner_table_info_button_selector"
            android:textSize="@dimen/text_18" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/trade_orderdish_bg"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <com.zhongmei.yunfu.ui.view.SearchView
                android:id="@+id/edit_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/search_edit_bg"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:textSize="@dimen/text_20"
                app:textHint="@string/group_search_hint"
                app:gravity="center" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@drawable/search_btn_bg"
                android:gravity="center"
                android:text="@string/search"
                android:textColor="#B3BCC7"
                android:textSize="@dimen/text_20"
                android:layout_marginLeft="-1dp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/group_empty_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/customer_empty_icon"
                android:layout_gravity="center"
                android:visibility="gone" />

            <com.aspsine.swipetoloadlayout.SwipeToLoadLayout
                android:id="@+id/swipeToLoadLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:swipe_style="classic">

                <include
                    android:id="@id/swipe_refresh_header"
                    layout="@layout/layout_customer_header" />

                <android.support.v7.widget.RecyclerView
                    android:id="@id/swipe_target"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false" />

                <include
                    android:id="@id/swipe_load_more_footer"
                    layout="@layout/layout_customer_footer" />
            </com.aspsine.swipetoloadlayout.SwipeToLoadLayout>
        </FrameLayout>

        <com.zhongmei.bty.booking.ui.DrawableCenterTextView
            android:id="@+id/group_btn_operate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_group_order_btn"
            android:drawableLeft="@drawable/group_btn_add"
            android:gravity="center_vertical"
            android:text="@string/group_menu_create"
            android:textColor="@color/customer_charging_pay_cash_off"
            android:textSize="@dimen/text_20"></com.zhongmei.bty.booking.ui.DrawableCenterTextView>
    </LinearLayout>
</LinearLayout>
