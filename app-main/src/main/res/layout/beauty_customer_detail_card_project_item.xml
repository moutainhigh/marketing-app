<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_card_project_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_card_project_item_name"
                style="@style/beauty.customer.detail.cardinfo.project_item_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                tools:text="脸部护理" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_card_project_item_remain_count"
                    style="@style/beauty.customer.detail.cardinfo.project_item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/beauty_customer_detail_card_project_item_remain_count" />

                <TextView
                    android:id="@+id/tv_card_project_item_total_count"
                    style="@style/beauty.customer.detail.cardinfo.project_item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_card_project_item_remain_count"
                    android:textColor="@color/beauty_color_999999"
                    tools:text="@string/beauty_customer_detail_card_project_item_total_count" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/vw_card_project_item_divide_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/beauty_color_D9D9D9" />
    </LinearLayout>

</FrameLayout>