<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="373dp"
        android:layout_height="453dp"
        android:background="@drawable/bg_face_grade_dialog">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/bg_face_grade_decorate" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFaceTypeAndDescribe_FaceGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/text_28"
                tools:text="圆脸\n甜美型" />

            <TextView
                android:id="@+id/tvFaceStore_FaceGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="43dp"
                android:layout_marginTop="33dp"
                android:textColor="@color/coloc_FF9F00"
                android:textSize="@dimen/text_80"
                tools:text="@string/customer_face_grade_store" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/customer_face_grade_desc"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/text_20" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>