<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="468dp"
    android:layout_gravity="center"
    android:background="@drawable/trade_orderdish_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/pay_ok_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/close_btn"></ImageView>

        <TextView
            android:id="@+id/pay_ok_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/pay_result_text"
            android:textColor="#9FA0A0"
            android:textSize="26sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <!--
         <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="@color/line_gray" />
    -->

    <ImageView
        android:id="@+id/pay_ok_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/pay_ok_icon" />

    <TextView
        android:id="@+id/pay_ok_alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        android:text="@string/pay_success"
        android:textColor="#555555"
        android:textSize="34sp" />

    <LinearLayout
        android:id="@+id/pay_over_change_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/pay_over_change_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="24sp" />
    </LinearLayout>

    <Button
        android:id="@+id/pay_over_ok_button"
        android:layout_width="512dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:background="@drawable/customer_login_btn_bg"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/pay_good"
        android:textColor="@color/text_white"
        android:textSize="26sp"
        android:visibility="invisible" />

</LinearLayout>