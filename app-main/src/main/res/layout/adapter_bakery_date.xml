    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="0dp">

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/line_gray" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_monday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_date_monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/tv_week_monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/monday_image_tv"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/booking_date_prompt"
            android:visibility="gone" />

        <TextView
            android:id="@+id/monday_today_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:text="今"
            android:textSize="10.67sp"
            android:textColor="@color/remind_dish_red"
            android:visibility="visible" />

        <TextView
            android:id="@+id/monday_selected_tv"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/text_blue"
            android:visibility="invisible" />
    </RelativeLayout>

