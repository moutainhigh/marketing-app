<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:minHeight="53dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_source"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:textSize="15sp"
        android:textColor="@color/color_999999"
        android:gravity="center"
        android:text="@string/customer_credit_deal_no" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:textSize="15sp"
        android:textColor="@color/color_999999"
        android:gravity="center"
        android:text="@string/customer_credit_deal_time" />

    <TextView
        android:id="@+id/tv_deal_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:textSize="15sp"
        android:textColor="@color/color_999999"
        android:gravity="center"
        android:text="@string/customer_credit_deal_type" />

    <TextView
        android:id="@+id/tv_deal_op"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:textSize="15sp"
        android:textColor="@color/color_999999"
        android:gravity="center"
        android:text="@string/customer_credit_deal_op" />

    <TextView
        android:id="@+id/tv_deal_money"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:textSize="15sp"
        android:textColor="@color/color_999999"
        android:gravity="center"
        android:text="@string/customer_credit_deal_money" />

    <TextView
        android:id="@+id/tv_deal_reason"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:textSize="15sp"
        android:textColor="@color/color_999999"
        android:gravity="center"
        android:text="@string/customer_credit_deal_real" />

    <TextView
        android:id="@+id/tv_used_value"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:textSize="15sp"
        android:textColor="@color/color_999999"
        android:gravity="center"
        android:text="@string/customer_credit_used_value" />

    <TextView
        android:id="@+id/tv_pay_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:textSize="15sp"
        android:textColor="@color/color_999999"
        android:gravity="center"
        android:text="@string/customer_credit_deal_pay_type" />

</LinearLayout>