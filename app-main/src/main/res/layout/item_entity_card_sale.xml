<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@color/bg_white"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_choose_all"
        android:layout_width="88dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:checked="false"
        android:contentDescription="@string/app_name"
        android:src="@drawable/card_item_check_selector" />

    <TextView
        android:id="@+id/tv_item_num"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_16" />

    <TextView
        android:id="@+id/tv_item_card_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_16" />

    <TextView
        android:id="@+id/tv_item_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_16" />

    <TextView
        android:id="@+id/tv_item_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_16" />

    <TextView
        android:id="@+id/tv_entity_card_fee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_16" />

    <ImageView
        android:id="@+id/tv_item_delete"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:padding="6dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/customer_card_item_delete_off" />

</LinearLayout>
