<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_dish_right_bottom"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="26dp"
    android:paddingRight="26dp">

    <TextView
        style="@style/beauty_middle_content_titlte_style"
        android:text="@string/remark_str" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/beauty_content_title_margin"
        android:gravity="center"
        android:layout_marginLeft="@dimen/beauty_tab_margin"
        android:layout_marginRight="@dimen/beauty_tab_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_remark"
            android:layout_width="0dp"
            android:layout_height="@dimen/beauty_middle_tab_title_height"
            android:layout_weight="1"
            android:background="@drawable/beauty_order_tab_left_selector"
            android:gravity="center"
            android:text="@string/orderAllRemark"
            android:textColor="@color/beauty_tab_text_selector"
            android:textSize="@dimen/beauty_middle_discount_title_size"
            android:layout_marginRight="-0.5dp" />

        <TextView
            android:id="@+id/tv_single_remark"
            android:layout_width="0dp"
            android:layout_height="@dimen/beauty_middle_tab_title_height"
            android:layout_weight="1"
            android:background="@drawable/beauty_order_tab_right_selector"
            android:gravity="center"
            android:text="@string/orderSingleRemark"
            android:textColor="@color/beauty_tab_text_selector"
            android:textSize="@dimen/beauty_middle_discount_title_size" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_remark"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_round_rectangle"
        android:hint="@string/inputRemarkInfo"
        android:padding="14dp"
        android:maxLength="50"
        android:gravity="left|top"
        android:textColorHint="@color/text_hint_color"
        android:textColor="@color/print_text_black"
        android:textSize="16sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/extra_order_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:layout_marginRight="-5dp"
        android:layout_marginTop="7dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_marginBottom="60dp" />
</LinearLayout>