<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1.33dp"
            android:background="#DBE1E5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/one"
                android:layout_width="140dp"
                android:layout_height="66.67dp"
                android:background="@drawable/bg_number_selector"
                android:gravity="center"
                android:text="1"
                android:textColor="#333F4F"
                android:textSize="26.67sp" />

            <TextView
                android:id="@+id/two"
                android:layout_width="140dp"
                android:layout_height="66.67dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_number_selector"
                android:gravity="center"
                android:text="2"
                android:textColor="#333F4F"
                android:textSize="26.67sp" />

            <TextView
                android:id="@+id/three"
                android:layout_width="140dp"
                android:layout_height="66.67dp"
                android:background="@drawable/bg_number_selector"
                android:contentDescription="@null"
                android:gravity="center"
                android:text="3"
                android:textColor="#333F4F"
                android:textSize="26.67sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/four"
                android:layout_width="140dp"
                android:layout_height="66.67dp"
                android:background="@drawable/bg_number_selector"
                android:contentDescription="@null"
                android:gravity="center"
                android:text="4"
                android:textColor="#333F4F"
                android:textSize="26.67sp" />

            <TextView
                android:id="@+id/five"
                android:layout_width="140dp"
                android:layout_height="66.67dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_number_selector"
                android:gravity="center"
                android:text="5"
                android:textColor="#333F4F"
                android:textSize="26.67sp" />

            <TextView
                android:id="@+id/six"
                android:layout_width="140dp"
                android:layout_height="66.67dp"
                android:background="@drawable/bg_number_selector"
                android:gravity="center"
                android:text="6"
                android:textColor="#333F4F"
                android:textSize="26.67sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seven"
                android:layout_width="140dp"
                android:layout_height="66.67dp"
                android:background="@drawable/bg_number_selector"
                android:gravity="center"
                android:text="7"
                android:textColor="#333F4F"
                android:textSize="26.67sp" />

            <TextView
                android:id="@+id/eight"
                android:layout_width="140dp"
                android:layout_height="66.67dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_number_selector"
                android:gravity="center"
                android:text="8"
                android:textColor="#333F4F"
                android:textSize="26.67sp" />

            <TextView
                android:id="@+id/nine"
                android:layout_width="140dp"
                android:layout_height="66.67dp"
                android:background="@drawable/bg_number_selector"
                android:gravity="center"
                android:text="9"
                android:textColor="#333F4F"
                android:textSize="26.67sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dot"
                android:layout_width="140dp"
                android:layout_height="66.67dp"
                android:background="@drawable/bg_number_selector"
                android:gravity="center"
                android:text="Â·"
                android:textColor="#333F4F"
                android:textSize="26.67sp" />

            <TextView
                android:id="@+id/zero"
                android:layout_width="140dp"
                android:layout_height="66.67dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_number_selector"
                android:gravity="center"
                android:text="0"
                android:textColor="#333F4F"
                android:textSize="26.67sp" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="140dp"
                android:layout_height="66.67dp"
                android:background="@drawable/bg_number_selector"
                android:scaleType="centerInside"
                android:src="@drawable/icon_number_key2_delete" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:src="@drawable/ic_property_close" />
</RelativeLayout>