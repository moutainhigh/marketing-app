<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_blue_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/print_setting_item_height"
        android:background="@drawable/list_item_blue_bg"
        android:descendantFocusability="blocksDescendants"
        android:visibility="visible"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cb_select"
            android:button="@drawable/setting_content_item_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/print_setting_item_content_margin_left"
            android:checked="false" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/print_setting_item_drawable_padding"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/cb_select"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/print_text_black"
                android:textSize="@dimen/print_setting_item_size"
                android:text="测试数据" />

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/print_text_black"
                android:textSize="@dimen/print_setting_item_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_minus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:paddingRight="@dimen/print_setting_item_content_margin_right"
                android:paddingLeft="@dimen/print_setting_item_content_margin_right"
                android:src="@drawable/print_setting_button_minus_bg" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/print_setting_item_size" />

            <ImageView
                android:id="@+id/iv_plus"
                android:layout_width="wrap_content"
                android:scaleType="center"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/print_setting_item_content_margin_right"
                android:paddingLeft="@dimen/print_setting_item_content_margin_right"
                android:src="@drawable/print_setting_button_plus_bg" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line"
        android:layout_marginLeft="@dimen/print_setting_item_content_margin_left"
        android:layout_marginRight="@dimen/print_setting_item_content_margin_right" />

    <LinearLayout
        android:id="@+id/ll_outlet_ticket_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/setting_queue_memager_card_title_height"
        android:paddingBottom="@dimen/setting_dinner_switch_item_margin_top">

        <RelativeLayout
            android:id="@+id/outlet_ticket_print_way"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/tangkou_print_type"
                style="@style/print_setting_item_title_style"
                android:text="@string/choose_hall_print_way"
                android:layout_marginTop="@dimen/setting_dinner_switch_item_margin_top" />

            <LinearLayout
                android:id="@+id/one_paper_many_dish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/setting_dinner_switch_item_text_margin_left"
                android:layout_alignParentStart="true"
                android:layout_marginTop="6dp"
                android:layout_below="@id/tangkou_print_type">

                <CheckBox
                    android:id="@+id/cb_select_more_dish_per_paper"
                    android:button="@drawable/setting_content_item_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/setting_dinner_switch_items_drawable_padding"
                    android:contentDescription="@null"
                    android:gravity="center_vertical"
                    android:text="@string/one_paper_more_dish"
                    android:textColor="#333333"
                    android:textSize="@dimen/setting_dinner_switch_item_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/multi_dish_per_paper_des"
                    android:textColor="@color/print_text_gray"
                    android:textSize="@dimen/setting_dinner_switch_item_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/setting_dinner_switch_item_text_margin_left"
                android:layout_alignParentStart="true"
                android:layout_marginTop="6dp"
                android:layout_below="@id/one_paper_many_dish">

                <CheckBox
                    android:id="@+id/cb_select_one_dish_per_paper"
                    android:button="@drawable/setting_content_item_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/setting_dinner_switch_items_drawable_padding"
                    android:contentDescription="@null"
                    android:gravity="center_vertical"
                    android:text="@string/one_paper_one_dish"
                    android:textColor="#333333"
                    android:textSize="@dimen/setting_dinner_switch_item_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/one_dish_per_paper_des"
                    android:textColor="@color/print_text_gray"
                    android:textSize="@dimen/setting_dinner_switch_item_size" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_one_dish_per_paper_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_print_type_different_tips"
                style="@style/print_setting_item_title_style"
                android:text="@string/choose_tangkou_one_paper_combo_single"
                android:layout_marginTop="@dimen/setting_dinner_switch_item_margin_top" />

            <RadioGroup
                android:id="@+id/rg_one_dish_per_paper_print_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/setting_dinner_switch_item_text_margin_left"
                android:layout_gravity="start"
                android:orientation="vertical"
                android:visibility="visible">

                <RadioButton
                    android:id="@+id/rb_print_type_diffrent_papper"
                    android:button="@drawable/setting_content_item_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_marginTop="6dp"
                    android:paddingLeft="@dimen/setting_dinner_switch_items_drawable_padding"
                    android:gravity="center_vertical"
                    android:text="@string/print_type_diffrent_papper"
                    android:textColor="#333333"
                    android:textSize="@dimen/setting_dinner_switch_item_size" />

                <RadioButton
                    android:id="@+id/rb_print_type_one_papper"
                    android:button="@drawable/setting_content_item_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:paddingLeft="@dimen/setting_dinner_switch_items_drawable_padding"
                    android:gravity="center_vertical"
                    android:text="@string/print_type_one_papper"
                    android:textColor="#333333"
                    android:textSize="@dimen/setting_dinner_switch_item_size" />
            </RadioGroup>

            <TextView
                style="@style/print_setting_item_title_style"
                android:text="@string/same_category_goods_combine"
                android:layout_marginTop="@dimen/setting_dinner_switch_item_margin_top" />

            <RadioGroup
                android:id="@+id/rg_one_dish_per_paper_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/setting_dinner_switch_item_text_margin_left"
                android:layout_gravity="start"
                android:orientation="vertical"
                android:visibility="visible">

                <RadioButton
                    android:id="@+id/rb_select_one_dish_combine"
                    android:button="@drawable/setting_content_item_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_marginTop="6dp"
                    android:paddingLeft="@dimen/setting_dinner_switch_items_drawable_padding"
                    android:gravity="center_vertical"
                    android:text="@string/cb_select_one_dish_combine"
                    android:textColor="#333333"
                    android:textSize="@dimen/setting_dinner_switch_item_size" />

                <RadioButton
                    android:id="@+id/rb_select_one_dish_split"
                    android:button="@drawable/setting_content_item_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/setting_dinner_switch_items_drawable_padding"
                    android:text="@string/cb_select_one_dish_split"
                    android:layout_marginTop="6dp"
                    android:textColor="#333333"
                    android:textSize="@dimen/setting_dinner_switch_item_size" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_combo_show_way"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/setting_dinner_switch_item_margin_top">

            <TextView
                android:id="@+id/tv_choose_combo_show_way"
                style="@style/print_setting_item_title_style"
                android:text="@string/choose_combo_show_way" />

            <LinearLayout
                android:id="@+id/ll_combo_mix_show_way"
                android:layout_marginStart="@dimen/setting_dinner_switch_item_text_margin_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <CheckBox
                    android:id="@+id/cb_combo_mix_show_way"
                    android:button="@drawable/setting_content_item_selector"
                    android:paddingLeft="@dimen/setting_dinner_switch_item_margin_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:gravity="center_vertical"
                    android:textColor="#333333"
                    android:textSize="@dimen/setting_dinner_switch_item_size"
                    android:text="@string/combo_split_show_way" />

                <TextView
                    android:id="@+id/tv_combo_mix_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/setting_dinner_switch_items_drawable_padding"
                    android:text="@string/print_kitchen_config_pic_preview"
                    android:textColor="@drawable/combo_show_preview_selector"
                    android:textSize="@dimen/setting_dinner_switch_item_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_combo_split_show_way"
                android:layout_marginStart="@dimen/setting_dinner_switch_item_text_margin_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <CheckBox
                    android:id="@+id/cb_combo_split_show_way"
                    android:button="@drawable/setting_content_item_selector"
                    android:paddingLeft="@dimen/setting_dinner_switch_item_margin_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:gravity="center_vertical"
                    android:textColor="#333333"
                    android:textSize="@dimen/setting_dinner_switch_item_size"
                    android:text="@string/combo_mix_show_way" />

                <TextView
                    android:id="@+id/tv_combo_split_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/setting_dinner_switch_items_drawable_padding"
                    android:text="@string/print_kitchen_config_pic_preview"
                    android:textColor="@drawable/combo_show_preview_selector"
                    android:textSize="@dimen/setting_dinner_switch_item_size" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>