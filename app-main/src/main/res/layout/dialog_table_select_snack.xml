<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:fitsSystemWindows="true"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="373dp"
        android:layout_height="453dp"
        android:background="@drawable/customer_charging_bg">


        <TextView
            android:id="@+id/foo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="@string/please_select_table"
            android:textColor="#FF7901"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/take_dish_time"
            android:textSize="12dp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foo_title"
            android:layout_centerHorizontal="true"
            android:text="@string/snack_take_dish_time" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="17dp"
            android:src="@drawable/close_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/iv_back">

            <LinearLayout
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <Button
                        android:id="@+id/left_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/icon_left_arrow" />

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewPager_dish_number_area"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scrollbars="none"></android.support.v4.view.ViewPager>

                    <Button
                        android:id="@+id/right_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/icon_right_arrow" />
                </LinearLayout>

                <View
                    android:id="@+id/type_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#efefef" />

                <GridView
                    android:id="@+id/gridView_table"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:horizontalSpacing="12dp"
                    android:listSelector="@color/transparent"
                    android:numColumns="3"
                    android:scrollbarFadeDuration="500"
                    android:verticalSpacing="12dp"></GridView>

                <include layout="@layout/confirm_layout" />
            </LinearLayout>

            <ImageView
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/table_loading"
                android:visibility="visible" />

            <TextView
                android:id="@+id/empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:text="@string/order_dish_no_tables"
                android:textColor="#aebbc4"
                android:textSize="@dimen/text_24"
                android:visibility="gone" />
        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>