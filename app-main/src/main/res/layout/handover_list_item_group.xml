<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_main_account"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <TextView
        android:id="@+id/handover_list_item_orderamount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:gravity="end"
        android:text="@string/print_order_amount"
        android:textColor="#5e605f"
        android:textSize="16sp"></TextView>

    <TextView
        android:id="@+id/handover_list_item_valuecardamount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:gravity="end"
        android:text="@string/print_valued_amount"
        android:textColor="#5e605f"
        android:textSize="16sp"></TextView>

    <TextView
        android:id="@+id/handover_list_item_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:textColor="#5e605f"
        android:textSize="16sp"></TextView>

    <RadioGroup
        android:id="@+id/handover_radio_group"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <RadioButton
            android:id="@+id/handover_radio_ok"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/handover_btn_ok"
            android:button="@null" />

        <RadioButton
            android:id="@+id/handover_radio_cancel"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/handover_btn_cancel"
            android:button="@null" />

        <EditText
            android:id="@+id/handover_list_item_amount_actual_edit"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/handover_input_shape"
            android:gravity="center"
            android:hint="@string/handover_actual_amount"
            android:inputType="numberDecimal"
            android:maxLength="7"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp" />
    </RadioGroup>

</LinearLayout>