<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout.m.m"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:background="@drawable/calmui_dialog_background">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dialog_common_margin_top" />

        <TextView
            android:id="@+id/common_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/icon"
            android:textColor="@color/text_black"
            android:textSize="24sp" />

        <ListView
            android:listSelector="@android:color/transparent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:divider="@color/transparent"
            android:dividerHeight="12dp"
            android:layout_below="@+id/common_dialog_title"></ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_below="@+id/listview"
            android:orientation="horizontal">

            <Button
                android:id="@+id/negative_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/commonmodule_dialog_nagetive"
                android:textColor="@color/text_white"
                android:textSize="21sp"
                android:visibility="gone"></Button>

            <Button
                android:id="@+id/positive_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/commonmodule_dialog_positive"
                android:textColor="@color/text_white"
                android:textSize="21sp"
                android:visibility="gone"></Button>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
