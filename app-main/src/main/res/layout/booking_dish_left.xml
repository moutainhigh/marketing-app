<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/order_dish_bottom"
        style="@style/layout.m.w"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dinner_bottom_height"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/cashView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/rl_save_print"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_green_selector"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/ok"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_22" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/view_bottom_shadow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/transparent_but"
                android:clickable="true"
                android:visibility="gone" />


        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/showMenuView"
        style="@style/layout.m.m"
        android:layout_width="match_parent"
        android:layout_above="@id/order_dish_bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/order_button_panel_first"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@color/title_blue"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/saveback"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/title_icon_selector"
                android:contentDescription="@null"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/dinner_back" />

            <TextView
                android:id="@+id/menu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/saveback"
                android:ellipsize="end"
                android:maxLength="8"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_26" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/menu_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dish_preview_icon"
                    android:textColor="@color/text_white" />

                <ImageButton
                    android:id="@+id/btn_operate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/title_icon_selector"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:visibility="gone"
                    android:src="@drawable/more_menuitem_btn" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/dinner_blue_line_color" />

        <RelativeLayout
            android:id="@+id/menu_info"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/title_blue">

            <TextView
                android:id="@+id/menu_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:singleLine="true"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/menu_price_diff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/menu_price"
                android:singleLine="true"
                android:textColor="@color/group_shell_diff_color"
                android:textSize="@dimen/text_14" />

            <ImageView
                android:id="@+id/modify_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/title_icon_selector"
                android:contentDescription="@null"
                android:padding="10dp"
                android:visibility="invisible"
                android:src="@drawable/btn_next_selector" />

            <TextView
                android:id="@+id/desk_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/menu_price"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/modify_info"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_16" />
        </RelativeLayout>

        <View
            android:id="@+id/sepline"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/dinner_blue_line_color" />


        <FrameLayout
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="pager" />
    </LinearLayout>

</RelativeLayout>