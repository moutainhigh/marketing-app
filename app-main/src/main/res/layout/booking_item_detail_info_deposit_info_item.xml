<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/booking_detail_info_deposit_item"
    android:layout_width="match_parent"
    android:layout_height="28dp"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical"
    android:minHeight="28dp"
    android:orientation="horizontal"
    android:visibility="visible">

    <TextView
        android:id="@+id/tv_pay_mode_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:textColor="@color/color_5F6A70"
        android:textSize="14sp"
        tools:text="现金" />

    <com.zhongmei.bty.commonmodule.view.CurrencyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:text="{HBF}"
        android:textColor="@color/color_5F6A70"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_pay_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_5F6A70"
        android:textSize="14sp"
        tools:text="100.00" />

    <TextView
        android:id="@+id/tv_pay_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_weight="1"
        android:textColor="@color/color_5F6A70"
        android:textSize="14sp"
        tools:text="(未支付)" />

    <Button
        android:id="@+id/bt_collect_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_btn_bg"
        android:minWidth="80dp"
        android:padding="5dp"
        android:text="@string/booking_connect_deposit"
        android:textColor="@color/color_ffffff"
        android:textSize="13sp" />

    <Button
        android:id="@+id/bt_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:background="@drawable/blue_btn_bg"
        android:minWidth="49dp"
        android:padding="5dp"
        android:text="@string/booking_pay_deposit"
        android:textColor="@color/color_ffffff"
        android:textSize="13sp" />

    <Button
        android:id="@+id/bt_trade_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_gray_bg_selecter"
        android:minWidth="49dp"
        android:padding="5dp"
        android:text="@string/booking_cancel_deposit_trade"
        android:textColor="@color/color_999999"
        android:textSize="13sp" />


    <Button
        android:id="@+id/bt_refund_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:background="@drawable/blue_btn_bg_refund"
        android:minWidth="49dp"
        android:padding="5dp"
        android:text="@string/order_center_return_money"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />


</LinearLayout>