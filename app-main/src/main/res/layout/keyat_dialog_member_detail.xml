<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="373dp"
        android:layout_height="480dp"
        android:layout_gravity="center"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxEms="4"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="@dimen/text_24"
                tools:text="Name" />

            <TextView
                android:id="@+id/tv_switch"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_alignBottom="@id/tv_customer_name"
                android:layout_alignTop="@id/tv_customer_name"
                android:layout_toEndOf="@id/tv_customer_name"
                android:clickable="false"
                android:gravity="center_vertical"
                android:text="@string/customer_switch_text"
                android:textColor="#f88546"
                android:textSize="@dimen/text_16"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:id="@+id/tv_card_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_customer_name"
                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:singleLine="true"
                android:textColor="#53565b"
                android:textSize="@dimen/text_16"
                tools:text="卡号:123456" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/app_name"
                android:scaleType="center"
                android:src="@drawable/dialog_close" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_round_rectangle"
            android:orientation="vertical">

            <LinearLayout
                style="@style/dinnerCustomerBanlanceLinearLayout"
                android:layout_height="72dp">

                <TextView
                    style="@style/dinnerCustomerBanlanceText"
                    android:drawableStart="@drawable/dinner_customer_banlance"
                    android:text="@string/customer_banlance_label" />

                <com.zhongmei.bty.commonmodule.view.CurrencyTextView
                    android:id="@+id/tv_balance_value"
                    style="@style/dinnerCustomerBanlanceValue"
                    android:text="-"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e9edf1" />

            <LinearLayout
                style="@style/dinnerCustomerBanlanceLinearLayout"
                android:layout_height="72dp">

                <TextView
                    style="@style/dinnerCustomerBanlanceText"
                    android:drawableStart="@drawable/dinner_customer_integral"
                    android:text="@string/customer_integral_label" />

                <TextView
                    android:id="@+id/tv_credit_value"
                    style="@style/dinnerCustomerBanlanceValue"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="-"
                    tools:ignore="HardcodedText" />

                <ToggleButton
                    android:id="@+id/tb_use_integral"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="14dp"
                    android:background="@drawable/btn_toggle_green"
                    android:textOff=""
                    android:textOn=""
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp">

            <TextView
                style="@style/dinnerIntergralToCash"
                android:text="@string/intergral_to_cash_rule"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_level_rights"
                style="@style/dinnerIntergralToCash"
                tools:text="abc"
                tools:visibility="visible" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_customer_exit"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="20dp"
            android:background="@drawable/bg_customer_info_login_out_selector"
            android:gravity="center"
            android:text="@string/member_logout"
            android:textColor="@drawable/bg_customer_info_text_selector"
            android:textSize="@dimen/text_22" />

    </LinearLayout>

</FrameLayout>