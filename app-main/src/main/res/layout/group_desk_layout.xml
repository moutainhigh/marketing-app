<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uion_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/group_desk_top_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/table_area_pre"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/group_desk_left_arrow" />

        <android.support.v4.view.ViewPager
            android:id="@+id/tables_area_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none" />

        <ImageView
            android:id="@+id/tables_area_next"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/group_desk_right_arrow" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_light" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/booking_layout_padding"
        android:paddingRight="@dimen/booking_layout_padding">

        <com.zhongmei.bty.snack.orderdish.view.TouchGridView
            android:id="@+id/create_desk_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@drawable/orderdish_select_dish_item_bg"
            android:numColumns="6"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:scrollbarFadeDuration="500"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" />

        <TextView
            android:id="@+id/create_desk_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/booking_create_desk_null"
            android:textSize="@dimen/text_24"
            android:visibility="gone" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/group_desk_line" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/group_desk_bottom_height">

        <TextView
            android:id="@+id/tv_selector_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="41dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_17"
            tools:text="@string/group_create_selector_all_num" />

        <RelativeLayout
            android:id="@+id/rl_create_selector_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="41dp">

            <Button
                android:id="@+id/button_batch"
                android:layout_width="93dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/btn_blue_deep_selector"
                android:text="@string/booking_batch_button"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/iv_selector_all_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/button_batch"
                android:src="@drawable/fast_food_print_normal" />

            <TextView
                android:id="@+id/tv_selector_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/iv_selector_all_table"
                android:text="@string/group_create_selector_all"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_17" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>