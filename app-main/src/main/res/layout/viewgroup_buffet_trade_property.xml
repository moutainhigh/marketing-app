<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tradeproperty="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@color/bg_white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_trade_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            style="@style/buffet_trade_property_title"
            android:layout_alignParentLeft="true"
            android:text="@string/buffet_combo_type_hint" />

        <RadioGroup
            android:id="@+id/rg_trade_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:checkedButton="@id/rb_buffet"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_buffet"
                style="@style/buffet_trade_property_radiobutton"
                android:text="@string/buffet_type_buffet" />

            <RadioButton
                android:id="@+id/rb_dinner"
                style="@style/buffet_trade_property_radiobutton"
                android:layout_marginLeft="20dp"
                android:text="@string/buffet_type_dinner" />
        </RadioGroup>

        <View
            android:id="@+id/view_trade_type_line"
            style="@style/buffet_horizontal_line"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>


    <com.zhongmei.bty.buffet.table.view.PropertyItemView_
        android:id="@+id/piv_combo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tradeproperty:titleText="@string/buffet_combo_type"
        tradeproperty:devideLineVisiable="gone"
        tradeproperty:propertyVisiable="gone">

    </com.zhongmei.bty.buffet.table.view.PropertyItemView_>

    <LinearLayout
        android:id="@+id/ll_customerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_customer_count"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F6F6F6"
            android:gravity="center_vertical"
            android:paddingLeft="9dp"
            android:textColor="@color/color_999999" />

        <TextView
            android:id="@+id/btn_modify_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableRight="@drawable/buffet_modify_pp_cnt"
            android:drawablePadding="5dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="9dp"
            android:textSize="13dp"
            android:textColor="#32ADF6"
            android:text="@string/buffet_modify_people_count"
            android:visibility="visible" />


        <LinearLayout
            android:id="@+id/ll_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F6F6F6"
            android:gravity="center_vertical"
            android:paddingLeft="9dp"
            android:textColor="@color/color_999999"
            android:text="@string/buffet_other_info" />

        <RelativeLayout
            android:id="@+id/rl_deposit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <com.zhongmei.bty.buffet.table.view.PropertyItemView_
                android:id="@+id/piv_pledge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tradeproperty:titleText="@string/buffet_pledge"
                tradeproperty:iconVisiable="gone"
                android:visibility="visible"
                tradeproperty:propertyVisiable="gone"></com.zhongmei.bty.buffet.table.view.PropertyItemView_>

            <Button
                android:id="@+id/btn_edit_deposit"
                style="@style/buffet_btn_tradefinish"
                android:layout_width="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/edit" />
        </RelativeLayout>

        <com.zhongmei.bty.buffet.table.view.PropertyItemView_
            android:id="@+id/piv_outtime_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tradeproperty:titleText="@string/buffet_outtime_fee"
            tradeproperty:iconVisiable="gone"
            android:visibility="gone"
            tradeproperty:propertyVisiable="gone">

        </com.zhongmei.bty.buffet.table.view.PropertyItemView_>


        <com.zhongmei.bty.buffet.table.view.PropertyItemView_
            android:id="@+id/piv_waiter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tradeproperty:titleText="服务员:Admin"
            tradeproperty:propertyVisiable="gone">

        </com.zhongmei.bty.buffet.table.view.PropertyItemView_>

        <com.zhongmei.bty.buffet.table.view.PropertyItemView_
            android:id="@+id/piv_salesman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tradeproperty:propertyVisiable="gone"
            tradeproperty:titleText="销售员:">

        </com.zhongmei.bty.buffet.table.view.PropertyItemView_>
    </LinearLayout>

</LinearLayout>