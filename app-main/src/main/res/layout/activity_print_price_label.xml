<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/tbf_status_bar"
        android:name="com.zhongmei.bty.dinner.orderdish.TitleBarFragment_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="465dp"
            android:layout_height="match_parent"
            android:background="#ffffffff"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_title_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:background="@color/snack_title_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:drawableStart="@drawable/ic_retail_back_btn"
                    android:paddingLeft="14.67dp"
                    android:paddingRight="14.67dp" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/retail_string_print_price_label"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="37.33dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="60dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:gravity="center_vertical"
                    android:text="@string/goods"
                    android:textColor="@color/color_9b9b9b"
                    android:textSize="13.33sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/quantity"
                    android:textColor="@color/color_9b9b9b"
                    android:textSize="13.33sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="@string/money"
                    android:textColor="@color/color_9b9b9b"
                    android:textSize="13.33sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />


            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1">


                <ListView
                    android:id="@+id/list_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/color_ffe4eaee"
                    android:dividerHeight="1dp"
                    android:listSelector="@color/transparent" />

                <TextView
                    android:id="@android:id/empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="14dp"
                    android:drawableTop="@drawable/retail_ic_no_goods"
                    android:gravity="center_horizontal"
                    android:text="@string/no_goods"
                    android:textColor="#D1D8E6"
                    android:textSize="@dimen/text_12" />
            </FrameLayout>

            <TextView
                android:id="@+id/goods_total_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="20dp"
                android:text="@string/retail_print_price_label_goods_total"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray" />

            <LinearLayout
                android:id="@+id/ll_print"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_retail_blue_selector"
                android:clickable="true"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_retail_print_price_label"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:text="@string/retail_string_print"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_20" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#DCDCDC" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff0f3f6"
            android:orientation="vertical">

            <com.zhongmei.bty.commonmodule.view.EditTextWithDeleteIcon
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/retail_bg_search"
                android:drawableRight="@drawable/delete"
                android:ellipsize="start"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:hint="@string/order_dish_search_goods_hint1"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:textColor="#393F4C"
                android:textColorHint="#8791A6"
                android:textSize="16sp" />

            <GridView
                android:id="@+id/grid_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/et_search"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:listSelector="@color/transparent"
                android:numColumns="4"
                android:scrollbarFadeDuration="500"
                android:stretchMode="columnWidth" />

            <ImageView
                android:id="@+id/iv_dish_type_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="center"
                android:src="@drawable/ic_dish_type_empty"
                android:visibility="gone" />


            <com.zhongmei.bty.common.view.Keyboard26WithClear
                android:id="@+id/keyboard_letter"
                android:layout_width="match_parent"
                android:layout_height="312dp"
                android:layout_alignParentBottom="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#DCDCDC" />

        <!--  中类 -->
        <LinearLayout
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:background="#fff4f8f9"
            android:orientation="vertical">

            <com.zhongmei.bty.commonmodule.view.VerticalViewPager
                android:id="@+id/view_page"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="none" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_previous_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/image_left_arrow_description"
                    android:scaleType="center"
                    android:src="@drawable/ic_dishtype_pre_page_selector" />

                <ImageButton
                    android:id="@+id/ib_next_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/image_right_arrow_description"
                    android:scaleType="center"
                    android:src="@drawable/ic_dishtype_next_page_selector" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>