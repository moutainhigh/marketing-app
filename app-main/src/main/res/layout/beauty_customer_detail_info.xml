<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="21dp"
        android:paddingTop="25dp">

        <RelativeLayout
            android:id="@+id/rl_total_consume"
            style="@style/beauty.customer.detail.baseinfo.info_layout">

            <TextView
                android:id="@+id/tv_total_consume_title"
                style="@style/beauty.customer.detail.baseinfo.info_title"
                android:layout_centerHorizontal="true"
                android:text="余额" />

            <TextView
                android:id="@+id/tv_total_consume_content"
                style="@style/beauty.customer.detail.baseinfo.info_content"
                android:layout_alignStart="@+id/tv_total_consume_title"
                android:layout_below="@id/tv_total_consume_title"
                tools:text="$ 480" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@color/beauty_color_DEDEDE" />


        <RelativeLayout
            android:id="@+id/rl_total_consume_count"
            style="@style/beauty.customer.detail.baseinfo.info_layout">

            <TextView
                android:id="@+id/tv_total_consume_count_title"
                style="@style/beauty.customer.detail.baseinfo.info_title"
                android:layout_centerHorizontal="true"
                android:text="积分" />

            <TextView
                android:id="@+id/tv_total_consume_count_content"
                style="@style/beauty.customer.detail.baseinfo.info_content"
                android:layout_alignStart="@+id/tv_total_consume_count_title"
                android:layout_below="@id/tv_total_consume_count_title"
                tools:text="@string/beauty_customer_detail_baseinfo_info_consume_count" />
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>