<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/booking_detail_status_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booking_create_time"
            android:textColor="@color/color_5F6A70"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/booking_create_time_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/color_5F6A70"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booking_operation_user"
            android:textColor="@color/color_5F6A70"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/booking_create_user_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_5F6A70"
            android:textSize="14sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booking_arrived_time"
            android:textColor="@color/color_5F6A70"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/booking_arrived_time_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/color_5F6A70"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booking_operation_user"
            android:textColor="@color/color_5F6A70"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/booking_arrived_user_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_5F6A70"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booking_leave_time"
            android:textColor="@color/color_5F6A70"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/booking_leave_time_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/color_5F6A70"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booking_operation_user"
            android:textColor="@color/color_5F6A70"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/booking_leave_user_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_5F6A70"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booking_consume_time"
            android:textColor="@color/color_5F6A70"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/booking_consume_time_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/color_5F6A70"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booking_consume_amount"
            android:textColor="@color/color_5F6A70"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/booking_consume_amount_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_5F6A70"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booking_cancel_time"
            android:textColor="@color/color_5F6A70"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/booking_cancel_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_5F6A70"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/booking_cancel_reason_lb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booking_cancel_reason"
            android:textColor="@color/color_5F6A70"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/booking_cancel_reason_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_5F6A70"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>