<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="373dp"
        android:layout_height="480dp"
        android:layout_gravity="center"
        android:background="@drawable/order_center_operate_dialog_background"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/close_title"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@color/transparent">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/order_center_delivery_fee"
                android:textColor="#FFFF7901"
                android:textSize="21sp" />

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginRight="14dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/dinner_close"
                android:clickable="true" />

        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_below="@id/close_title"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="#FFE6EBEF"
            android:gravity="center_vertical"
            android:text="@string/order_center_delivery_fee_detail"
            android:textColor="#FFB2B7BC"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="@drawable/bg_order_center_dialog_refund"
            android:gravity="center"
            android:text="@string/ok_button"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btn_ok"
            android:layout_below="@id/title">

            <ListView
                android:id="@+id/switch_shop_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:background="@drawable/bg_order_center_dialog_radiogroup_all"
                android:cacheColorHint="@color/transparent"
                android:divider="@drawable/divide_line"
                android:listSelector="@color/transparent"
                android:scrollbars="none" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>