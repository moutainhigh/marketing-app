<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_blue_bg"

    android:minHeight="@dimen/print_setting_item_height"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/main_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/print_setting_item_content_margin_left"
        android:paddingRight="@dimen/print_setting_item_content_margin_right"
        android:paddingTop="@dimen/print_setting_item_drawable_padding"
        android:paddingBottom="@dimen/print_setting_item_drawable_padding"
        android:background="@drawable/list_item_blue_bg"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cb_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/setting_content_item_selector" />

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/print_setting_item_drawable_padding"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/cb_select"
            android:layout_marginTop="2dp">


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/print_text_black"
                android:textSize="@dimen/print_setting_item_size" />

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/print_text_black"
                android:textSize="@dimen/print_setting_item_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_delivery_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_below="@id/layout_content"
            android:layout_alignLeft="@id/layout_content"
            android:layout_marginTop="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/print_setting_item_size"
                android:textColor="#999999"
                android:text="@string/choose_deliver_type" />

            <CheckBox
                android:id="@+id/cb_type_here"
                android:button="@null"
                android:drawableStart="@drawable/radiobutton_style"
                android:drawablePadding="5dp"
                android:text="@string/order_here"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="@dimen/print_setting_item_size"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/cb_type_send"
                android:button="@null"
                android:drawableStart="@drawable/radiobutton_style"
                android:drawablePadding="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="@dimen/print_setting_item_size"
                android:textColor="#999999"
                android:text="@string/order_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/cb_type_take"
                android:button="@null"
                android:drawableStart="@drawable/radiobutton_style"
                android:drawablePadding="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="@dimen/print_setting_item_size"
                android:textColor="#999999"
                android:text="@string/order_take"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/cb_type_carry"
                android:button="@null"
                android:drawableStart="@drawable/radiobutton_style"
                android:drawablePadding="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="@dimen/print_setting_item_size"
                android:textColor="#999999"
                android:text="@string/order_carry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_minus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:paddingRight="@dimen/print_setting_item_content_margin_right"
            android:paddingLeft="@dimen/print_setting_item_content_margin_right"
            android:src="@drawable/print_setting_button_minus_bg" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="@dimen/print_setting_item_size" />

        <ImageView
            android:id="@+id/iv_plus"
            android:layout_width="wrap_content"
            android:scaleType="center"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/print_setting_item_content_margin_right"
            android:paddingLeft="@dimen/print_setting_item_content_margin_right"
            android:src="@drawable/print_setting_button_plus_bg" />
    </LinearLayout>


</LinearLayout>