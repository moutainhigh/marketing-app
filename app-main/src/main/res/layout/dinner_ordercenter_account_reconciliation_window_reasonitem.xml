<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/dinner_ordercenter_account_reconciliation_reason_item_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/reason_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textSize="20sp"
        android:textColor="#222222"
        android:textStyle="normal"
        android:text="@string/pay_mode_error"
        android:layout_weight="1"

        />

    <ImageView
        android:id="@+id/reason_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dinner_ordercenter_account_reconciliation_hook"
        android:visibility="visible"

        />
</LinearLayout>
