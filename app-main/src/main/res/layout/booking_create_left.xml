<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/customer_card_bg"
    android:orientation="vertical"
    android:padding="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/table_area_pre"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/left_arrow_slector" />

        <android.support.v4.view.ViewPager
            android:id="@+id/tables_area_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none"></android.support.v4.view.ViewPager>

        <ImageView
            android:id="@+id/tables_area_next"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/right_arrow_selector" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_light" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.zhongmei.bty.snack.orderdish.view.TouchGridView
            android:id="@+id/booking_create_gridView_desk"
            android:layout_width="700dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:listSelector="@drawable/orderdish_select_dish_item_bg"
            android:numColumns="6"
            android:scrollbarFadeDuration="500"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp" />

        <TextView
            android:id="@+id/booking_create_desk_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@drawable/customer_empty_icon"
            android:gravity="center"
            android:textSize="18sp"
            android:visibility="gone" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="@string/booking_already_select"
            android:textSize="18sp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/choose_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:textSize="18sp"
            android:textColor="#5dabec" />

        <CheckBox
            android:id="@+id/check_select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:button="@drawable/booking_create_choose_selector"
            android:paddingLeft="10dp"
            android:text="@string/booking_select_all"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginRight="20dp"
            android:visibility="gone" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_create_desk_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/booking_create_btnHeight"
        android:background="@drawable/btn_bottom_selector"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_24"
        android:visibility="gone" />

</LinearLayout>