<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@drawable/cashier_bg_title_bar"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_title_bar_menu"
            style="@style/title_icon_style"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/queue_menu"
            android:visibility="visible" />

        <!--<View-->
        <!--android:id="@+id/line"-->
        <!--android:layout_width="2dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_toEndOf="@id/iv_title_bar_menu"-->
        <!--android:background="@drawable/line"-->
        <!--android:visibility="gone" />-->

        <ImageView
            android:id="@+id/iv_queue_notify_center"
            style="@style/title_icon_style"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_title_bar_menu"
            android:scaleType="centerInside"
            android:src="@drawable/notice_icon" />

        <ImageView
            android:id="@+id/tip_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/iv_queue_notify_center"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="22dp"
            android:scaleType="centerInside"
            android:src="@drawable/notice_tip"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/view_notify_tip_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_queue_notify_center"
            android:layout_alignTop="@+id/iv_queue_notify_center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/notice_tips_number_other"
            android:gravity="center"
            android:textColor="@color/text_white"
            android:textSize="@dimen/notification_item_textSize2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/view_notify_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/iv_queue_notify_center"
            android:layout_alignTop="@+id/iv_queue_notify_center"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/order_tips_num_bar_other"
            android:gravity="center"
            android:textColor="@color/notifycenter_tips_trade"
            android:textSize="@dimen/notification_item_textSize2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/group_order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/blue"
            android:text="@string/group_title_group_trade"
            android:textColor="@android:color/white"
            android:textSize="@dimen/customer_layout_title_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/group_btn_mananger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_32ADF6"
            android:background="@drawable/group_btn_model"
            android:textSize="@dimen/text_12"
            android:layout_marginRight="20dp"
            android:text="@string/group_manager_dish_menu" />
    </RelativeLayout>
</LinearLayout>