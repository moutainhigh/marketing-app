<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f3f6"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">

        <TextView
            style="@style/style_reportcenter_column_hint"
            android:layout_marginLeft="8dp"
            android:text="@string/reportcenter_trade_time_title" />

        <TextView
            android:id="@+id/begin_date_tv"
            style="@style/style_queue_reportcenter_spinner_content" />

        <ImageButton
            android:id="@+id/begin_btn"
            style="@style/style_reportcenter_spinner_arrow" />


        <TextView
            style="@style/style_reportcenter_column_hint"
            android:layout_marginLeft="5dp"
            android:text="@string/reportcenter_to" />

        <TextView
            android:id="@+id/end_date_tv"
            style="@style/style_queue_reportcenter_spinner_content" />

        <ImageButton
            android:id="@+id/end_btn"
            style="@style/style_reportcenter_spinner_arrow" />

        <LinearLayout
            android:id="@+id/layout_query"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/reportcenter_btn_green_selector"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reportcenter_query"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/reportcenter_bg_white_corner_graystroke_shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left">

                <TextView
                    android:id="@+id/tv_queue_line"
                    style="@style/reportcenter_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/queue_all_queue_line" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right">

                <TextView
                    android:id="@+id/goods_name_tv"
                    style="@style/reportcenter_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@null"
                    android:text="@string/group_dinner_table_count" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right">

                <TextView
                    android:id="@+id/goods_category_tv"
                    style="@style/reportcenter_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@null"
                    android:text="@string/queue_count" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right">

                <TextView
                    android:id="@+id/goods_type_tv"
                    style="@style/reportcenter_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@null"
                    android:text="@string/queue_meal_count" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right">

                <TextView
                    android:id="@+id/goods_number_tv"
                    style="@style/reportcenter_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@null"
                    android:text="@string/queue_out_count" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right">

                <TextView
                    android:id="@+id/goods_money_tv"
                    style="@style/reportcenter_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@null"
                    android:text="@string/queue_loss_rate" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#f2f3f5" />

        <ListView
            android:id="@+id/lv_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:cacheColorHint="@null"
            android:clickable="true"
            android:divider="@null"
            android:listSelector="@android:color/transparent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:background="#f2f3f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="@string/queue_total"
                android:textColor="@color/color_555555" />

            <TextView
                android:id="@+id/tv_total_desk_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:textColor="@color/color_555555" />

            <TextView
                android:id="@+id/tv_total_queue_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:textColor="@color/color_555555" />

            <TextView
                android:id="@+id/tv_total_meal_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:textColor="@color/color_555555" />

            <TextView
                android:id="@+id/tv_total_out_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:textColor="@color/color_555555" />

            <TextView
                android:id="@+id/tv_total_loss_rate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:textColor="@color/color_555555" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f3f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="26dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_report_analysis"
                android:drawablePadding="5dp"
                android:text="@string/queue_report_analysis"
                android:textColor="@color/text_blue" />

            <TextView
                android:id="@+id/tv_analysis_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/color_666666" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>