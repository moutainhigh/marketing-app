<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/call_title_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/call_menu"
            style="@style/title_icon_style"
            android:scaleType="centerInside"
            android:src="@drawable/queue_menu" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/line" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/call_notice_center"
                style="@style/title_icon_style"
                android:scaleType="centerInside"
                android:src="@drawable/notice_icon" />

            <TextView
                android:id="@+id/view_notify_tip_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/text_white"
                android:textSize="@dimen/notification_item_textSize2"
                android:background="@drawable/notice_tips_number_other"
                android:visibility="gone" />

            <TextView
                android:id="@+id/view_notify_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/notifycenter_tips_trade"
                android:textSize="@dimen/notification_item_textSize2"
                android:background="@drawable/order_tips_num_bar_other"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>

        <TextView
            android:id="@+id/text_misscall_num"
            android:layout_width="176dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_view_border_left"
            android:gravity="center"
            android:text="@string/phone_log_miss"
            android:textColor="@color/text_white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_phone_all"
            android:layout_width="176dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="212dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_view_border_right_select"
            android:gravity="center"
            android:text="@string/phone_log_all"
            android:textColor="@color/text_blue"
            android:textSize="20sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/calllog_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@color/call_missed"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/line_gray"
        android:dividerHeight="1dp" />

</LinearLayout>