<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F0F3F6">

    <TextView
        style="@style/settings_rightTitle"
        android:background="@color/blue"
        android:gravity="center"
        android:text="@string/scanner"
        android:textColor="@color/text_white"
        android:textSize="@dimen/setting_title_bar_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/setting_right_content_margin"
        android:orientation="vertical">

        <TextView
            style="@style/print_setting_item_title_style"
            android:text="@string/setting_set_sacnner" />

        <RelativeLayout
            android:id="@+id/scan_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/setting_on_of_item_bg"
            android:layout_marginTop="@dimen/setting_dinner_switch_item_margin_top">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/scan_barcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/settings_scan_test" />

                <TextView
                    android:id="@+id/scan_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/setting_dinner_switch_item_height"
                    android:text="@string/scan_info"
                    android:textColor="@color/print_orange"
                    android:textSize="@dimen/setting_dinner_switch_item_title_size" />
            </LinearLayout>
        </RelativeLayout>

        <EditText
            android:id="@+id/barcode_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/transparent"
            android:focusable="true"
            android:gravity="center"
            android:hint="@string/pay_union_hint_text"
            android:singleLine="true"
            android:textColor="@color/transparent"
            android:textColorHint="@color/transparent"
            android:inputType="number"
            android:textSize="14sp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/setting_dinner_switch_item_height">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/cashbox_tip"
                android:drawablePadding="@dimen/setting_dinner_switch_item_margin_top"
                android:text="@string/how_to_set_scan"
                android:textColor="#333333"
                android:textSize="@dimen/setting_dinner_switch_item_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/setting_dinner_switch_item_margin_top"
                android:text="@string/set_scan_steps"
                android:textColor="#999999"
                android:textSize="@dimen/setting_dinner_switch_item_title_size" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
