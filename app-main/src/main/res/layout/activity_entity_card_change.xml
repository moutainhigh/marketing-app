<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/fg_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.zhongmei.bty.dinner.orderdish.TitleBarFragment_" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <RelativeLayout
                android:id="@+id/rl_title_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:background="@color/title_blue">

                <ImageView
                    android:id="@+id/iv_back"
                    style="@style/title_icon_style"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:src="@drawable/customer_back_icon" />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/entity_card_change"
                    android:textColor="@color/text_white"
                    android:textSize="21sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="7dp"
                android:layout_below="@id/rl_title_content"
                android:paddingTop="40dp"
                android:paddingBottom="10dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:background="@drawable/uion_read_card_layout">

                <RelativeLayout
                    android:id="@+id/rl_search_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_search_card"
                        android:layout_width="120dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="7dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/anonymous_card_pay_btn_selector"
                        android:text="@string/search"
                        android:textColor="@color/anonymous_card_pay_btn_color" />

                    <TableRow
                        android:id="@+id/tr_edit_content"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_toLeftOf="@id/btn_search_card"
                        android:background="@drawable/customer_search_background"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_seach"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"
                            android:background="@drawable/customer_search_icon"
                            android:contentDescription="@string/app_name"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />

                        <EditText
                            android:id="@+id/et_card_search"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="center_vertical"
                            android:hint="@string/hint_entity_card_input"
                            android:inputType="numberDecimal"
                            android:singleLine="true"
                            android:textColor="@color/color_333333"
                            android:textColorHint="@color/color_bcbcbc"
                            android:textSize="@dimen/text_16" />

                        <ImageView
                            android:id="@+id/iv_content_delete"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:padding="8dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/customer_ordercenter_search_delete"
                            android:visibility="gone" />

                    </TableRow>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_entity_card_old"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="13dp"
                    android:layout_below="@id/rl_search_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/color_F6F6F6"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_15" />

                <RelativeLayout
                    android:id="@+id/rl_entity_card_old"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_below="@id/tv_entity_card_old"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TableRow
                        android:id="@+id/tr_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/entity_card_member_name"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/text_15" />

                        <TextView
                            android:id="@+id/tv_entity_card_member_name"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:hint="@string/entity_card_reset"
                            android:textColor="@color/color_333333"
                            android:textColorHint="@color/color_999999"
                            android:textSize="@dimen/text_15" />

                        <TextView
                            android:id="@+id/tv_member_balance_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="51dp"
                            android:text="@string/entity_card_balance"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/text_15" />

                        <TextView
                            android:id="@+id/tv_member_balance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="8dp"
                            android:hint="@string/entity_card_reset"
                            android:textColor="@color/text_black"
                            android:textColorHint="@color/color_999999"
                            android:textSize="@dimen/text_15" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tr_entity_card_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_below="@id/tr_content"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/entity_card_old_number"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/text_15" />

                        <TableRow
                            android:id="@+id/tr_entity_card_old"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:paddingLeft="4dp"
                            android:gravity="center_vertical"
                            android:minHeight="38dp">

                            <TextView
                                android:id="@+id/tv_entity_card_old_num"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/bg_white"
                                android:hint="@string/entity_card_reset"
                                android:textColor="@color/color_333333"
                                android:textColorHint="@color/color_999999"
                                android:textSize="@dimen/text_15" />

                            <View
                                android:id="@+id/v_entity_card_line"
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#F1F1F1"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/iv_show_cards"
                                android:layout_width="38dp"
                                android:layout_height="match_parent"
                                android:padding="12dp"
                                android:background="@drawable/shape_right_entity_new_card_change"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/booking_popup"
                                android:visibility="gone" />

                        </TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="51dp"
                            android:text="@string/entity_card_balance"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/text_15" />

                        <TextView
                            android:id="@+id/tv_entity_card_old_balance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="8dp"
                            android:hint="@string/entity_card_reset"
                            android:textColor="@color/text_black"
                            android:textColorHint="@color/color_999999"
                            android:textSize="@dimen/text_15" />

                    </TableRow>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_entity_card_new_info"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="25dp"
                    android:layout_below="@id/rl_entity_card_old"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/color_F6F6F6"
                    android:gravity="center_vertical"
                    android:text="@string/entity_card_new_info"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_15" />

                <RelativeLayout
                    android:id="@+id/rl_entity_card_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_below="@id/tv_entity_card_new_info"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_card_new_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/entity_card_new_number"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_15" />

                    <TextView
                        android:id="@+id/tv_entity_card_new_num"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_card_new_left"
                        android:gravity="center_vertical"
                        android:hint="@string/entity_card_reset"
                        android:textColor="@color/color_333333"
                        android:textColorHint="@color/color_999999"
                        android:textSize="@dimen/text_15" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="51dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_entity_card_new_num">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/entity_card_new_cost"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/text_15" />

                        <TextView
                            android:id="@+id/tv_entity_card_new_cost"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="8dp"
                            android:hint="@string/entity_card_reset"
                            android:textColor="@color/color_333333"
                            android:textColorHint="@color/color_999999"
                            android:textSize="@dimen/text_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="@string/entity_card_new_state"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/text_15" />

                        <TextView
                            android:id="@+id/tv_entity_card_new_state"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="8dp"
                            android:hint="@string/entity_card_reset"
                            android:textColor="@color/color_333333"
                            android:textColorHint="@color/color_999999"
                            android:textSize="@dimen/text_15" />

                    </TableRow>

                </RelativeLayout>

                <Button
                    android:id="@+id/btn_entity_card_change"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/return_customerCard_ok_height"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/anonymous_card_pay_btn_selector"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="@string/entity_card_change"
                    android:textColor="@color/anonymous_card_pay_btn_color"
                    android:textSize="@dimen/text_16" />

            </RelativeLayout>

        </RelativeLayout>

        <!-- 读卡 -->
        <com.zhongmei.bty.customer.card.view.CustomReadCardView_
            android:id="@+id/crcv_read_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
