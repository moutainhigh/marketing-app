<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/printip_editview1"
        android:layout_width="0dp"
        android:layout_height="@dimen/print_setting_item_height"
        android:layout_weight="1"
        android:background="@drawable/setting_on_of_item_bg"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:text="192"
        android:textSize="@dimen/print_setting_item_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/print_setting_item_height"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:text="@string/dot"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/printip_editview2"
        android:layout_width="0dp"
        android:layout_height="@dimen/print_setting_item_height"
        android:layout_weight="1"
        android:background="@drawable/setting_on_of_item_bg"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:text="168"
        android:textSize="@dimen/print_setting_item_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:text="@string/dot"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/printip_editview3"
        android:layout_width="0dp"
        android:layout_height="@dimen/print_setting_item_height"
        android:layout_weight="1"
        android:background="@drawable/setting_on_of_item_bg"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:textSize="@dimen/print_setting_item_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:text="@string/dot"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/printip_editview4"
        android:layout_width="0dp"
        android:layout_height="@dimen/print_setting_item_height"
        android:layout_weight="1"
        android:background="@drawable/setting_on_of_item_bg"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:textSize="@dimen/print_setting_item_size" />

</merge>