<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingTop="4dp">

    <com.zhongmei.bty.dinner.ordercenter.view.ColumnLayout
        android:id="@+id/cl_00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:column="3" />

    <View
        android:id="@+id/v_line_00"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfe4e9" />

    <com.zhongmei.bty.dinner.ordercenter.view.ColumnLayout
        android:id="@+id/cl_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:visibility="gone"
        app:column="3" />

    <View
        android:id="@+id/v_line_11"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfe4e9"
        android:visibility="gone" />

    <com.zhongmei.bty.dinner.ordercenter.view.ColumnLayout
        android:id="@+id/cl_05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:column="3" />

    <View
        android:id="@+id/v_line_05"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfe4e9" />

    <com.zhongmei.bty.dinner.ordercenter.view.ColumnLayout
        android:id="@+id/cl_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:column="3" />

    <View
        android:id="@+id/v_line_01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfe4e9" />


    <com.zhongmei.bty.dinner.ordercenter.view.ColumnLayout
        android:id="@+id/cl_33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:visibility="gone"
        app:column="3" />

    <View
        android:id="@+id/v_line_33"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfe4e9"
        android:visibility="gone" />

    <com.zhongmei.bty.dinner.ordercenter.view.ColumnLayout
        android:id="@+id/cl_06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:visibility="gone"
        app:column="3" />

    <View
        android:id="@+id/v_line_06"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfe4e9"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="24dp">

        <TextView
            android:id="@+id/tv_payee"
            style="@style/payinfo_item_text_style"
            android:layout_gravity="center_vertical"
            tools:text="TextView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_actual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="@dimen/text_14"
                tools:text="TextView" />

            <TextView
                android:id="@+id/tv_actual_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="20sp"
                tools:text="TextView" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>