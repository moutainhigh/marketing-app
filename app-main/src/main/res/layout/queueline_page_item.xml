<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/queueLineName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_centerInParent="true"
        android:textColor="@color/text_black"
        android:textSize="@dimen/queue_left_title_textSize2" />

    <TextView
        android:id="@+id/queueLinePersonCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="20dp"
        android:layout_toRightOf="@+id/queueLineName"
        android:layout_above="@+id/queueLineName"
        android:background="@drawable/queue_page_item_tag_bg"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginLeft="-8dp"
        android:layout_marginBottom="-8dp"
        android:textSize="@dimen/queue_left_title_textSize1"
        android:text="163333" />

    <TextView
        android:id="@+id/select"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentBottom="true"
        android:background="@color/text_blue"
        android:visibility="invisible" />

</RelativeLayout>