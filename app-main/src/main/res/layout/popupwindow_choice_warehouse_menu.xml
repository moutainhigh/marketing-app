<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <ListView
        android:id="@+id/lv_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@android:color/transparent"
        android:dividerHeight="0.67dp"
        android:divider="#D5D9DE"
        android:fadeScrollbars="false"
        android:scrollbarFadeDuration="0"
        android:scrollbarThumbVertical="@drawable/shape_retail_listview_scrollbar_gray"
        android:background="@drawable/shape_retail_stocktake_round_rectangle"
        android:layout_marginBottom="1dp">

    </ListView>

</LinearLayout>