<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="602dp"
        android:layout_height="wrap_content"
        android:background="@drawable/customer_edit_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/dinner_close" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/confirm_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="26sp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0DEDF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/store_amount"
                android:textColor="#6F6F6F"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/market_activity_red"
                android:textSize="42sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account"
                android:textColor="#6F6F6F"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46dp"
                android:layout_toRightOf="@id/count_text"
                android:textColor="#6F6F6F"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/count_text"
                android:layout_marginTop="20dp"
                android:text="@string/setting_phone"
                android:textColor="#6F6F6F"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/count_text"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/phone_text"
                android:textColor="#6F6F6F"
                android:textSize="21sp" />

            <!--  <TextView
                 android:id="@+id/amount_text"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/phone_text"
                 android:layout_marginTop="20dp"
                 android:text="@string/customer_money"
                 android:textColor="#6F6F6F"
                 android:textSize="21sp" />

             <TextView
                 android:id="@+id/amount"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/phone_text"
                 android:layout_marginLeft="46dp"
                 android:layout_marginTop="20dp"
                 android:layout_toRightOf="@+id/amount_text"
                 android:textColor="#6F6F6F"
                 android:textSize="21sp" /> -->

            <TextView
                android:id="@+id/type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_text"
                android:layout_marginTop="20dp"
                android:text="@string/charge_type"
                android:textColor="#6F6F6F"
                android:textSize="21sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_text"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/type_text"
                android:textColor="#6F6F6F"
                android:textSize="21sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/common_number_keyboard_bt_selector"
            android:padding="15dp"
            android:text="@string/customer_inspect"
            android:textColor="@color/text_white"
            android:textSize="28dp" />
    </LinearLayout>

</LinearLayout>