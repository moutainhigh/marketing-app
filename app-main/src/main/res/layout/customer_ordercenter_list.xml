<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="7dp"
    android:paddingTop="18dp"
    android:paddingLeft="27dp"
    android:paddingRight="27dp"
    android:background="@drawable/bg_round_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/customer_search_background"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/search_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/customer_search_icon"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <EditText
                android:id="@+id/search_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/customer_search"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_bcbcbc"
                android:textSize="@dimen/text_16" />

            <ImageView
                android:id="@+id/delete_content_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/customer_ordercenter_search_delete"
                android:focusable="true"
                android:focusableInTouchMode="true" />
        </LinearLayout>

        <Button
            android:id="@+id/read_card_btn"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:background="@drawable/customer_ordercenter_readcard"
            android:text="@string/read_card_record"
            android:textColor="#33adf6"
            android:textSize="@dimen/text_16" />

        <Button
            android:id="@+id/search_btn"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:background="@drawable/customer_ordercenter_search_btn_back"
            android:text="@string/search"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_16" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/trade_category_ll"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/tab1_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tab1_tv"
                style="@style/customer_ordercenter_tradecategory_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sales_unpaid" />

            <View
                android:id="@+id/tab1_line"
                android:layout_width="91dp"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="#32adf6"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab2_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tab2_tv"
                style="@style/customer_ordercenter_tradecategory_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sales_paid" />

            <View
                android:id="@+id/tab2_line"
                android:layout_width="91dp"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="#32adf6" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab3_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tab3_tv"
                style="@style/customer_ordercenter_tradecategory_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sales_refunded" />

            <View
                android:id="@+id/tab3_line"
                android:layout_width="91dp"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="#32adf6"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab4_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tab4_tv"
                style="@style/customer_ordercenter_tradecategory_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sales_invalid" />

            <View
                android:id="@+id/tab4_line"
                android:layout_width="91dp"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="#32adf6"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D0D6DC" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:orientation="horizontal">

        <TextView
            style="@style/customer_ordercenter_head"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/order_pay_time" />

        <TextView
            style="@style/customer_ordercenter_head"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:text="@string/phone_or_card" />

        <TextView
            style="@style/customer_ordercenter_head"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/total_sale_price" />

        <TextView
            style="@style/customer_ordercenter_head"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/customer_manager" />

        <TextView
            style="@style/customer_ordercenter_head"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="@string/pad_no" />

        <TextView
            android:id="@+id/customer_ordercenter_head"
            style="@style/customer_ordercenter_head"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="@string/card_order_status_head" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D0D6DC" />

    <ListView
        android:id="@+id/order_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="@android:color/white"
        android:clickable="true"
        android:divider="#D0D6DC"
        android:dividerHeight="1dp"
        android:listSelector="@android:color/white" />

    <RelativeLayout
        android:id="@+id/customer_ordercenter_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/no_order_view" />
    </RelativeLayout>
</LinearLayout>