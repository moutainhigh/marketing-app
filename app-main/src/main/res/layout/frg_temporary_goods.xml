<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/verify_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/dinner_close" />

        <LinearLayout
            android:id="@+id/v_title"
            android:layout_width="292dp"
            android:layout_height="46dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_unweighing_goods"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/label_left_title_selector"
                android:gravity="center"
                android:text="@string/unweighing_temporary_goods"
                android:textColor="@drawable/discount_label_text_color_selector"
                android:textSize="@dimen/text_18" />

            <TextView
                android:id="@+id/tv_weighing_goods"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/label_right_title_selector"
                android:gravity="center"
                android:text="@string/weighing_temporary_goods"
                android:textColor="@drawable/discount_label_text_color_selector"
                android:textSize="@dimen/text_18" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/temporary_goods"
            android:textColor="#ff7901"
            android:textSize="@dimen/text_26"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e9edf1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#f8fafa"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="22dp"
        android:paddingRight="22dp">

        <EditText
            android:id="@+id/et_price"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginRight="14dp"
            android:layout_weight="1"
            android:background="@drawable/temporary_goods_price_input_bg"
            android:gravity="center"
            android:hint="@string/temporary_goods_price_input_hint"
            android:textColor="@color/settings_normalword"
            android:textColorHint="#cecece"
            android:textSize="@dimen/text_20"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <LinearLayout
            android:id="@+id/v_unweighing_quantity"
            android:layout_width="168dp"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_reduce"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/temporary_goods_quantity_reduce"
                android:scaleType="center"
                android:src="@drawable/ic_temporary_goods_quantity_reduce" />

            <EditText
                android:id="@+id/et_unweighing_quantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/temporary_goods_quantity_input_bg"
                android:gravity="center"
                android:textSize="@dimen/text_24"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/temporary_goods_quantity_add"
                android:scaleType="center"
                android:src="@drawable/ic_temporary_goods_quantity_add" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_weighing_quantity"
            android:layout_width="168dp"
            android:layout_height="56dp"
            android:background="@drawable/temporary_goods_price_input_bg"
            android:gravity="center"
            android:hint="@string/temporary_goods_quantity_need_input_hint"
            android:textColor="@color/settings_normalword"
            android:textColorHint="#cecece"
            android:textSize="@dimen/text_20"
            android:visibility="gone"
            android:focusable="true"
            android:focusableInTouchMode="true" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e9edf1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_one"
            style="@style/KeyboardItemStyle"
            android:text="@string/keyboard_1" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#e9edf1" />

        <TextView
            android:id="@+id/tv_two"
            style="@style/KeyboardItemStyle"
            android:text="@string/keyboard_2" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#e9edf1" />

        <TextView
            android:id="@+id/tv_three"
            style="@style/KeyboardItemStyle"
            android:text="@string/keyboard_3" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e9edf1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_four"
            style="@style/KeyboardItemStyle"
            android:text="@string/keyboard_4" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#e9edf1" />

        <TextView
            android:id="@+id/tv_five"
            style="@style/KeyboardItemStyle"
            android:text="@string/keyboard_5" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#e9edf1" />

        <TextView
            android:id="@+id/tv_six"
            style="@style/KeyboardItemStyle"
            android:text="@string/keyboard_6" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e9edf1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_seven"
            style="@style/KeyboardItemStyle"
            android:text="@string/keyboard_7" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#e9edf1" />

        <TextView
            android:id="@+id/tv_eight"
            style="@style/KeyboardItemStyle"
            android:text="@string/keyboard_8" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#e9edf1" />

        <TextView
            android:id="@+id/tv_nine"
            style="@style/KeyboardItemStyle"
            android:text="@string/keyboard_9" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e9edf1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_dot"
            style="@style/KeyboardItemStyle"
            android:scaleType="centerInside"
            android:src="@drawable/pay_cash_keyboard_dot" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#e9edf1" />

        <TextView
            android:id="@+id/tv_zero"
            style="@style/KeyboardItemStyle"
            android:text="@string/keyboard_0" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#e9edf1" />

        <ImageView
            android:id="@+id/iv_delete"
            style="@style/KeyboardItemStyle"
            android:scaleType="centerInside"
            android:src="@drawable/delete_icon" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/sure_btn_bg"
        android:enabled="true"
        android:gravity="center"
        android:text="@android:string/ok"
        android:textColor="@color/card_active_button_selector"
        android:textSize="@dimen/text_26" />

</LinearLayout>