<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginLeft="15dp"
        android:textColor="@color/customer_text_black"
        android:textSize="@dimen/text_16"/>


    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/customer_rule_gray"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/typeIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/customer_sales_icon"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/customer_rule_gray"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/other_balance_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center|left"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/customer_text_black"
            android:textSize="@dimen/text_16"
            tools:text="类型" />

        <TextView
            android:id="@+id/other_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/customer_text_black"
            android:textSize="@dimen/text_16"
            tools:text="消费270" />

    </LinearLayout>
    <TextView
        android:id="@+id/end_value"
        android:layout_width="150dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center|right"
        android:layout_height="wrap_content"
        android:textColor="@color/customer_text_black"
        android:textSize="@dimen/text_16"
        tools:text="@string/zero" />
    <TextView
        android:id="@+id/person"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:gravity="center|right"
        android:textColor="@color/customer_text_black"
        android:textSize="@dimen/text_16"
        tools:text="weixin"
        android:visibility="gone"/>



    <LinearLayout
        android:id="@+id/view_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:gravity="center|right"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|right"
            android:background="@drawable/customer_see_detail"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center|right"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:textColor="@color/customer_text_black"
            android:textSize="@dimen/text_16"
            android:text="查看详情"
            android:visibility="visible" />
    </LinearLayout>


</LinearLayout>
