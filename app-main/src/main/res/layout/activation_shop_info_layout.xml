<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/ll_activatuib_shop_info"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/trade_orderdish_bg"    android:gravity="center_horizontal"    android:orientation="vertical">    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="@dimen/activation_shopInfo_title_marginTop"        android:text="@string/pos_selft_activation"        android:textColor="@color/dinner_label_printed"        android:textSize="32sp"        android:textStyle="bold" />    <LinearLayout        android:id="@+id/brand_info_layout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="250dp"        android:layout_marginRight="250dp"        android:layout_marginTop="@dimen/activation_shopInfo_brandInfo_marginTop"        android:orientation="horizontal">        <LinearLayout            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:orientation="horizontal">            <TextView                style="@style/tv_activition_lable_style"                android:text="@string/brand_code_label" />            <TextView                android:id="@+id/tv_brand_code"                style="@style/tv_activition_info_style" />        </LinearLayout>        <LinearLayout            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1.2"            android:orientation="horizontal">            <TextView                style="@style/tv_activition_lable_style"                android:text="@string/brand_name_label" />            <TextView                android:id="@+id/tv_brand_name"                style="@style/tv_activition_info_style" />        </LinearLayout>        <LinearLayout            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:orientation="horizontal">            <TextView                style="@style/tv_activition_lable_style"                android:text="@string/brand_charge_label" />            <TextView                android:id="@+id/tv_brand_charge"                style="@style/tv_activition_info_style" />        </LinearLayout>    </LinearLayout>    <LinearLayout        android:id="@+id/shop_info_layout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="250dp"        android:layout_marginRight="250dp"        android:layout_marginTop="10dp"        android:orientation="horizontal">        <LinearLayout            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:orientation="horizontal">            <TextView                style="@style/tv_activition_lable_style"                android:text="@string/shop_code_label" />            <TextView                android:id="@+id/tv_shop_code"                style="@style/tv_activition_info_style" />        </LinearLayout>        <LinearLayout            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1.2"            android:orientation="horizontal">            <TextView                style="@style/tv_activition_lable_style"                android:text="@string/shop_name_label" />            <TextView                android:id="@+id/tv_shop_name"                style="@style/tv_activition_info_style" />        </LinearLayout>        <LinearLayout            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:orientation="horizontal">            <TextView                style="@style/tv_activition_lable_style"                android:text="@string/shop_charge_label" />            <TextView                android:id="@+id/tv_shop_charge"                style="@style/tv_activition_info_style" />        </LinearLayout>    </LinearLayout>    <View        android:layout_width="match_parent"        android:layout_height="1dp"        android:layout_marginBottom="@dimen/activation_shopInfo_cuttingLine_margin"        android:layout_marginLeft="250dp"        android:layout_marginRight="250dp"        android:layout_marginTop="@dimen/activation_shopInfo_cuttingLine_margin"        android:background="@drawable/dash_line" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="250dp"        android:layout_marginRight="250dp"        android:orientation="vertical">        <TextView            android:id="@+id/activation_info_code_hint"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="10dp"            android:gravity="left"            android:text="@string/activation_info_code_hint"            android:textColor="@color/second_title_gray"            android:textSize="@dimen/text_18" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="60dp"            android:layout_marginTop="16dp"            android:orientation="horizontal">            <EditText                android:id="@+id/et_message_code"                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="3"                android:background="@drawable/customer_edit_bg"                android:gravity="center"                android:hint="@string/please_input_message_code"                android:inputType="number"                android:paddingLeft="20dp"                android:textSize="20sp" />            <com.zhongmei.bty.common.view.TimerButton                android:id="@+id/btn_send"                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_marginLeft="10dp"                android:layout_weight="1" />        </LinearLayout>        <Button            android:id="@+id/btn_ok"            style="@style/activation_btn_next_step"            android:layout_marginTop="68dp"            android:text="@string/ok" />        <Button            android:id="@+id/btn_pre"            style="@style/activation_btn_pre_step"            android:layout_marginTop="20dp"            android:text="@string/prev" />    </LinearLayout></LinearLayout>