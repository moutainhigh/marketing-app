<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f3f6"
    android:orientation="vertical">
    <!--title-->
    <LinearLayout
        android:id="@+id/handover_right_top_layout"
        style="@style/handover_layout"
        android:layout_height="53.33dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/handover_person_name"
            style="@style/handover_title_tv"
            android:text="@string/handover_name_value" />

        <TextView
            android:id="@+id/handover_date"
            style="@style/handover_title_tv"
            android:layout_marginLeft="322dp"
            android:text="@string/handover_date_value" />

        <TextView
            android:id="@+id/handover_local_date"
            style="@style/handover_title_tv"
            android:layout_marginLeft="38dp"
            android:text="@string/handover_date_local_value" />
    </LinearLayout>

    <!-- 列标题 -->


    <LinearLayout
        style="@style/handover_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        tools:id="@+id/detail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/handover_header_tv"
                android:text="@string/receipt_type"
                tools:id="@+id/receipt_type" />

            <TextView
                style="@style/handover_header_tv"
                android:text="@string/backup_money"
                tools:id="@+id/backup_money" />

            <TextView
                style="@style/handover_header_tv"
                android:text="@string/shift_income"
                tools:id="@+id/shift_income" />

            <TextView
                style="@style/handover_header_tv"
                android:text="@string/sale_money"
                tools:id="@+id/sale_money" />

            <TextView
                style="@style/handover_header_tv"
                android:text="@string/charging"
                tools:id="@+id/charging" />

            <TextView
                style="@style/handover_header_tv"
                android:text="@string/payments_str"
                tools:id="@+id/balance_of_payments" />

            <TextView
                style="@style/handover_header_tv"
                android:text="@string/handover_actual_amount"
                tools:id="@+id/handover_actual_amount" />

            <TextView
                style="@style/handover_header_tv"
                android:text="@string/handover_diff_amount"
                tools:id="@+id/handover_diff_amount" />
        </LinearLayout>
        <!-- 明细 -->
        <LinearLayout
            android:id="@+id/handover_cash_list"
            style="@style/handover_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" />
    </LinearLayout>

    <!-- 合计 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_handover_layout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTotal_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/handover_list_total"
                android:textColor="@color/orderdish_text_black"
                android:textSize="16sp" />

            <com.zhongmei.bty.basemodule.shopmanager.handover.views.CustomTextView
                android:id="@+id/total_cash_box_amount_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="@color/orderdish_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtTotal_order_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/orderdish_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtTotal_valuecard_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/orderdish_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/total_amount_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="@color/orderdish_text_black"
                android:textSize="16sp" />
        </LinearLayout>
        <!-- 销货单统计 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sale_order_count_edit"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/orderdish_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/refund_order_count_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/orderdish_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/credit_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/handover_creditnum_label"
                android:textColor="@color/orderdish_text_black"
                android:textSize="16sp" />

        </LinearLayout>
        <!-- 储值单统计 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sale_valuecard_count_edit"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/orderdish_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/refund_valuecard_count_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/orderdish_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/credit_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/handover_creditamount_label"
                android:textColor="@color/orderdish_text_black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>