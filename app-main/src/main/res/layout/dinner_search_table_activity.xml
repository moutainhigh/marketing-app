<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dinnerdish_bg"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/dinner_title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>


    <LinearLayout
        android:id="@+id/searchTableLeftView"
        android:layout_width="@dimen/snack_dish_left_zone_width"
        android:layout_height="match_parent"
        android:layout_below="@id/dinner_title_bar_layout"
        android:background="@drawable/dinner_left_bg_shadow"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dinner_title_height"
            android:background="@color/title_blue">

            <ImageButton
                android:id="@+id/dinner_balance_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/title_icon_selector"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/dinner_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="30dp"
                android:maxLength="16"
                android:text="@string/search_table_title_label"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_22" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_search_data_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/search_table_alert_text"
            android:textColor="@color/settings_grayword"
            android:textSize="@dimen/text_18" />

        <LinearLayout
            android:id="@+id/ll_search_data_layout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/ll_dish_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/search_table_dish_name"
                    android:textColor="@color/dinner_dishname_color"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/tv_dish_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/dinner_dishname_color"
                    android:textSize="@dimen/text_16" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_dish_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F6F6F6"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_14" />

            <ListView
                android:id="@+id/dinner_search_table_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:cacheColorHint="@null"
                android:divider="@color/line_gray"
                android:dividerHeight="1dp"
                android:fadeScrollbars="false"
                android:listSelector="@drawable/orderdish_select_dish_item_bg"></ListView>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/searchTableRightView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/dinner_title_bar_layout"
        android:layout_toRightOf="@id/searchTableLeftView"
        android:orientation="horizontal">

    </LinearLayout>

</RelativeLayout>