<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F0F3F6"
    android:orientation="vertical">

    <TextView
        style="@style/settings_rightTitle"
        android:background="@color/settings_blue"
        android:gravity="center"
        android:text="@string/settings_european"
        android:textColor="@android:color/white"
        android:textSize="@dimen/setting_title_bar_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/setting_right_content_margin"
        android:orientation="vertical">

        <TextView
            style="@style/setting_switch_item_title_text"
            android:text="@string/settings_west_orderdish" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_on_of_item_bg"
            android:layout_marginTop="@dimen/setting_dinner_switch_item_margin_top"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/settings_med_sort_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_dinner_switch_item_height"
                android:layout_marginLeft="@dimen/setting_dinner_switch_item_text_margin_left"
                android:descendantFocusability="afterDescendants">

                <ImageButton
                    android:id="@+id/settings_med_sort_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:focusable="false"
                    android:clickable="false"
                    android:src="@drawable/setting_content_item_selector" />

                <TextView
                    android:id="@+id/settings_med_sort_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/setting_dinner_switch_items_drawable_padding"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/settings_med_sort_img"
                    android:text="@string/settings_med_sort_text"
                    android:textColor="#333333"
                    android:textSize="@dimen/setting_dinner_switch_item_size" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_line" />

            <RelativeLayout
                android:id="@+id/settings_dish_sort_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_dinner_switch_item_height"
                android:layout_marginLeft="@dimen/setting_dinner_switch_item_text_margin_left"
                android:descendantFocusability="afterDescendants">

                <ImageButton
                    android:id="@+id/settings_dish_sort_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:focusable="false"
                    android:clickable="false"
                    android:src="@drawable/setting_content_item_selector" />

                <TextView
                    android:id="@+id/settings_dish_sort_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/setting_dinner_switch_items_drawable_padding"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/settings_dish_sort_img"
                    android:text="@string/settings_dish_sort_text"
                    android:textColor="#333333"
                    android:textSize="@dimen/setting_dinner_switch_item_size" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>