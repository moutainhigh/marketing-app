<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/auth_permission_verify_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4.67dp"
            android:text="@string/account_change_password"
            android:textColor="@color/auth_permission_verify_perssion_title"
            android:textSize="21.33sp" />

        <Button
            android:id="@+id/close_btn"
            android:layout_width="33.93dp"
            android:layout_height="33.93dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14.07dp"
            android:background="@drawable/auth_permission_dinner_close" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32.67dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/lanucher_user_change_password" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.33dp"
            android:textColor="#333333"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="13.33dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_warn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/account_old_password_input"
            android:textColor="#666666"
            android:textSize="13.33sp" />

        <com.zhongmei.bty.basemodule.input.Password
            android:id="@+id/password_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_warn"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp" />
    </RelativeLayout>

    <com.zhongmei.bty.basemodule.input.NumberKeyBoard
        android:id="@+id/software_disk_layout"
        android:layout_width="373dp"
        android:layout_height="234dp"
        android:layout_marginTop="10.67dp"
        android:layout_marginBottom="3dp" />

</LinearLayout>