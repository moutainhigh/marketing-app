<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/menu_item_bg"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_margin="8dp"
        android:background="@drawable/group_menu_card_bg">

        <TextView
            android:id="@+id/menu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:textColor="@color/group_menu_color"
            tools:text="菜单1" />

        <TextView
            android:id="@+id/menu_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/menu_name"
            android:layout_below="@id/menu_name"
            android:textSize="16sp"
            android:textColor="@color/group_menu_color"
            tools:text="1288" />

        <TextView
            android:id="@+id/menu_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/menu_name"
            android:layout_alignParentBottom="true"
            android:maxLines="1"
            android:layout_marginBottom="5dp"
            android:textSize="14sp"
            android:textColor="@color/group_menu_color"
            tools:text="24个菜" />

        <TextView
            android:id="@+id/menu_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/menu_count"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textSize="14sp"
            android:textColor="@color/group_menu_color"
            tools:text="SB1233" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/dishmenu_system_icon" />

    <ImageView
        android:id="@+id/menu_anchor"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/menu_item_select_default"
        android:visibility="visible" />
</FrameLayout>