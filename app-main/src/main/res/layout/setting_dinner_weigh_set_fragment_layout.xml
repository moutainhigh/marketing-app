<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F0F3F6"
    android:orientation="vertical">

    <TextView
        style="@style/settings_rightTitle"
        android:background="@color/settings_blue"
        android:gravity="center"
        android:text="@string/setting_dinner_weigh_set_label"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/setting_title_bar_size" />

    <LinearLayout
        style="@style/setting_right_content_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/setting_switch_item_title_text"
            android:text="@string/setting_dinner_weigh_set_label" />

        <LinearLayout style="@style/setting_switch_item">

            <TextView
                android:id="@+id/dinner_weigh_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/setting_dinner_switch_item_text_margin_left"
                android:text="@string/setting_dinner_weigh_self_instructed"
                android:textColor="#333333"
                android:textSize="@dimen/setting_dinner_switch_item_size" />

            <TextView
                android:id="@+id/dinner_weigh_label2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/setting_dinner_switch_items_drawable_padding"
                android:layout_weight="1"
                android:text="@string/setting_dinner_weigh_self_instructed"
                android:textColor="@color/settings_grayword"
                android:textSize="@dimen/setting_snack_content_item_describe_size"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btn_dinner_weigh_set"
                style="@style/setting_switch_item_btn" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>