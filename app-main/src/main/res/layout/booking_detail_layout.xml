<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:padding="0.5dp">

    <RelativeLayout
        android:id="@+id/booking_detail_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/customer_card_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:drawableTop="@drawable/booking_detail_empty_bg"
            android:gravity="center"
            android:text="@string/booking_detail_empty"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/booking_detail_layou"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/customer_card_bg"
        android:orientation="vertical"
        android:padding="0.5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/booking_detail_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/booking_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxEms="7"
                        android:singleLine="true"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <TextView
                    android:id="@+id/booking_customer_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/customer_callnum"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/booking_count_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/booking"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/booking_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/booking_statistics_text_color"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/times"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/booking_cancel_count_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/booking_cancel_count"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/booking_cancel_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/booking_statistics_text_color"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/times"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/booking_timeout_count_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/booking_timeout_no"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/booking_timeout_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/booking_statistics_text_color"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/times"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/booking_detail_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/button_booking_send"
                    android:gravity="center"
                    android:paddingBottom="6dp"
                    android:text="@string/queue_remind_message"
                    android:textColor="#666666"
                    android:textSize="10sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/booking_detail_call"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/customer_phone_btn"
                    android:gravity="center"
                    android:paddingBottom="6dp"
                    android:text="@string/custoemr_member_phone"
                    android:textColor="#666666"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/booking_detail_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/customer_edit_btn"
                    android:gravity="center"
                    android:paddingBottom="6dp"
                    android:text="@string/customer_edit"
                    android:textColor="#666666"
                    android:textSize="10sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/booking_title_layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="0.5dp"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    android:id="@+id/booking_detail_info_selected"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/text_blue"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/booking_detail_info_rd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:gravity="center"
                    android:text="@string/booking_info"
                    android:textColor="@color/customer_detail_info_text_color"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View
                android:id="@+id/title_line"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line_gray"
                android:paddingBottom="2dp"
                android:paddingTop="2dp" />

            <RelativeLayout
                android:id="@+id/booking_detail_status_title_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/booking_detail_status_rd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/booking_current_state"
                    android:textColor="@color/customer_detail_info_text_color"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/booking_status_selected"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/text_blue"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_gray" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@color/bg_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 预订信息 -->

                <include layout="@layout/booking_item_detail_info_layout" />
                <!-- 预订记录 -->
                <!--<include layout="@layout/booking_item_detail_recorde_layout" /> -->
                <!-- 预订状态 -->

                <include layout="@layout/booking_item_detail_status_layout" />

                <include layout="@layout/booking_item_detail_info_group_layout" />

                <LinearLayout
                    android:id="@+id/booking_confirm_arrive_tag_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_dotted_line"
                        android:layerType="software" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/booking_confirm_arrive_tag_cb"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:background="@drawable/booking_create_choose_selector"
                            android:button="@null"
                            android:clickable="false" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/booking_confirm_arrive_tag"
                            android:textColor="#333333"
                            android:textSize="13sp" />

                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/booking_item_detail_info_deposit_info" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/booking_detail_button_layout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/booking_cancel_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_booking_cancel"
                android:gravity="center"
                android:text="@string/booking_order_cancel"
                android:textColor="@color/text_white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/booking_customer_arrived"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_booking_arrived"
                android:gravity="center"
                android:text="@string/booking_arrived"
                android:textColor="@drawable/handover_but_text_color"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>