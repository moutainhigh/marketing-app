        <TextView
            android:id="@+id/wednesday_image_tv"
            style="@style/group_date_red_point"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <RelativeLayout style="@style/group_date_root_layout">

        <LinearLayout
            android:id="@+id/ll_thursday"
            style="@style/group_date_layout">

