<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical"
    android:paddingLeft="120dp"
    android:paddingRight="120dp">

    <LinearLayout
        android:id="@+id/sender_search_ll"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/sender_searchbar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/edit_sender_order_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:completionThreshold="1"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:drawableStart="@drawable/search"
            android:paddingLeft="30dp"
            android:drawablePadding="30dp"
            android:dropDownVerticalOffset="3dp"
            android:hint="@string/edit_order_search_text"
            android:popupBackground="@drawable/address"
            android:singleLine="true"
            android:textColor="@color/text_gray"
            android:textSize="21sp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/edit_sender_order_search_empty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:gravity="center_vertical"
            android:text="@string/sender_order_search_empty"
            android:textColor="@color/text_red"
            android:textSize="18sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/sender_order_delete_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/orderdish_dlg_close_press"
            android:contentDescription="@string/btn_search_description"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/text_white"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="20dp"
        android:background="@color/senderPageLine"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totalPerson"
            style="@style/takeOutSenderTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:text="@string/totalPerson" />

        <com.zhongmei.bty.commonmodule.view.CurrencyTextView
            android:id="@+id/totalPrice"
            style="@style/takeOutSenderTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:text="@string/totalPrice" />

        <TextView
            android:id="@+id/totalOrder"
            style="@style/takeOutSenderTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:text="@string/totalOrder" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/senderPageLine" />

    <GridView
        android:layout_marginTop="52dp"
        android:id="@+id/senderList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnWidth="200dp"
        android:horizontalSpacing="20dp"
        android:numColumns="auto_fit"
        android:scrollbars="none"
        android:verticalSpacing="20dp"></GridView>

</LinearLayout>
