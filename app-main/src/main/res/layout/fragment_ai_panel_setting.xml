<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F0F3F6"
    android:orientation="vertical">

    <TextView
        style="@style/settings_rightTitle"
        android:background="@color/settings_blue"
        android:gravity="center"
        android:text="@string/ai_panel_settings_manager"
        android:textColor="@android:color/white"
        android:textSize="@dimen/setting_title_bar_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/setting_right_content_margin">

        <TextView
            style="@style/print_setting_item_title_style"
            android:text="@string/ai_panel_switch_desc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_dinner_switch_item_height"
            android:layout_marginTop="11.33dp"
            android:background="@drawable/setting_on_of_item_bg">

            <TextView
                style="@style/setting_switch_item_text"
                android:text="@string/ai_panel_switch" />

            <ToggleButton
                android:id="@+id/fragment_ai_panel_toggle"
                style="@style/setting_switch_item_toggle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_ai_panel_select_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_dinner_switch_item_height"
            android:layout_marginTop="11.33dp"
            android:gravity="center_vertical"
            android:background="@drawable/setting_on_of_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/print_setting_item_size"
                android:text="@string/ai_panel_settings_v"
                android:layout_marginLeft="15.33dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/fragment_ai_panel_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:text="@string/ai_panel_select"
                android:textSize="@dimen/print_setting_item_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/print_setting_item_drawable_padding"
                android:src="@drawable/print_setting_item_right"
                android:layout_marginRight="15.33dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>