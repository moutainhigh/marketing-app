<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dinner_order_center_detail_reject_goodsinfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/reject_rade_info_tv_label"
        android:textColor="@color/dinner_dishname_color"
        android:textSize="@dimen/text_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_dinner_order_center_detail_content_item"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/dinner_order_center_goods_item_info"
                android:textColor="#a1a8b0"
                android:textSize="@dimen/text_14" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dinner_order_center_goods_item_quantity"
                android:textColor="#a1a8b0"
                android:textSize="@dimen/text_14" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dinner_order_center_goods_item_price"
                android:textColor="#a1a8b0"
                android:textSize="@dimen/text_14" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/dinner_order_center_goods_item_amount"
                android:textColor="#a1a8b0"
                android:textSize="@dimen/text_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <com.zhongmei.bty.settings.view.XInnerListView
            android:id="@+id/dinner_billcenter_detail_reject_goodslistview"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@color/text_gray"
            android:listSelector="@android:color/transparent"
            android:cacheColorHint="@color/transparent"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"></com.zhongmei.bty.settings.view.XInnerListView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="#dfe4e9" />
    </LinearLayout>

</LinearLayout>