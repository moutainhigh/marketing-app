<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout_parent"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:background="@drawable/inventory_list_item_selector"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_inventory_no"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:text=""
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_ware_house_name"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:text=""
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_template_name"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:text=""
        android:textColor="#333333"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv_profit_amount"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:paddingEnd="15dp"
        android:gravity="end|center_vertical"
        android:text=""
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_loss_amount"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:paddingEnd="15dp"
        android:gravity="end|center_vertical"
        android:text=""
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_modify_time"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:text=""
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_operate_name"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:text=""
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:text=""
        android:textColor="#333333"
        android:textSize="14sp" />

    <com.zhongmei.bty.retail.inventorymanagement.stocktake.widget.DrawableCenterTextView
        android:id="@+id/tv_item_operate"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:drawablePadding="6dp"
        android:layout_gravity="center_vertical"
        android:drawableStart="@drawable/inventory_item_del"
        android:gravity="center_vertical"
        android:text="@string/delete"
        android:textColor="#333333"
        android:textSize="14sp" />

</LinearLayout>