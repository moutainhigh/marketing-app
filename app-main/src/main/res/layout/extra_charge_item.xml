<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="@drawable/bg_extra_charge_pressed"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dinner_extra_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:textColor="@color/customer_text_black"
        android:maxLines="8"
        android:ellipsize="end"
        android:textSize="@dimen/text_16"
        android:layout_marginRight="60dp" />

    <TextView
        android:id="@+id/dinner_extra_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_gray"
        android:layout_alignLeft="@id/dinner_extra_name"
        android:layout_below="@id/dinner_extra_name"
        android:textSize="@dimen/text_12"
        android:layout_marginRight="60dp" />

    <ImageView
        android:id="@+id/extra_charge_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp" />

</RelativeLayout>