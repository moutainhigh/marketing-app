<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dishView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dish_name"
                style="@style/dishOrderTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true" />

            <TextView
                android:id="@+id/dish_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:minWidth="@dimen/order_center_detail_list_minWidth"
                android:textColor="@color/text_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dish_price"
                style="@style/layout.w.w"
                android:layout_marginLeft="5dp"
                android:gravity="center|right"
                android:minWidth="@dimen/order_center_detail_list_minWidth_other"
                android:textColor="@color/selectedDishPrice"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dish_discount_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:gravity="center|right"
            android:minWidth="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/discountType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/dish_discount_icon"
                android:gravity="center"
                android:maxEms="3"
                android:singleLine="true"
                android:textColor="@color/text_discount_yellow"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dish_discount_price"
                style="@style/layout.w.w"
                android:layout_marginLeft="5dp"
                android:gravity="center|right"
                android:textColor="@color/selectedDishPrice"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/showRecipeView"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dishRecipeName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/remark_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dishRecipePrice"
                style="@style/layout.w.w"
                android:layout_marginLeft="5dp"
                android:gravity="center|right"
                android:minWidth="100dp"
                android:textColor="@color/remark_text_color"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:id="@+id/showTasteView"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dishTasteName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/remark_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dishTastePrice"
                style="@style/layout.w.w"
                android:layout_marginLeft="5dp"
                android:gravity="center|right"
                android:minWidth="100dp"
                android:textColor="@color/remark_text_color"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/dish_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="5dp"
            android:singleLine="false"
            android:textColor="@color/remark_text_color"
            android:textSize="15sp"
            android:visibility="gone"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_line"
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="@color/line_gray" />

        <LinearLayout
            android:id="@+id/trade_discount_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginTop="10dp"
            android:gravity="center|right"
            android:minWidth="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/trade_discountType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/dish_discount_icon"
                android:gravity="center"
                android:maxEms="3"
                android:singleLine="true"
                android:textColor="@color/text_discount_yellow"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/trade_discount_price"
                style="@style/layout.w.w"
                android:layout_marginLeft="5dp"
                android:gravity="center|right"
                android:textColor="@color/selectedDishPrice"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>