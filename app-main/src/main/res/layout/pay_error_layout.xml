<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="468dp"
    android:layout_gravity="center"
    android:background="@drawable/trade_orderdish_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/pay_error_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/close_btn"></ImageView>

        <TextView
            android:id="@+id/pay_error_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/pay_result_text"
            android:textColor="#9FA0A0"
            android:textSize="26sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <!--  <View
         android:layout_width="fill_parent"
         android:layout_height="2px"
         android:background="@color/line_gray" /> -->

    <ImageView
        android:id="@+id/pay_error_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:src="@drawable/pay_error_icon" />

    <TextView
        android:id="@+id/pay_error_alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/pay_error"
        android:textColor="#555555"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pay_error_result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:lines="2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="error"
        android:textColor="#35383b"
        android:textSize="18sp" />

    <Button
        android:id="@+id/pay_error_repay_button"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:background="@drawable/btn_green_selector"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/pay_repeat_dopay"
        android:textColor="@color/text_white"
        android:textSize="22sp" />

</LinearLayout>