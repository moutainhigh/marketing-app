<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="112dp"
    android:paddingRight="112dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:text="@string/feedback_input_contact"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/text_head"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/settings_frame"
        android:gravity="center_vertical"
        android:hint="@string/feedback_input_contact_hint"
        android:maxLength="50"
        android:paddingLeft="20dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/feedback_content"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/text_body"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/settings_frame"
        android:gravity="start"
        android:hint="@string/feedback_content_hint"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:maxLength="1000"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/settings_frame">

        <GridView
            android:id="@+id/add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:scrollbars="none"
            android:numColumns="3"
            android:horizontalSpacing="30dp"
            android:verticalSpacing="20dp"
            android:layout_marginTop="15dp"></GridView>

        <TextView
            android:id="@+id/feedback_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:textSize="16sp"
            android:paddingLeft="175dp"
            android:text="@string/feedback_add_photo" />
    </RelativeLayout>

    <Button
        android:id="@+id/feedback_send"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/handover_button"
        android:text="@string/settings_feedback_send"
        android:textColor="@drawable/bule_but_text_color"
        android:textSize="24sp" />

</LinearLayout>