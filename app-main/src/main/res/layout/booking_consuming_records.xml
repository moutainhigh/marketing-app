<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/customer_card_bg"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="10dp"
    android:padding="0.5dp">

    <RelativeLayout
        android:id="@+id/booking_consuming_title"
        android:layout_width="match_parent"
        android:layout_height="67dp">

        <TextView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/dinner_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/booking_consuming_amount"
            android:textColor="@color/text_black"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/line_gray" />

    <TextView
        android:id="@+id/show_value"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="54dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/booking_create_info_item_bg"
        android:gravity="center"
        android:hint="@string/booking_actual_amount"
        android:maxLength="10"
        android:textColor="@color/text_gray"
        android:textColorHint="@color/print_text_gray"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/booking_ok"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/booking_creat_bottom_btn"
            android:layout_alignParentBottom="true"
            android:text="@string/handover_ok"
            android:textColor="@drawable/handover_but_text_color"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/booking_charging_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_above="@id/booking_ok"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/one"
                    android:layout_width="0dp"
                    android:layout_height="73dp"
                    android:layout_weight="1"
                    android:background="@drawable/booking_keyboard_bg"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="24sp"
                    android:textColor="#5B6879" />

                <TextView
                    android:id="@+id/two"
                    android:layout_width="0dp"
                    android:layout_height="73dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/booking_keyboard_bg"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="24sp"
                    android:textColor="#5B6879" />

                <TextView
                    android:id="@+id/three"
                    android:layout_width="0dp"
                    android:layout_height="73dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/booking_keyboard_bg"
                    android:gravity="center"
                    android:text="3"
                    android:textSize="24sp"
                    android:textColor="#5B6879" />

                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="0dp"
                    android:layout_height="73dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/booking_keyboard_bg"
                    android:scaleType="centerInside"
                    android:src="@drawable/queue_keyboard_del" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/four"
                    android:layout_width="0dp"
                    android:layout_height="73dp"
                    android:layout_weight="1"
                    android:background="@drawable/booking_keyboard_bg"
                    android:gravity="center"
                    android:text="4"
                    android:textSize="24sp"
                    android:textColor="#5B6879" />

                <TextView
                    android:id="@+id/five"
                    android:layout_width="0dp"
                    android:layout_height="73dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/booking_keyboard_bg"
                    android:gravity="center"
                    android:text="5"
                    android:textSize="24sp"
                    android:textColor="#5B6879" />

                <TextView
                    android:id="@+id/six"
                    android:layout_width="0dp"
                    android:layout_height="73dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/booking_keyboard_bg"
                    android:gravity="center"
                    android:text="6"
                    android:textSize="24sp"
                    android:textColor="#5B6879" />

                <TextView
                    android:id="@+id/dot"
                    android:layout_width="0dp"
                    android:layout_height="73dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/booking_keyboard_bg"
                    android:gravity="center"
                    android:text="."
                    android:textSize="24sp"
                    android:textColor="#5B6879" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/seven"
                    android:layout_width="0dp"
                    android:layout_height="73dp"
                    android:layout_weight="1"
                    android:background="@drawable/booking_keyboard_bg"
                    android:gravity="center"
                    android:text="7"
                    android:textSize="24sp"
                    android:textColor="#5B6879" />

                <TextView
                    android:id="@+id/eight"
                    android:layout_width="0dp"
                    android:layout_height="73dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/booking_keyboard_bg"
                    android:gravity="center"
                    android:text="8"
                    android:textSize="24sp"
                    android:textColor="#5B6879" />

                <TextView
                    android:id="@+id/nine"
                    android:layout_width="0dp"
                    android:layout_height="73dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/booking_keyboard_bg"
                    android:gravity="center"
                    android:text="9"
                    android:textSize="24sp"
                    android:textColor="#5B6879" />

                <TextView
                    android:id="@+id/zero"
                    android:layout_width="0dp"
                    android:layout_height="73dp"
                    android:layout_weight="1"
                    android:background="@drawable/booking_keyboard_bg"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="24sp"
                    android:textColor="#5B6879" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>