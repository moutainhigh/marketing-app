<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlInputCardNum_ReadCard"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="@drawable/uion_read_card_inputcard"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvSearch_ReadCard"
            android:layout_width="94dp"
            android:layout_height="43dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/uion_sale_and_active_button_normal"
            android:gravity="center"
            android:text="录入"
            android:textColor="@color/customer_sale_and_active_normal"
            android:textSize="@dimen/text_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginStart="12dp"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@id/tvSearch_ReadCard"
            android:background="@drawable/customer_search_background">

            <ImageView
                android:id="@+id/ivDelete_ReadCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_delete"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_read_card_select"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:drawableEnd="@drawable/icon_arrow_down_gray"
                android:drawablePadding="11dp"
                android:gravity="center"
                android:text="@string/number"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_16" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/tv_read_card_select"
                android:background="#ececec" />

            <EditText
                android:id="@+id/etSearch_ReadCard"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tv_read_card_select"
                android:layout_toStartOf="@id/ivDelete_ReadCard"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:background="@null"
                android:hint="请手动输入卡号"
                android:maxLength="21"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_d5d5d5"
                android:textSize="@dimen/text_16" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvInputCardNum_ReadCard"
            android:layout_width="173dp"
            android:layout_height="43dp"
            android:layout_centerInParent="true"
            android:background="@drawable/uion_read_card_inputcard_btn"
            android:gravity="center"
            android:text="手动输入卡号"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/text_16"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlBatchClear_ReadCard"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivBatchClear_ReadCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@drawable/close_btn" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivIcon_ReadCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/uion_read_card_ready" />

            <TextView
                android:id="@+id/tvMessage_ReadCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_20" />

            <TextView
                android:id="@+id/tvHint_ReadCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/uion_read_card_rang_hint"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_14"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlBatch_ReadCard"
        android:layout_width="match_parent"
        android:layout_height="68dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/uion_read_card_dash_line" />

        <LinearLayout
            android:id="@+id/btnBatch_ReadCard"
            android:layout_width="173dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="@drawable/uion_read_card_inputcard_btn"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/uion_crad_batch" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="多张连号卡录入"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_16" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlCancel_ReadCard"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvCancel_ReadCard"
            android:layout_width="173dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="@drawable/uion_read_card_inputcard_btn"
            android:gravity="center"
            android:text="@string/string_again"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_16"
            android:visibility="visible" />

    </RelativeLayout>

</LinearLayout>