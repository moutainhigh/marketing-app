<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:paddingLeft="0dp"
    android:paddingTop="80dp">

    <ImageView
        android:id="@+id/iv_arrowUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="31dp"
        android:src="@drawable/icon_arrow_up_white" />

    <LinearLayout
        android:id="@+id/content_ll"
        android:layout_width="405dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_arrowUp"
        android:background="@drawable/dinner_order_center_child_tab_bg"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dish_prepare_tv"
                style="@style/dinnerDishOperateTextView"
                android:drawableTop="@drawable/dish_prepare"
                android:text="@string/dinner_orderdish_dish_prepare" />

            <TextView
                android:id="@+id/dish_make_tv"
                style="@style/dinnerDishOperateTextView"
                android:drawableTop="@drawable/dish_make"
                android:text="@string/dinner_orderdish_dish_make" />

            <TextView
                android:id="@+id/dish_urge_tv"
                style="@style/dinnerDishOperateTextView"
                android:drawableTop="@drawable/dish_urge"
                android:text="@string/dinner_orderdish_dish_urge" />

            <TextView
                android:id="@+id/trade_memo_tv"
                style="@style/dinnerDishOperateTextView"
                android:drawableTop="@drawable/trade_memo"
                android:text="@string/dinner_order_allremark" />

            <TextView
                android:id="@+id/tv_batch_operation"
                style="@style/dinnerDishOperateTextView"
                android:drawableTop="@drawable/ic_batch_operation"
                android:text="@string/dinner_orderdish_batch_operation" />

            <TextView
                android:id="@+id/tv_dish_sequence"
                style="@style/dinnerDishOperateTextView"
                android:drawableTop="@drawable/dinner_dish_sequence"
                android:text="@string/dinner_orderdish_sequence" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/dish_cancel_prepare_tv"
                style="@style/dinnerDishOperateTextView"
                android:drawableTop="@drawable/dish_cancel_prepare"
                android:text="@string/dinner_orderdish_dish_cancel_prepare"
                android:textColor="#F67632" />

            <TextView
                android:id="@+id/dish_cancel_make_tv"
                style="@style/dinnerDishOperateTextView"
                android:drawableTop="@drawable/dish_cancel_make"
                android:text="@string/dinner_orderdish_cancel_dish_make"
                android:textColor="#F67632" />

            <View
                android:id="@+id/padding_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>


