<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:id="@+id/customer_num_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="22dp"
        android:paddingTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dinner_number_of_guests"
            android:textColor="@color/print_text_black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/minus_customer_iv"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_number_left_selector"
                android:scaleType="centerInside"
                android:src="@drawable/ic_number_minus" />

            <EditText
                android:id="@+id/customer_num_tv"
                android:layout_width="158dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_number_center"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="4"
                android:textColor="@color/print_text_black"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/add_customer_iv"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_number_right_selector"
                android:scaleType="centerInside"
                android:src="@drawable/ic_number_plus" />


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dinner_list_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dinner_waiter"
            android:textColor="@color/print_text_black"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/waiter_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/waiter_name_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/dinner_waiter"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/print_text_black"
                android:background="@drawable/bg_select_waiter_left"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/waiter_iv"
                android:layout_width="74dp"
                android:background="@drawable/bg_select_waiter_right_normal"
                android:src="@drawable/ic_select_waiter_right"
                android:scaleType="centerInside"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dinner_list_line_color"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/comment_ll"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="0"
            android:text="@string/remark_str"
            android:textColor="@color/print_text_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/comment_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="1"
            android:text="@string/remark_content"
            android:textColor="#666666"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <Button
            android:id="@+id/done_btn1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dinner_bottom_height2"
            android:background="@drawable/btn_green_selector"
            android:text="@string/record_beigin"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>