<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/calm_dlg_layout"
        android:layout_width="460dp"
        android:layout_height="340dp"
        android:background="@drawable/dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="88dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="@string/reset_pswd"
                android:textColor="@color/text_black"
                android:textSize="26sp" />

            <ImageView
                android:id="@+id/btn_negative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_marginRight="22dp"
                android:layout_marginTop="26dp"
                android:src="@drawable/dialog_close" />
        </FrameLayout>

        <EditText
            android:id="@+id/et_input_new_pswd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/customer_dialog_edit_bg"
            android:hint="@string/input_new_pswd"
            android:inputType="textPassword"
            android:maxLength="6"
            android:paddingLeft="24dp"
            android:textColor="@color/customer_dialog_line_text"
            android:textColorHint="@color/customer_dialog_line_text"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_confirm_new_pswd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/customer_dialog_edit_bg"
            android:hint="@string/confirm_new_pswd"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:paddingLeft="24dp"
            android:textColor="@color/customer_dialog_line_text"
            android:textColorHint="@color/customer_dialog_line_text"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_positive"
                android:layout_width="match_parent"
                android:layout_height="@dimen/customer_dailog_btn_high"
                android:layout_gravity="bottom"
                android:background="@drawable/booking_dialog_print_onclick"
                android:text="@string/common_submit"
                android:textColor="@color/text_white"
                android:textSize="26sp"></Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>