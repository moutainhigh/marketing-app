<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:background="@drawable/list_item_blue_bg"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/ib_table_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/order_center_check_box" />

    <TextView
        android:id="@+id/tv_table_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:maxEms="6"
        android:singleLine="true"
        android:textSize="15sp"
        android:textColor="#333333"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_table_people"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:textSize="15sp"
        android:textColor="#333333"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_table_area"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:textSize="15sp"
        android:textColor="#333333"
        android:maxEms="6"
        android:singleLine="true"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_table_status"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:textSize="15sp"
        android:textColor="#333333"
        android:gravity="right|center_vertical"
        android:ellipsize="end" />
</LinearLayout>
