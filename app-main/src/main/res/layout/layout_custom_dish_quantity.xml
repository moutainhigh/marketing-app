<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/et_quantity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/ic_dish_quantity_bg"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:textSelectHandle="@android:drawable/btn_default"
        android:textColor="@color/settings_normalword"
        android:textSize="@dimen/text_24" />

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/ic_dish_quantity_bg"
        android:gravity="center"
        android:textColor="@color/settings_normalword"
        android:textSize="@dimen/text_24"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/v_change_quantity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_reduce"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_dish_quantity_reduce_selector" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_dish_quantity_add_selector" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_weighing_tip"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:text="@string/weight_tips_str"
        android:background="@drawable/orderdish_weight_bg"
        android:textColor="#ff7733"
        android:gravity="center"
        android:textSize="@dimen/middle_operation_weigh_hint_size"
        android:visibility="gone" />

</merge>
