<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/iv_consume_record_top_line"
                android:layout_width="1dp"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/beauty_color_D8D8D8" />

            <ImageView
                android:id="@+id/iv_consume_record_middle_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:src="@drawable/beauty_consume_record_stepview_pink_point" />

            <View
                android:id="@+id/iv_consume_record_bottom_line"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/beauty_color_D8D8D8" />
        </LinearLayout>

        <TextView
            android:id="@+id/iv_consume_record_time"
            android:layout_marginTop="5dp"
            style="@style/beauty.customer.detail.cardinfo.consume_record"
            android:layout_marginLeft="14dp"
            tools:text="2018-03-28" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="45dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/iv_consume_record_projects"
                style="@style/beauty.customer.detail.cardinfo.consume_record"
                tools:text="脸部护理*1 ／身体*1" />

            <TextView
                android:id="@+id/iv_consume_record_remark"
                style="@style/beauty.customer.detail.cardinfo.consume_record_desc"
                android:layout_below="@id/iv_consume_record_projects"
                tools:text="备注：脸部为过敏体质，下次使用 香婆婆系列的产品" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>