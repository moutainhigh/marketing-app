<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calm_dlg_height"
    android:layout_width="700dp"
    android:layout_height="640dp"
    android:background="@drawable/takeout_refuse_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/custom_title_rl"
        android:layout_width="match_parent"
        android:layout_height="68dp">

        <ImageView
            android:id="@+id/member_dialog_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:src="@drawable/closing_back_selector"
            android:scaleType="centerInside"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/customer_import_title"
            android:textColor="@color/settings_normalword"
            android:layout_marginBottom="10dp"
            android:textSize="26sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/bg_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:paddingEnd="32dp"
        android:paddingStart="32dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="26dp"
            android:layout_marginStart="26dp"
            android:layout_weight="3">

            <EditText
                android:id="@+id/member_no_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/customer_password_border"
                android:gravity="center"
                android:hint="@string/customer_import_imput_uniquecode"
                android:maxLines="1"
                android:paddingEnd="10dp"
                android:paddingRight="50dp"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textColorHint="@color/text_hint"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/member_no_clean_iv"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/photo_del"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/member_query"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_bottom_selector"
            android:gravity="center"
            android:text="@string/customer_import_query"
            android:textColor="@color/text_white"
            android:textSize="20sp" />
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        layout="@layout/member_import_member_info" />

    <TextView
        android:id="@+id/member_import_btn"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/booking_dialog_print_onclick"
        android:gravity="center"
        android:text="@string/customer_import"
        android:textColor="@color/write"
        android:textSize="26sp" />

</LinearLayout>