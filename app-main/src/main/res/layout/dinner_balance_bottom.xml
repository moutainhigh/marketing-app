<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_weight="3"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/rl_pay_print"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/btn_blue_selector"
            android:gravity="center">

            <ImageView
                android:id="@+id/dinner_balance_bottom_print_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:contentDescription="@null"
                android:scaleType="center"
                android:src="@drawable/dinner_print_icon" />

            <TextView
                android:id="@+id/dinner_balance_bottom_print_text"
                style="@style/dinner_bottom_text_style"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/dinner_balance_bottom_print_icon"
                android:gravity="center"
                android:text="@string/dinner_topay_ticket"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_24" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_clean"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_red_bg"
            android:text="@string/dinner_discount_clean_label"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_24"
            android:gravity="center"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dinner_balance_topay_layout"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:background="@drawable/btn_blue_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dinner_balance_bottom_txt"
            style="@style/dinner_bottom_text_style"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="@string/dinner_balance_topay"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/arrow_right"
            android:contentDescription="@null" />
    </RelativeLayout>

</LinearLayout>