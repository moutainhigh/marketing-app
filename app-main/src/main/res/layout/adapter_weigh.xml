<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="58.67dp"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:text=""
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_qimai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_name"
                android:layout_below="@id/tv_name"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:text=""
                android:textColor="#999999"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/et_weigh"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.6"
            android:ellipsize="end"
            android:enabled="false"
            android:gravity="center"
            android:maxLines="1"
            android:padding="0dp"
            android:text="2.4kg"
            android:textColor="#333333"
            android:textSize="16sp" />

        <com.zhongmei.bty.commonmodule.view.CurrencyEditText
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:gravity="center"
            android:text="@string/zero"
            android:textColor="#333333"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/ib_option"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/icon_weigh_edit" />
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:background="#DFE4E9" />
</LinearLayout>