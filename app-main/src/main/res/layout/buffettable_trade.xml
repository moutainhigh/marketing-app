<?xml version="1.0" encoding="utf-8"?>
<com.zhongmei.bty.buffet.table.view.BuffetTableTradeView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dinnertable_trade"
    android:layout_width="66dp"
    android:layout_height="70dp"
    android:minWidth="66dp"
    android:minHeight="70dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="66dp"
        android:layout_height="70dp">

        <RelativeLayout
            android:background="@drawable/dinnertable_trade_background"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_width="58dp"
            android:layout_height="60dp"
            android:paddingEnd="2dp"
            android:paddingLeft="2dp"
            android:paddingBottom="3dp">

            <com.zhongmei.bty.commonmodule.view.AutofitTextView
                android:id="@+id/sn"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:maxHeight="37dp"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="18sp"
                autofit:minTextSize="1sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/sn"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="11sp" />

