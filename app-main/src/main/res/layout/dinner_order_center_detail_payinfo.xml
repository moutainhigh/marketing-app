<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null">

        <TextView
            android:id="@+id/tv_payment_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:singleLine="true"
            android:text="@string/dinner_order_center_payment"
            android:textColor="@color/dinner_dishname_color"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tv_payment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="0dp"
            android:singleLine="true"
            android:textColor="@color/dinner_label_unsave"
            android:textSize="@dimen/text_14"
            tools:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_payinfo_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_dinner_order_center_detail_content_item"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp" />

</LinearLayout>