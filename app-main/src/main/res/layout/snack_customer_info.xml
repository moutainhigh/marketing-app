<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="460dp"
        android:layout_height="590dp"
        android:layout_gravity="center"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/customer_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/dinner_customer_vip"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/customer_name_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/customer_vip"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:maxEms="4"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_24"
                    tools:text="Name" />

                <TextView
                    android:id="@+id/tv_customer_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_customer_name"
                    android:layout_alignTop="@id/tv_customer_name"
                    android:layout_alignBottom="@id/tv_customer_name"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:maxEms="20"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="#53565b"
                    android:textSize="@dimen/text_16"
                    tools:text="青铜" />

                <TextView
                    android:id="@+id/tv_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_customer_level"
                    android:layout_alignTop="@id/tv_customer_name"
                    android:layout_alignBottom="@id/tv_customer_name"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:clickable="false"
                    android:textStyle="bold"
                    android:textColor="#f88546"
                    android:textSize="@dimen/text_16"
                    android:text="@string/customer_switch_text" />

                <TextView
                    android:id="@+id/tv_card_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_customer_name"
                    android:layout_marginTop="5dp"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:singleLine="true"
                    android:textColor="#53565b"
                    android:textSize="@dimen/text_16"
                    tools:text="卡号:123456" />

                <TextView
                    android:id="@+id/customer_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#53565b"
                    android:textSize="@dimen/text_16"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:visibility="gone"
                    android:layout_below="@id/tv_card_no" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:scaleType="center"
                android:src="@drawable/dialog_close" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/dialog_gray_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/bg_round_rectangle"
            android:orientation="vertical">

            <LinearLayout style="@style/dinnerCustomerBanlanceLinearLayout">

                <TextView
                    android:id="@+id/tv_balance_label"
                    style="@style/dinnerCustomerBanlanceText"
                    android:drawableLeft="@drawable/dinner_customer_banlance"
                    android:text="@string/customer_banlance_label" />

                <TextView
                    android:id="@+id/tv_balance_value"
                    style="@style/dinnerCustomerBanlanceValue"
                    android:text="-" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e9edf1" />

            <LinearLayout style="@style/dinnerCustomerBanlanceLinearLayout">

                <TextView
                    android:id="@+id/tv_credit_label"
                    style="@style/dinnerCustomerBanlanceText"
                    android:drawableLeft="@drawable/dinner_customer_integral"
                    android:text="@string/customer_integral_label" />

                <TextView
                    android:id="@+id/tv_credit_value"
                    style="@style/dinnerCustomerBanlanceValue"
                    android:text="-" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ToggleButton
                        android:id="@+id/tb_use_integral"
                        android:layout_width="60dp"
                        android:layout_height="36dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/beauty_toggle_green"
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_intergral_to_cash"
                style="@style/dinnerIntergralToCash"
                android:text="@string/intergral_to_cash_rule"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_level_rights"
                style="@style/dinnerIntergralToCash"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="abc" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/bt_customer_exit"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginBottom="36dp"
            android:background="@drawable/bg_customer_info_login_out_selector"
            android:gravity="center"
            android:text="@string/member_logout"
            android:textColor="@drawable/bg_customer_info_text_selector"
            android:textSize="@dimen/text_22"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>