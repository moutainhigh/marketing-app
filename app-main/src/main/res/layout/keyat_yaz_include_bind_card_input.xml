<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_input_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    android:visibility="gone">

    <TableRow
        android:id="@+id/tr_pwd_input"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/customer_search_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_card_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/keyat_yaz_input_bind_card_password"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_bcbcbc"
            android:textSize="@dimen/text_16" />

        <ImageView
            android:id="@+id/iv_pwd_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:padding="8dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/customer_ordercenter_search_delete"
            android:visibility="gone" />

    </TableRow>

    <TableRow
        android:id="@+id/tr_idcard_input"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/customer_search_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_card_idcard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/keyat_yaz_uion_bind_customer_name_tip"
            android:inputType="text"
            android:maxLength="18"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_bcbcbc"
            android:textSize="@dimen/text_16" />

        <ImageView
            android:id="@+id/iv_idcard_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:padding="8dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/customer_ordercenter_search_delete"
            android:visibility="gone" />

    </TableRow>

</LinearLayout>
