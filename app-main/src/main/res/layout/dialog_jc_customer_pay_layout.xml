<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="14dp"
    android:paddingBottom="50dp"
    android:background="@drawable/verify_bg">

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:drawableTop="@drawable/paying"
        android:text="@string/dialog_ic_customer_paying"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:drawablePadding="5dp"
        android:textSize="20sp"
        android:textColor="@color/color_333333"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_refresh_pay_state"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="#666666"
        android:drawableRight="@drawable/refresh_pay_state"
        android:drawablePadding="5dp"
        android:text="@string/please_refresh"
        android:layout_height="40dp" />
</LinearLayout>