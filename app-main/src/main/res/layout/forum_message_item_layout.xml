<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_forum_message_item_formtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:gravity="center"
            android:scaleType="center" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_forum_message_item_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="left|center_vertical"
            android:lines="1"
            android:maxLength="8"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/iv_forum_message_item_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_forum_message_item_writer"
            android:layout_toRightOf="@id/tv_forum_message_item_writer"
            android:lines="1"
            android:paddingLeft="8dp"
            android:textColor="@color/text_red_2"
            android:textSize="@dimen/text_16" />


        <TextView
            android:id="@+id/tv_forum_message_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:lines="1"
            android:text="2017-06-29 14:26"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tv_forum_message_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_forum_message_item_writer"
            android:layout_below="@+id/tv_forum_message_item_writer"
            android:layout_marginTop="6dp"
            android:text="hello world"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_14" />

        <LinearLayout
            android:id="@+id/horizon_listview_images_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_forum_message_item_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/tv_forum_message_item_content"
            android:layout_marginTop="10dp"
            android:background="@color/bg_white"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.zhongmei.bty.thirdplatform.forum.view.HorizontalListView
                android:id="@+id/horizon_listview_images"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_forum_message_reply_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_F9F9F9"
                android:gravity="left|center_vertical"
                android:padding="8dp"
                android:textColor="#D0A866"
                android:textSize="@dimen/text_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_forum_message_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableLeft="@drawable/forum_icon_reply_label"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/forum_reply_txt"
                    android:textColor="#7E8590"
                    android:textSize="@dimen/text_15" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_forum_reply_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.zhongmei.bty.thirdplatform.forum.view.ScrollEditText
                    android:id="@+id/et_forum_message_reply_editor"
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_round_rectangle"
                    android:fadeScrollbars="false"
                    android:gravity="left|top"
                    android:hint="@string/forum_reply_editor_hint"
                    android:maxLength="500"
                    android:padding="14dp"
                    android:scrollbars="vertical"
                    android:textColor="@color/print_text_black"
                    android:textColorHint="@color/text_hint_color"
                    android:textSize="@dimen/text_14" />

                <Button
                    android:id="@+id/btn_forum_message_reply_sbmit"
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/et_forum_message_reply_editor"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/bt_charge_selector"
                    android:gravity="center"
                    android:text="@string/sure"
                    android:textColor="#2eadf9"
                    android:textSize="16sp"></Button>

                <Button
                    android:id="@+id/btn_forum_message_reply_cancel"
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:layout_alignBottom="@+id/btn_forum_message_reply_sbmit"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@+id/btn_forum_message_reply_sbmit"
                    android:background="@drawable/btn_cancel_bg_selector"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textColor="#2eadf9"
                    android:textSize="16sp"></Button>

            </RelativeLayout>

            <View
                android:id="@+id/view_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/line_gray"
                android:contentDescription="@null" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>