<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/dialog_operate_reason_content_margin"
    android:orientation="horizontal">

    <!--
      <ImageView
        android:id="@+id/iv_cash_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="14dp" />
    -->

    <TextView
        android:id="@+id/tv_cashName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:textColor="#FF333333"
        android:textSize="@dimen/dialog_common_content_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cashstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:textColor="#FF333333"
            android:textSize="@dimen/dialog_common_content_size" />

        <TextView
            android:id="@+id/tv_cash_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:textColor="#FF333333"
            android:textSize="@dimen/dialog_common_content_size" />

        <TextView
            android:id="@+id/warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp"
            android:paddingLeft="5dp"
            android:paddingTop="0dp"
            android:textColor="#FFFF7901"
            android:textSize="@dimen/dialog_common_content_size"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>