<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#E05B5B5B">

    <FrameLayout
        android:id="@+id/content_fl"
        android:layout_width="754dp"
        android:layout_height="614dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/trade_orderdish_bg"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/dinner_order_center_account_reconciliation_window_title"
                    android:textColor="#333333"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/close_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:scaleType="center"
                    android:src="@drawable/dinner_close"
                    android:background="@null"
                    android:padding="20dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#d1d6dc" />

            <ScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="36dp"
                    android:paddingRight="36dp">

                    <LinearLayout
                        android:id="@+id/account_operate_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:orientation="vertical"
                        android:paddingBottom="40dp"
                        android:paddingTop="34dp" />

                    <LinearLayout
                        android:id="@+id/add_account_operate_item_ll"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:background="@drawable/dinner_ordercenter_account_reconciliation_button_back_selector"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/dinner_ordercenter_account_reconciliation_add" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:text="@string/dinner_order_adjust_add"
                            android:textColor="#727983"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="50dp"
                        android:text="@string/select_adjust_reason"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <ListView
                        android:id="@+id/reason_lv"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:background="@drawable/dinner_ordercenter_account_reconciliation_button_back"
                        android:divider="#d1d6dc"
                        android:dividerHeight="1dp"
                        android:fadingEdge="none"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp" />

                    <EditText
                        android:id="@+id/custom_reason_edit"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/dinner_ordercenter_account_reconciliation_button_back"
                        android:gravity="center_vertical"
                        android:hint="@string/userdefine_reason"
                        android:paddingLeft="18dp"
                        android:textColor="#33adf6"
                        android:textColorHint="#c8ced5"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        android:singleLine="true"
                        android:maxLength="50" />
                </LinearLayout>
            </ScrollView>

            <Button
                android:id="@+id/done_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_blue_selector"
                android:gravity="center"
                android:text="@string/confirm_adjust"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:textStyle="normal" />
        </LinearLayout>

        <include layout="@layout/dinner_ordercenter_account_reconciliation_window_paymode" />

    </FrameLayout>
</LinearLayout>