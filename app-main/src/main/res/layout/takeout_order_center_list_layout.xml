<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="61dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/btn_search_description"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="30dp"
            android:paddingRight="20dp"
            android:src="@drawable/order_center_search_icon" />

        <EditText
            android:id="@+id/edit_order_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="@string/edit_order_search_text"
            android:singleLine="true"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_18"
            android:imeOptions="actionDone"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/order_delete_search"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/order_close"
            android:contentDescription="@string/btn_search_description"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/text_white"
            android:textSize="20sp"
            android:visibility="invisible"
            android:scaleType="centerInside" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_line"
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:background="@color/line_gray" />

    <RadioGroup
        android:id="@+id/takeout_ordercenter_radio_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="30sp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/un_deal_with_takeout_order"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/un_deal_with_press"
            android:button="@null"
            android:gravity="center"
            android:text="@string/order_un_dealwith_st"
            android:textColor="@color/text_black"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/wait_distributing_with_takeout_order"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/un_pay_normal"
            android:button="@null"
            android:gravity="center"
            android:text="@string/sender_order_delivery_status_waiting"
            android:textColor="@color/text_black"
            android:textSize="18sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#BDBEBE" />

        <RadioButton
            android:id="@+id/distributing_with_takeout_order"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/un_pay_normal"
            android:button="@null"
            android:gravity="center"
            android:text="@string/deliverying"
            android:textColor="@color/text_black"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/distribution_completion_takeout_order"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="-1dp"
            android:background="@drawable/pay_normal"
            android:button="@null"
            android:gravity="center"
            android:text="@string/takeout_distribute_finish_titlebar"
            android:textColor="@color/text_black"
            android:textSize="18sp" />
    </RadioGroup>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ExpandableListView
            android:id="@+id/order_list"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="20dp"
            android:divider="@null"
            android:focusable="false"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:paddingBottom="3dp" />

        <RelativeLayout
            android:id="@+id/no_order_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ImageView
                android:id="@+id/no_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/no_order" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/no_order"
                android:layout_centerHorizontal="true"
                android:text="@string/dinner_order_center_list_no_data"
                android:textColor="#999999"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
