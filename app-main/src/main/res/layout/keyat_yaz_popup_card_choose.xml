<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="77dp"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:background="@drawable/bg_popup_window"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_query_choose_card"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@drawable/keyat_yaz_sel_choose_top_to_press"
        android:gravity="center"
        android:text="@string/number"
        android:textColor="@color/keyat_yaz_text_entity_card_query_choose"
        android:textSize="@dimen/text_16" />

    <TextView
        android:id="@+id/tv_query_choose_phone"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@drawable/keyat_yaz_sel_choose_bottom_to_press"
        android:gravity="center"
        android:text="@string/customer_mobile_text"
        android:textColor="@color/keyat_yaz_text_entity_card_query_choose"
        android:textSize="@dimen/text_16" />

</LinearLayout>