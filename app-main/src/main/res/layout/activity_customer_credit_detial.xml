<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3F6"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_blue">

        <ImageView
            android:id="@+id/back_btn"
            style="@style/title_icon_style"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/customer_back_icon" />

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/order_center_dinner_bill"
            android:textColor="@color/text_white"
            android:textSize="@dimen/customer_toolbar_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_xiaozhang"
            android:layout_width="55dp"
            android:layout_height="28dp"
            android:background="@drawable/btn_xiaozhang_bg"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:text="@string/order_center_dinner_book" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="13dp"
        android:layout_weight="2"
        android:background="@color/bg_white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_creditable_value_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/customer_credit_deal_creditable_value"
                android:textColor="@color/color_666666"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_creditable_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_creditable_value_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:text="10000.00"
                android:textColor="@color/color_32ADF6"
                android:textSize="27sp"
                android:textStyle="bold" />

            <com.zhongmei.bty.commonmodule.view.CurrencyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_creditable_value"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_creditable_value"
                android:text="{HBF}"
                android:textColor="@color/color_999999"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@color/line_gray" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_remain_credit_value_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/customer_credit_deal_remain_value"
                android:textColor="@color/color_666666"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_remain_credit_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_remain_credit_value_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:text="10000.00"
                android:textColor="#40D0AD"
                android:textSize="27sp"
                android:textStyle="bold" />

            <com.zhongmei.bty.commonmodule.view.CurrencyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_remain_credit_value"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_remain_credit_value"
                android:text="{HBF}"
                android:textColor="@color/color_999999"
                android:textSize="18sp" />
        </RelativeLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@color/line_gray" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_used_credit_value_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/customer_credit_deal_credit_used"
                android:textColor="@color/color_666666"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_used_credit_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_used_credit_value_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:text="10000.00"
                android:textColor="#FF7901"
                android:textSize="27sp"
                android:textStyle="bold" />

            <com.zhongmei.bty.commonmodule.view.CurrencyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_used_credit_value"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_used_credit_value"
                android:text="{HBF}"
                android:textColor="@color/color_999999"
                android:textSize="18sp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="7dp"
        android:layout_weight="1"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:paddingBottom="13dp"
        android:paddingLeft="38dp"
        android:paddingRight="38dp"
        android:paddingTop="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_credit_deal_time_sign"
            android:textColor="@color/color_999999"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll_customer_credit_start_time"
            android:layout_width="187dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/customer_time_choose_right_bg">

            <TextView
                android:id="@+id/tv_customer_credit_start_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="13dp"
                android:textColor="@color/color_32ADF6"
                android:textSize="15sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/gray_line" />

            <ImageView
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/reportcenter_icon_arrow_down_gray" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to"
            android:textColor="@color/color_999999"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll_customer_credit_end_time"
            android:layout_width="187dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/customer_time_choose_right_bg">

            <TextView
                android:id="@+id/tv_customer_credit_end_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="13dp"
                android:textColor="@color/color_32ADF6"
                android:textSize="15sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/gray_line" />

            <ImageView
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/reportcenter_icon_arrow_down_gray" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_credit_deal_type_sign"
            android:textColor="@color/color_999999"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/cb_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:button="@drawable/buffet_dinner_table_checkbutton_selector"
            android:checked="true"
            android:paddingLeft="13dp"
            android:text="@string/dinner_on_account"
            android:textColor="@color/color_666666"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/cb_cancel_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:button="@drawable/buffet_dinner_table_checkbutton_selector"
            android:checked="true"
            android:paddingLeft="13dp"
            android:text="@string/order_center_dinner_book"
            android:textColor="@color/color_666666"
            android:textSize="15sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <com.zhongmei.bty.customer.views.DrawableLeftCenterTextView
            android:id="@+id/btn_query"
            android:layout_width="153dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_green"
            android:clickable="true"
            android:drawableLeft="@drawable/customer_credit_search"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/customer_import_query"
            android:textColor="@color/while_line"
            android:textSize="13sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="2dp"
        android:layout_weight="6"
        android:background="@color/bg_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginLeft="@dimen/customer_account_padding"
            android:layout_marginRight="@dimen/customer_account_padding"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/customer_credit_deal_no"
                android:textColor="@color/color_999999"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="@string/customer_credit_deal_time"
                android:textColor="@color/color_999999"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="@string/customer_credit_deal_type"
                android:textColor="@color/color_999999"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="@string/customer_credit_deal_op"
                android:textColor="@color/color_999999"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="@string/customer_credit_deal_money"
                android:textColor="@color/color_999999"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:gravity="center"
                android:text="@string/customer_credit_deal_real"
                android:textColor="@color/color_999999"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="@string/customer_credit_used_value"
                android:textColor="@color/color_999999"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="@string/customer_credit_deal_pay_type"
                android:textColor="@color/color_999999"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <in.srain.cube.views.ptr.PtrClassicFrameLayout
                android:id="@+id/mPtr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/customer_account_padding"
                android:layout_marginLeft="@dimen/customer_account_padding"
                android:layout_marginRight="@dimen/customer_account_padding">

                <ListView
                    android:id="@+id/customer_credit_lv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/write"
                    android:cacheColorHint="@android:color/transparent"
                    android:divider="@null"
                    android:listSelector="@color/transparent"
                    android:scrollbars="none" />
            </in.srain.cube.views.ptr.PtrClassicFrameLayout>

            <ImageView
                android:id="@+id/empty_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/customer_empty_icon" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
