<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="373dp"
        android:layout_height="480dp"
        android:background="@drawable/order_center_operate_dialog_background"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="67dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customer_modify_mobile_number"
                android:textColor="#FFFF7901"
                android:textSize="@dimen/dialog_operate_title_size"
                android:layout_centerInParent="true" />

            <ImageButton
                android:id="@+id/ib_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/dinner_close"
                android:clickable="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8FAFA"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_customer_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textSize="15sp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="7dp"
                android:paddingLeft="20dp"
                android:maxLength="6"
                android:inputType="numberPassword"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:background="@drawable/booking_create_info_item_bg"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:hint="@string/display_user_pass_label" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvAreaCodes"
                    android:layout_width="113dp"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="11dp"
                    android:paddingRight="7dp"
                    android:paddingLeft="7dp"
                    android:text="中国大陆"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:background="@drawable/booking_create_info_item_bg"
                    android:textColor="#333333"
                    android:drawableRight="@drawable/booking_create_down" />

                <EditText
                    android:id="@+id/et_customer_mobile"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:textSize="16sp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="11dp"
                    android:paddingLeft="20dp"
                    android:inputType="number"
                    android:gravity="center_vertical"
                    android:layout_centerInParent="true"
                    android:background="@drawable/booking_create_info_item_bg"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:hint="@string/customer_modify_mobile_input_hint" />
            </LinearLayout>


        </LinearLayout>

        <com.zhongmei.bty.commonmodule.view.NumberKeyBoard
            android:id="@+id/key_board_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_operate_submit_height"
            android:background="@drawable/bg_order_center_dialog_refund"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="@string/common_submit"
            android:textColor="@color/text_white"
            android:textSize="@dimen/dialog_operate_submit_size" />

    </LinearLayout>

</FrameLayout>
