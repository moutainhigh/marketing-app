<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/queue_title_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></FrameLayout>

            <android.support.v4.widget.DrawerLayout
                android:id="@+id/drawer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/main_frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/bg_white"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/phone_layout_ll_body_left"
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:background="@color/bg_white"
                            android:layout_height="match_parent"
                            android:orientation="vertical"></LinearLayout>

                        <LinearLayout
                            android:id="@+id/phone_layout_ll_body_right"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:orientation="vertical"></LinearLayout>
                    </LinearLayout>

                </FrameLayout>

                <!--<com.zhongmei.bty.basemodule.notifycenter.view.NotifyCenterView_
                    android:id="@+id/drawer_left"
                    android:layout_width="@dimen/notification_popup_width"
                    android:layout_height="match_parent"
                    android:layout_marginTop="59dp"
                    android:layout_gravity="left"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@color/text_white"
                    android:orientation="vertical" />-->
            </android.support.v4.widget.DrawerLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_shadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/menu_shadow_bg"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/left_menu"
        android:layout_width="190dip"
        android:layout_height="fill_parent"
        android:visibility="gone">

        <include layout="@layout/phone_slide_menu" />
    </LinearLayout>

    <ViewSwitcher
        android:id="@+id/viewSwitcher"
        android:layout_width="@dimen/switcher_listview_width"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/switcher_margin_right"
        android:background="@android:color/transparent"
        android:visibility="invisible" />

    <com.zhongmei.bty.dinner.table.view.DinnerNotifyBubble_
        android:id="@+id/dnb_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/viewSwitcher"
        android:layout_marginRight="@dimen/bubble_margin_right"
        android:layout_marginTop="2dp"
        android:visibility="invisible" />

</RelativeLayout>