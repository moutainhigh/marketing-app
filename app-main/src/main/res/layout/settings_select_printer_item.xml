<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/print_setting_item_height"
    android:orientation="vertical"
    android:background="@drawable/list_item_blue_bg"
    android:minHeight="@dimen/print_setting_item_height"

    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/print_setting_item_content_margin_left"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/printer_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/setting_content_item_selector" />

        <TextView
            android:id="@+id/kitchen_printer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="@dimen/print_setting_item_size"
            android:layout_marginLeft="@dimen/print_setting_item_drawable_padding" />

        <TextView
            android:id="@+id/kitchen_printer_ip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#999999"
            android:textSize="@dimen/print_setting_item_size" />

        <TextView
            android:id="@+id/kitchen_printer_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/print_setting_item_content_margin_right"
            android:textColor="@color/orange"
            android:textSize="@dimen/print_setting_item_size" />
    </LinearLayout>

    <View
        android:id="@+id/cash_box_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line"
        android:visibility="gone" />

</LinearLayout>