<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F0F3F6">

    <TextView
        android:id="@+id/title"
        style="@style/settings_rightTitle"
        android:background="@color/settings_blue"
        android:gravity="center"
        android:text="@string/label"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/setting_title_bar_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/print_setting_content_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/print_setting_item_title_style"
                android:text="@string/print_labed_used" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/label_machine_edit"
                style="@style/print_setting_item_title_style"
                android:text="@string/edit"
                android:textColor="@drawable/bule_but_text_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ListView
                android:id="@+id/label_machine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/print_setting_item_margin_top"
                android:background="@drawable/setting_on_of_item_bg"
                android:divider="@color/print_line_gray"
                android:dividerHeight="0.5dp"></ListView>
        </LinearLayout>

        <TextView
            android:id="@+id/please_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/print_setting_item_height"
            android:background="@drawable/setting_on_of_item_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/print_setting_item_content_margin_left"
            android:text="@string/print_no_label_used"
            android:textColor="@color/black"
            android:textSize="@dimen/print_setting_item_size"
            android:layout_marginTop="@dimen/print_setting_item_margin_top" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/print_setting_item_height"
            android:layout_marginTop="@dimen/print_setting_item_margin_top">

            <Button
                android:id="@+id/lable_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/setting_blue_btn_selector"
                android:text="@string/add"
                android:textColor="#28ACF9"
                android:textSize="@dimen/print_setting_btn_size" />

            <Button
                android:id="@+id/lable_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/setting_queue_btn_selector"
                android:text="@string/delete"
                android:textColor="#FF8251"
                android:textSize="@dimen/print_setting_btn_size"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>