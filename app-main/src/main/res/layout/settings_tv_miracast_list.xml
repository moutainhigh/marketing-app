<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tv_miracast_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F3F6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/settings_rightTitle"
            android:background="@color/settings_blue"
            android:gravity="center"
            android:text="@string/queue_tv_miracast"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/setting_title_bar_size" />

        <LinearLayout
            style="@style/print_setting_content_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/setting_switch_item_title_text"
                android:text="@string/queue_tv_miracast_voice_switch" />

            <LinearLayout style="@style/setting_switch_item">

                <TextView
                    style="@style/setting_switch_item_text"
                    android:text="@string/queue_tv_miracast_voice_switch" />

                <ToggleButton
                    android:id="@+id/queue_tv_miracast_voice_switch"
                    style="@style/setting_switch_item_toggle" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/print_setting_content_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="0dp">

            <TextView
                style="@style/setting_switch_item_title_text"
                android:text="@string/queue_tv_miracast_switch" />

            <LinearLayout style="@style/setting_switch_item">

                <TextView
                    style="@style/setting_switch_item_text"
                    android:text="@string/queue_tv_miracast_switch" />

                <ToggleButton
                    android:id="@+id/queue_tv_miracast_switch"
                    style="@style/setting_switch_item_toggle" />
            </LinearLayout>


            <ScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/added_kitchen_ticket_outlet_num"
                            style="@style/print_setting_item_title_style"
                            android:text="@string/setting_dinner_exit_ip_list" />

                        <TextView
                            android:id="@+id/kitchen_print_outlet_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="@string/edit"
                            android:textColor="@drawable/bule_but_text_color"
                            android:textSize="@dimen/print_setting_item_title_size" />

                    </RelativeLayout>

                    <com.zhongmei.bty.settings.view.ScrollListView
                        android:id="@+id/kitchen_ticket_outlet_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/print_setting_item_margin_top"
                        android:background="@drawable/setting_on_of_item_bg"
                        android:divider="@color/line_gray"
                        android:dividerHeight="0.5dp" />

                    <TextView
                        android:id="@+id/not_add_any_ticket_outlet"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/print_setting_item_height"
                        android:layout_marginTop="@dimen/print_setting_item_margin_top"
                        android:background="@drawable/setting_on_of_item_bg"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/print_setting_item_content_margin_left"
                        android:text="@string/setting_dinner_exit_ip_empty"
                        android:textColor="#333333"
                        android:textSize="@dimen/print_setting_item_size" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/print_setting_item_height"
                        android:layout_marginTop="@dimen/print_setting_item_margin_top">

                        <Button
                            android:id="@+id/outlet_add"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/setting_blue_btn_selector"
                            android:text="@string/add"
                            android:textColor="#28ACF9"
                            android:textSize="@dimen/print_setting_btn_size" />

                        <Button
                            android:id="@+id/outlet_delete"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_queue_btn_selector"
                            android:text="@string/delete"
                            android:textColor="#FF8251"
                            android:textSize="@dimen/print_setting_btn_size"
                            android:visibility="gone" />
                    </RelativeLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>