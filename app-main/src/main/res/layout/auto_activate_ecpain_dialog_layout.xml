<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/dialog_operate_weight"
        android:layout_height="@dimen/dialog_operate_height"
        android:layout_gravity="center"
        android:background="@drawable/order_center_operate_dialog_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="66dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:textColor="#FF7901"
                android:text="@string/auto_activate_explain_title" />

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="@drawable/dinner_close" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="40dp">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:text="@string/auto_activate_explain_down"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="#435065"
                    android:background="@drawable/circle_ring_bg" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginRight="-20dp"
                    android:layout_weight="3"
                    android:background="@drawable/vertical_hidden_line" />

                <TextView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:text="@string/auto_activate_explain_register"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="#435065"
                    android:background="@drawable/circle_ring_bg" />

                <View
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginRight="-10dp"
                    android:layout_weight="1"
                    android:background="@drawable/vertical_hidden_line" />

                <TextView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:text="@string/auto_activate_explain_binding"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="#435065"
                    android:background="@drawable/circle_ring_bg" />

                <View
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginRight="-10dp"
                    android:layout_weight="1"
                    android:background="@drawable/vertical_hidden_line" />

                <TextView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:text="@string/auto_activate_explain_ok"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="#435065"
                    android:background="@drawable/circle_ring_bg" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_down_title"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="#435065"
                    android:text="@string/auto_activate_explain_down_info" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/point"
                        android:layout_width="16dp"
                        android:layout_height="wrap_content"
                        android:text="·"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/down_info_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#8694A9"
                        android:text="@string/auto_activate_explain_down_info2"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/point" />

                    <TextView
                        android:id="@+id/down_info_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/down_info_1"
                        android:layout_toRightOf="@id/point"
                        android:textSize="9sp"
                        android:textColor="#8694A9"
                        android:text="@string/auto_activate_explain_down_info3"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/point2"
                        android:layout_width="16dp"
                        android:layout_height="wrap_content"
                        android:text="·"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:textColor="#000000"
                        android:layout_below="@id/down_info_2" />

                    <TextView
                        android:id="@+id/down_info_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#8694A9"
                        android:text="@string/auto_activate_explain_down_info4"
                        android:layout_toRightOf="@id/point"
                        android:layout_below="@id/down_info_2"
                        android:layout_marginTop="10dp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="#435065"
                    android:text="@string/auto_activate_explain_register_info" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="#435065"
                    android:text="@string/auto_activate_explain_binding_info" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="#435065"
                    android:text="@string/auto_activate_explain_ok_info" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
