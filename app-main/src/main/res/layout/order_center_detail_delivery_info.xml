<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/order_center_detail_delivery_info"
            android:textColor="@color/dinner_dishname_color"
            android:textSize="@dimen/text_14" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:background="@drawable/bg_dinner_order_center_detail_content_item"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:paddingLeft="23dp"
            android:paddingRight="23dp">

            <TextView
                android:id="@+id/order_center_detail_delivery_user_name_tv"
                style="@style/payinfo_item_text_style"
                android:text="@string/order_center_detail_delivery_user_name" />

            <TextView
                android:id="@+id/order_center_detail_delivery_user_phone_tv"
                style="@style/payinfo_item_text_style"
                android:text="@string/order_center_detail_delivery_user_phone" />

            <TextView
                android:id="@+id/order_center_detail_delivery_platform_tv"
                style="@style/payinfo_item_text_style"
                android:gravity="right"
                android:text="@string/order_center_detail_delivery_platform" />
        </LinearLayout>

        <View
            android:id="@+id/order_center_detail_delivery_info_divide_line_v"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dfe4e9"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp" />

        <LinearLayout
            android:id="@+id/order_center_detail_delivery_info_tip_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <com.zhongmei.bty.commonmodule.view.CurrencyTextView
                    android:id="@+id/order_center_detail_delivery_info_tip_hint_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_12"
                    android:layout_marginLeft="22dp" />

                <com.zhongmei.bty.settings.view.XInnerListView
                    android:id="@+id/order_center_detail_delivery_info_tip_record_lv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="@color/transparent"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0dp"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="none"
                    android:layout_marginLeft="11dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="23dp">

                <TextView
                    android:id="@+id/order_center_detail_delivery_info_tip_total_amount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/order_center_detail_tip_total_amount"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/order_center_detail_delivery_info_passive_add_tip_tv"
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/bg_add_fee"
                    android:gravity="center"
                    android:text="@string/order_center_detail_passive_add_tip"
                    android:textColor="#25BE98"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>