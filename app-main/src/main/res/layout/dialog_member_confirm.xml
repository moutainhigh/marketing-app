<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/customer_chargind_layout_w"
        android:layout_height="@dimen/customer_chargind_layout_h"
        android:paddingTop="16dp"
        android:background="@drawable/customer_charging_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/entity_card_member_confirm"
            android:textColor="@color/text_red_2"
            android:textSize="21sp"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/close_icon" />

        <Button
            android:id="@+id/btn_positive"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/commonmodule_dialog_positive_only"
            android:text="@string/entity_card_binding"
            android:textColor="@color/commonmodule_text_white"
            android:textSize="21sp"
            tools:ignore="ButtonStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="22dp"
            android:layout_above="@id/btn_positive"
            android:layout_below="@id/tv_title"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:background="@color/color_F6F6F6"
                android:gravity="center_vertical"
                android:text="@string/entity_member_info"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_13" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tv_member_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/entity_card_member_phone"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/tv_member_phone_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@id/tv_member_phone"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="@dimen/text_16" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp">

                <TextView
                    android:id="@+id/tv_member_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/entity_card_member_name_jc"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/tv_member_name_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@id/tv_member_name"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="@dimen/text_16" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp">

                <TextView
                    android:id="@+id/tv_member_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/entity_card_member_balance"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/tv_member_balance_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@id/tv_member_balance"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="@dimen/text_16" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginTop="16dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:background="@color/color_F6F6F6"
                android:gravity="center_vertical"
                android:text="@string/entity_card_binding_to"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_13" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tv_member_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/entity_card_member_card_information"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/tv_member_card_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@id/tv_member_card"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="@dimen/text_16" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginTop="16dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:background="@color/color_F6F6F6"
                android:gravity="center_vertical"
                android:text="@string/entity_card_pay_setting"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_13" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp">

                <ToggleButton
                    android:id="@+id/tb_enable_pay_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:button="@drawable/toogle_bg"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:id="@+id/tv_member_pay_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/tb_enable_pay_setting"
                    android:text="@string/entity_card_member_pay_setting"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="@dimen/text_16" />

                <com.zhongmei.bty.commonmodule.view.CurrencyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_member_pay_setting"
                    android:layout_toLeftOf="@id/tb_enable_pay_setting"
                    android:text="@string/entity_card_member_pay_tips"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_12" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>