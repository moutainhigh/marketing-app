<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F0F3F6">

    <RelativeLayout
        android:id="@+id/receipt_title"
        style="@style/settings_rightTitle"
        android:background="@drawable/cashier_bg_title_bar"
        android:orientation="horizontal"

        android:paddingRight="@dimen/print_setting_content_margin_left">

        <RelativeLayout
            android:id="@+id/set_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/print_setting_content_margin_left"
            android:paddingRight="@dimen/print_setting_content_margin_left">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/print_setting_back_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/label"
            android:textColor="@color/bg_white"
            android:textSize="@dimen/setting_title_bar_size" />

        <Button
            android:id="@+id/common_save"
            android:layout_width="@dimen/print_setting_item_btn_width"
            android:layout_height="@dimen/print_setting_item_btn_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/print_setting_title_btn_selector"
            android:text="@string/common_save"
            android:textColor="@color/write"
            android:textSize="@dimen/print_setting_item_title_size" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_body"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/print_setting_content_margin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:drawableLeft="@drawable/settings_first"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/print_setting_item_drawable_padding"
                android:text="@string/bill_name_set"
                style="@style/print_setting_item_title_style" />


            <LinearLayout
                android:id="@+id/ll_name"
                style="@style/print_setting_item_style">

                <TextView
                    style="@style/print_setting_item_text_style"
                    android:text="@string/bill_name" />

                <EditText
                    android:id="@+id/et_bill_name"
                    style="@style/print_setting_item_text_style"
                    android:layout_weight="2"
                    android:background="@color/transparent"
                    android:gravity="right|center_vertical"
                    android:textColorHint="#BCBCBC"
                    android:hint="@string/uninput" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_second_base_info"
                style="@style/print_setting_item_title_style"
                android:layout_marginTop="@dimen/print_setting_items_margin"
                android:drawableLeft="@drawable/settings_second"
                android:drawablePadding="@dimen/print_setting_item_drawable_padding"
                android:gravity="center_vertical"
                android:text="@string/choose_ticket_outlet_ticket_type" />

            <LinearLayout
                android:id="@+id/ll_ticket_outlet_ticket_type"
                style="@style/print_setting_item_style">

                <TextView
                    android:id="@+id/tv_device_or_ticket_hint"
                    style="@style/print_setting_item_text_style"
                    android:text="@string/ticket_type" />

                <TextView
                    android:id="@+id/tv_ticket_outlet_ticket_type_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/print_setting_item_drawable_padding"
                    android:text="@string/unchoose"
                    android:textColor="#BCBCBC"
                    android:textSize="@dimen/print_setting_item_size" />

                <ImageView
                    android:id="@+id/btn_ticket_outlet_ticket_type_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/print_setting_item_down" />

            </LinearLayout>

            <!-- 设备编号 -->
            <LinearLayout
                android:id="@+id/ll_choose_place_holder_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/print_setting_item_margin_top"
                android:gravity="center"
                android:layout_gravity="center"
                android:visibility="gone"
                android:orientation="horizontal">

                <com.zhongmei.bty.settings.view.ScrollGridView
                    android:id="@+id/gv_place_holder_device"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:horizontalSpacing="@dimen/print_setting_little_items_margin"
                    android:numColumns="4"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="@dimen/print_setting_item_margin_top">

                </com.zhongmei.bty.settings.view.ScrollGridView>
            </LinearLayout>

            <TextView
                style="@style/print_setting_item_title_style"
                android:layout_marginTop="@dimen/print_setting_items_margin"
                android:drawableLeft="@drawable/settings_third"
                android:drawablePadding="@dimen/print_setting_item_drawable_padding"
                android:gravity="center_vertical"
                android:text="@string/choose_dishes_setting" />

            <LinearLayout
                android:id="@+id/ll_goods_set"
                style="@style/print_setting_item_style">

                <TextView
                    style="@style/print_setting_item_text_style"
                    android:text="@string/set_dishes" />

                <TextView
                    android:id="@+id/tv_selected_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/print_setting_item_drawable_padding"
                    android:text="@string/unselect"
                    android:textColor="#BCBCBC"
                    android:textSize="@dimen/print_setting_item_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/print_setting_item_right" />
            </LinearLayout>

            <TextView
                style="@style/print_setting_item_title_style"
                android:drawableLeft="@drawable/settings_fourth"
                android:drawablePadding="@dimen/print_setting_item_drawable_padding"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/print_setting_items_margin"
                android:text="@string/select_printer" />


            <LinearLayout
                android:id="@+id/ll_printer"
                style="@style/print_setting_item_style">

                <TextView
                    android:id="@+id/tv_printer_device_hint"
                    style="@style/print_setting_item_text_style"
                    android:text="@string/ticket_outlet_print_device" />

                <TextView
                    android:id="@+id/tv_printer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unselect"
                    android:textColor="#BCBCBC"
                    android:textSize="@dimen/print_setting_item_size"
                    android:layout_marginRight="@dimen/print_setting_item_drawable_padding" />

                <TextView
                    android:id="@+id/tv_printer_ip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#BCBCBC"
                    android:textSize="@dimen/print_setting_item_size"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/print_setting_item_drawable_padding" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/print_setting_item_right" />
            </LinearLayout>

            <TextView
                style="@style/print_setting_item_title_style"
                android:drawableLeft="@drawable/settings_fifth"
                android:drawablePadding="@dimen/print_setting_item_drawable_padding"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/print_setting_items_margin"
                android:text="@string/select_print_way" />


            <LinearLayout
                android:id="@+id/ll_delivery_type"
                style="@style/print_setting_item_style">

                <TextView
                    style="@style/print_setting_item_text_style"
                    android:text="@string/delivery_type" />

                <TextView
                    android:id="@+id/tv_selected_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/print_setting_item_drawable_padding"
                    android:text="@string/unselect"
                    android:textColor="#BCBCBC"
                    android:textSize="@dimen/print_setting_item_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/print_setting_item_right" />
            </LinearLayout>

            <TextView
                style="@style/print_setting_item_title_style"
                android:drawableLeft="@drawable/settings_sixth"
                android:drawablePadding="@dimen/print_setting_item_drawable_padding"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/print_setting_items_margin"
                android:text="@string/select_print_bill_way" />


            <LinearLayout style="@style/print_setting_item_style">

                <TextView
                    style="@style/print_setting_item_text_style"
                    android:text="@string/print_count" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/tv_count"
                        android:contentDescription="@null"
                        android:src="@drawable/print_setting_button_minus_bg" />

                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:layout_marginLeft="@dimen/print_setting_item_drawable_padding"
                        android:layout_marginRight="@dimen/print_setting_item_drawable_padding"
                        android:textSize="@dimen/print_setting_item_size"
                        android:text="1" />

                    <ImageView
                        android:id="@+id/iv_plus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/print_setting_button_plus_bg" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/print_setting_item_title_style"
                android:drawableLeft="@drawable/settings_seven"
                android:drawablePadding="@dimen/print_setting_item_drawable_padding"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/print_setting_items_margin"
                android:text="@string/select_label_print_way" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/print_setting_item_margin_top"
                android:background="@drawable/setting_on_of_item_bg">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/print_setting_item_height"
                    android:gravity="center"
                    android:paddingLeft="@dimen/print_setting_item_content_margin_left"
                    android:paddingRight="@dimen/print_setting_item_content_margin_right">

                    <TextView
                        style="@style/print_setting_item_text_style"
                        android:text="@string/label_show_child" />

                    <TextView
                        android:id="@+id/tv_show_child_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/print_setting_item_drawable_padding"
                        android:layout_gravity="center_vertical"
                        android:text="@string/close"
                        android:textColor="@color/print_text_gray"
                        android:textSize="@dimen/print_setting_item_size"
                        android:visibility="gone" />

                    <ToggleButton
                        android:id="@+id/tb_show_child"
                        style="@style/print_setting_item_toggle_style" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_line" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/print_setting_item_height"
                    android:gravity="center"
                    android:paddingLeft="@dimen/print_setting_item_content_margin_left"
                    android:paddingRight="@dimen/print_setting_item_content_margin_right">

                    <TextView
                        style="@style/print_setting_item_text_style"
                        android:text="@string/label_show_price" />

                    <TextView
                        android:id="@+id/tv_show_price_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/print_setting_item_drawable_padding"
                        android:layout_gravity="center_vertical"
                        android:text="@string/close"
                        android:textColor="@color/print_text_gray"
                        android:textSize="@dimen/print_setting_item_size"
                        android:visibility="gone" />

                    <ToggleButton
                        android:id="@+id/tb_show_price"
                        style="@style/print_setting_item_toggle_style" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_line" />
                <!--是否展示整单备注-->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/print_setting_item_height"
                    android:gravity="center"
                    android:paddingLeft="@dimen/print_setting_item_content_margin_left"
                    android:paddingRight="@dimen/print_setting_item_content_margin_right">

                    <TextView
                        style="@style/print_setting_item_text_style"
                        android:text="@string/label_show_marks" />

                    <TextView
                        android:id="@+id/tv_show_marks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/print_setting_item_drawable_padding"
                        android:layout_gravity="center_vertical"
                        android:text="@string/close"
                        android:textColor="@color/print_text_gray"
                        android:textSize="@dimen/print_setting_item_size"
                        android:visibility="gone" />

                    <ToggleButton
                        android:id="@+id/tb_show_marks"
                        style="@style/print_setting_item_toggle_style" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_line" />
                <!--是否展示下单日期-->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/print_setting_item_height"
                    android:gravity="center"
                    android:paddingLeft="@dimen/print_setting_item_content_margin_left"
                    android:paddingRight="@dimen/print_setting_item_content_margin_right">

                    <TextView
                        style="@style/print_setting_item_text_style"
                        android:text="@string/label_show_order_time" />

                    <TextView
                        android:id="@+id/tv_show_order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/print_setting_item_drawable_padding"
                        android:layout_gravity="center_vertical"
                        android:text="@string/close"
                        android:textColor="@color/print_text_gray"
                        android:textSize="@dimen/print_setting_item_size"
                        android:visibility="gone" />

                    <ToggleButton
                        android:id="@+id/tb_show_order_time"
                        style="@style/print_setting_item_toggle_style" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_line" />
                <!--是否展示商户手机号-->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/print_setting_item_height"
                    android:gravity="center"
                    android:paddingLeft="@dimen/print_setting_item_content_margin_left"
                    android:paddingRight="@dimen/print_setting_item_content_margin_right">

                    <TextView
                        style="@style/print_setting_item_text_style"
                        android:text="@string/label_show_shop_phone" />

                    <TextView
                        android:id="@+id/tv_show_shop_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/print_setting_item_drawable_padding"
                        android:layout_gravity="center_vertical"
                        android:text="@string/close"
                        android:textColor="@color/print_text_gray"
                        android:textSize="@dimen/print_setting_item_size"
                        android:visibility="gone" />

                    <ToggleButton
                        android:id="@+id/tb_show_shop_phone"
                        style="@style/print_setting_item_toggle_style" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_line" />
                <!--是否展示商户门店地址-->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/print_setting_item_height"
                    android:gravity="center"
                    android:paddingLeft="@dimen/print_setting_item_content_margin_left"
                    android:paddingRight="@dimen/print_setting_item_content_margin_right">

                    <TextView
                        style="@style/print_setting_item_text_style"
                        android:text="@string/label_show_shop_address" />

                    <TextView
                        android:id="@+id/tv_show_shop_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/print_setting_item_drawable_padding"
                        android:layout_gravity="center_vertical"
                        android:text="@string/close"
                        android:textColor="@color/print_text_gray"
                        android:textSize="@dimen/print_setting_item_size"
                        android:visibility="gone" />

                    <ToggleButton
                        android:id="@+id/tb_show_shop_address"
                        style="@style/print_setting_item_toggle_style" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_line" />
                <!--显示序号-->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/print_setting_item_height"
                    android:gravity="center"
                    android:paddingLeft="@dimen/print_setting_item_content_margin_left"
                    android:paddingRight="@dimen/print_setting_item_content_margin_right">

                    <TextView
                        style="@style/print_setting_item_text_style"
                        android:text="@string/label_show_page_number" />

                    <TextView
                        android:id="@+id/tv_show_page_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/print_setting_item_drawable_padding"
                        android:layout_gravity="center_vertical"
                        android:text="@string/close"
                        android:textColor="@color/print_text_gray"
                        android:textSize="@dimen/print_setting_item_size"
                        android:visibility="gone" />

                    <ToggleButton
                        android:id="@+id/tb_show_page_number"
                        style="@style/print_setting_item_toggle_style" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>