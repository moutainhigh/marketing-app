<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:paddingTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_batch_discount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dinner_discount_title_left"
                android:gravity="center"
                android:text="@string/batch_discount"
                android:textColor="@drawable/text_color_dinner_discount_title"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_batch_let"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dinner_discount_title_right"
                android:text="@string/batch_let"
                android:textColor="@drawable/text_color_dinner_discount_title"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/dinner_close" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_discount_0"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/bg_dinner_discount"
            android:gravity="center"
            android:text="@string/discount_6"
            android:textColor="@color/discount_radio_text_click"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_discount_1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_dinner_discount"
            android:gravity="center"
            android:text="@string/discount_7"
            android:textColor="@color/discount_radio_text_click"
            android:textSize="21sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_discount_2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/bg_dinner_discount"
            android:gravity="center"
            android:text="@string/discount_8"
            android:textColor="@color/discount_radio_text_click"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_discount_3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_dinner_discount"
            android:gravity="center"
            android:text="@string/discount_9"
            android:textColor="@color/discount_radio_text_click"
            android:textSize="21sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_give"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/bg_dinner_discount"
            android:gravity="center"
            android:text="@string/give"
            android:textColor="@color/discount_radio_text_click"
            android:textSize="21sp" />

        <EditText
            android:id="@+id/et_user_define"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_dinner_discount"
            android:gravity="center"
            android:hint="@string/user_define"
            android:inputType="numberDecimal"
            android:textColor="@color/discount_radio_text_click"
            android:textSize="21sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_clear_discount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_dinner_discount"
        android:text="@string/clearDiscount"
        android:textColor="@color/discount_radio_text_click"
        android:textSize="21sp" />

</LinearLayout>