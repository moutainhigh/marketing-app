<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/queue_auto_takenumber_right_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="45dp"
        android:layout_weight="1"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="65dp"
        android:paddingRight="65dp">

        <EditText
            android:id="@+id/queue_create_count"
            style="@style/edit_style"
            android:layout_marginTop="@dimen/booking_create_common_marginTop"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:hint="@string/queue_hint_takenumber_personcount"
            android:inputType="number"
            android:maxLength="20"
            android:paddingStart="30dp" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/booking_create_common_marginTop">

            <LinearLayout
                android:id="@+id/rlAreaCode"
                style="@style/edit_style"
                android:layout_width="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvAreaCodes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@id/ivAreaCode"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/queue_right_edit_textSize"
                    tools:text="中国" />

                <ImageView
                    android:id="@+id/ivAreaCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_areacode" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/queue_right_edit_marginTop"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/queue_create_phonenum"
                style="@style/edit_style"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:clickable="true"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:hint="@string/queue_create_phone_hint"
                android:inputType="number"
                android:maxLength="12"
                android:paddingStart="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="35dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/queue_keyboard_panel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="4"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/queue_create_takenumber_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/queue_button_blue_selector">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/queue_auto_printer_icon"
                    android:gravity="center"
                    android:text="@string/queue_button_takenumber_text"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_24"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>