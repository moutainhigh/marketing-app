<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="58.67dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/history_cashier_time"
            style="@style/handover_history_item_tv"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="26dp"
            tools:text="handover time " />

        <TextView
            android:id="@+id/abandon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/history_cashier_time"
            android:background="@drawable/shape_abandon_tv"
            android:gravity="center"
            android:paddingBottom="2.67dp"
            android:paddingLeft="4.67dp"
            android:paddingRight="4.67dp"
            android:paddingTop="2.67dp"
            android:text="@string/abandon"
            android:textColor="@color/color_bcbcbc"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/calibrate_name"
            style="@style/handover_history_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            tools:text="calibrate name" />

        <ImageView
            android:id="@+id/handover_history_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:clickable="true"
            android:focusable="false"
            android:src="@drawable/ic_goto" />

        <TextView
            android:id="@+id/history_cashier_name"
            style="@style/handover_history_item_tv"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/handover_history_detail"
            tools:text="cashier name " />
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:background="#DBDBDB" />
</LinearLayout>
