<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_table"
            style="@style/beauty_trades_fragemtn_rb"
            android:text="工作台" />

        <RadioButton
            android:id="@+id/rb_trades"
            style="@style/beauty_trades_fragemtn_rb"
            android:layout_marginLeft="20dp"
            android:text="@string/beauty_unpaid_trade" />


        <RadioButton
            android:id="@+id/rb_reserver"
            style="@style/beauty_trades_fragemtn_rb"
            android:layout_marginLeft="20dp"
            android:text="@string/beauty_today_reserver" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/layout_trades_contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />
</LinearLayout>