<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/cashier_bg_title_bar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            style="@style/title_icon_style"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/customer_back_icon" />

        <!--<TextView
            android:id="@+id/tvShowDownload"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/dinner_table_info_button_selector"
            android:drawableLeft="@drawable/download_mgr"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/astore_download_mgr"
            android:textColor="#ffffff" />-->

        <FrameLayout
            android:id="@+id/tvShowDownload"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/dinner_table_info_button_selector"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/download_mgr" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:text="@string/astore_download_mgr"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivDownloadDot"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="4dp"
                android:layout_marginTop="-8dp"
                android:src="@drawable/download_dot" />

        </FrameLayout>

        <TextView
            android:id="@+id/h5Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="18sp"
            tools:text="TextView" />

    </RelativeLayout>

    <com.zhongmei.bty.thirdplatform.astore.H5WebView
        android:id="@+id/h5View"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>