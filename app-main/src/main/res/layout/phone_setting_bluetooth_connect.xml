<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/color_F0F3F6">

    <TextView
        android:id="@+id/title"
        style="@style/settings_rightTitle"
        android:background="@color/settings_blue"
        android:gravity="center"
        android:text="@string/bluetooth_phone"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/setting_title_bar_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        style="@style/setting_right_content_margin">

        <TextView
            style="@style/print_setting_item_title_style"
            android:text="@string/setting_set_phone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/setting_on_of_item_bg"
            android:layout_marginTop="@dimen/setting_dinner_switch_item_margin_top">

            <LinearLayout
                android:id="@+id/id_fixed_phone_panel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_dinner_switch_item_height">

                <TextView
                    android:id="@+id/current_phone_fixedphone_title"
                    style="@style/setting_switch_item_text"
                    android:text="@string/fixed_phone" />

                <ToggleButton
                    android:id="@+id/switch_fixedphone_connectphoneservice"
                    style="@style/setting_switch_item_toggle" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_line" />

            <LinearLayout
                android:id="@+id/id_bluetooth_phone_panel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_dinner_switch_item_height">

                <TextView
                    android:id="@+id/current_phone_bluetooth_title"
                    style="@style/setting_switch_item_text"
                    android:text="@string/bluetooth_phone" />

                <ToggleButton
                    android:id="@+id/switch_bluetooth_connectphoneservice"
                    style="@style/setting_switch_item_toggle" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/current_phone_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/setting_dinner_switch_item_margin_top" />

            <TextView
                android:id="@+id/current_phone_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/setting_dinner_switch_item_margin_top"
                android:layout_marginLeft="@dimen/setting_dinner_switch_items_drawable_padding"
                android:textColor="#333333"
                android:textSize="@dimen/setting_dinner_switch_item_size" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/choose_phone_name_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_dinner_switch_items_margin"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/choose_phone_name"
                style="@style/print_setting_item_title_style"
                android:layout_weight="1"
                android:text="@string/choose_bluetooth_phone" />

            <ImageView
                android:id="@+id/phone_fresh"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/phone_set_fresh" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/setting_dinner_switch_item_margin_top"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:indeterminateDrawable="@drawable/loading"
                android:indeterminateDuration="600" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/setting_dinner_switch_item_margin_top"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">

            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/setting_on_of_item_bg"
                android:divider="@color/line_gray"
                android:dividerHeight="0.5dp"></ListView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>