<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/search_title"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/booking_order_time"
            android:textColor="@color/color_999999"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/booking_customer"
            android:textColor="@color/color_999999"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/booking_phone_number"
            android:textColor="@color/color_999999"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/booking_is_order_dish"
            android:textColor="@color/color_999999"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/color_999999"
            android:gravity="center"
            android:textSize="14sp"
            android:visibility="visible"
            android:text="@string/booking_reposit" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/booking_source"
            android:textColor="@color/color_999999"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/booking_status"
            android:textColor="@color/color_999999"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_title"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:visibility="visible">

        <com.zhongmei.bty.booking.ui.DrawableRightCenterTextView
            android:id="@+id/booking_popup_order_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableRight="@drawable/booking_popup"
            android:gravity="center"
            android:text="@string/booking_order_time"
            android:textColor="@color/color_999999"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/booking_customer"
            android:textColor="@color/color_999999"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/booking_phone_number"
            android:textColor="@color/color_999999"
            android:textSize="14sp" />

        <com.zhongmei.bty.booking.ui.DrawableRightCenterTextView
            android:id="@+id/booking_popup_table"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableRight="@drawable/booking_popup"
            android:gravity="center"
            android:text="@string/booking_table"
            android:textColor="@color/color_999999"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/booking_down_payment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/booking_down_payment"
            android:textColor="@color/color_999999"
            android:textSize="14sp"
            android:visibility="gone" />

        <com.zhongmei.bty.booking.ui.DrawableRightCenterTextView
            android:id="@+id/booking_is_order_dish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableRight="@drawable/booking_popup"
            android:gravity="center"
            android:text="@string/booking_is_order_dish"
            android:textColor="@color/color_999999"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/color_999999"
            android:gravity="center"
            android:textSize="14sp"
            android:visibility="visible"
            android:text="@string/booking_reposit" />

        <com.zhongmei.bty.booking.ui.DrawableRightCenterTextView
            android:id="@+id/booking_popup_source"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableRight="@drawable/booking_popup"
            android:gravity="center_vertical"
            android:text="@string/booking_source"
            android:textColor="@color/color_999999"
            android:textSize="14sp" />

        <com.zhongmei.bty.booking.ui.DrawableRightCenterTextView
            android:id="@+id/booking_popup_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableRight="@drawable/booking_popup"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/booking_status"
            android:textColor="@color/color_999999"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/bg_gray" />

    <ListView
        android:id="@+id/booking_list_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bg_white"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:paddingEnd="20dp"
        android:paddingStart="20dp" />

    <TextView
        android:id="@+id/empty_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="81dp"
        android:drawablePadding="8dp"
        android:drawableTop="@drawable/booking_search_empty"
        android:scaleType="centerInside"
        android:text="@string/booking_detail_empty"
        android:textColor="#D1D8E6"
        android:textSize="12sp"
        android:visibility="gone" />
</merge>