<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout_parent"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_batch_no"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="2"
        android:layout_marginStart="20dp"
        android:gravity="start|center_vertical"
        android:textColor="#333333"
        android:textSize="14.67sp" />

    <TextView
        android:id="@+id/tv_goods_category"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="3"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="14.67sp" />

    <TextView
        android:id="@+id/tv_goods_no"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="4"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="14.67sp" />


    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="4"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="14.67sp" />

    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="2"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="14.67sp" />


    <TextView
        android:id="@+id/tv_price"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="3"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical|end"
        android:textColor="#333333"
        android:textSize="14.67sp" />


    <TextView
        android:id="@+id/tv_apply_number"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="4"
        android:layout_marginStart="15dp"
        android:gravity="center_vertical|end"
        android:textColor="#333333"
        android:textSize="14.67sp" />

    <TextView
        android:id="@+id/tv_apply_amount"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="4"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical|end"
        android:textColor="#333333"
        android:textSize="14.67sp" />

    <TextView
        android:id="@+id/tv_receive_amount"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="4"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical|end"
        android:paddingEnd="4dp"
        android:textColor="#333333"
        android:background="@drawable/shape_retail_stocktake_edit_product_roundrect"
        android:textSize="14.67sp" />

    <TextView
        android:id="@+id/tv_receive_money"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="4"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical|end"
        android:textColor="#333333"
        android:textSize="14.67sp" />

</LinearLayout>