<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F0F3F6">

    <TextView
        style="@style/settings_rightTitle"
        android:background="@color/blue"
        android:gravity="center"
        android:text="@string/timing_print"
        android:textColor="@color/text_white"
        android:textSize="@dimen/setting_title_bar_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/setting_right_content_margin"
        android:orientation="vertical">

        <TextView
            style="@style/setting_switch_item_title_text"
            android:text="@string/timing_print_title" />

        <LinearLayout
            android:id="@+id/ll_selected_timing_type"
            style="@style/setting_switch_item">

            <TextView
                android:id="@+id/tv_selected_timing_type"
                style="@style/setting_switch_item_text"
                android:text="@string/unselect" />

            <ToggleButton
                android:id="@+id/btn_expand"
                style="@style/setting_switch_item_btn"
                android:checked="false"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/interval_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_dinner_switch_item_margin_top"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_dinner_switch_item_height"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/interval_min_30"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/setting_item_bg_selector"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/setting_dinner_switch_item_text_margin_left"
                    android:paddingRight="@dimen/setting_dinner_switch_item_text_margin_left"
                    android:text="@string/timing_print_30"
                    android:textColor="#333333"
                    android:textSize="@dimen/setting_dinner_switch_item_size" />

                <TextView
                    android:id="@+id/interval_min_60"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/setting_snack_time_items_margin"
                    android:layout_weight="1"
                    android:background="@drawable/setting_item_bg_selector"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/setting_dinner_switch_item_text_margin_left"
                    android:paddingRight="@dimen/setting_dinner_switch_item_text_margin_left"
                    android:textColor="#333333"
                    android:textSize="@dimen/setting_dinner_switch_item_size"
                    android:text="@string/timing_print_60" />

                <TextView
                    android:id="@+id/interval_min_90"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/setting_snack_time_items_margin"
                    android:layout_weight="1"
                    android:background="@drawable/setting_item_bg_selector"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/setting_dinner_switch_item_text_margin_left"
                    android:paddingRight="@dimen/setting_dinner_switch_item_text_margin_left"
                    android:textColor="#333333"
                    android:textSize="@dimen/setting_dinner_switch_item_size"
                    android:text="@string/timing_print_90" />

                <TextView
                    android:id="@+id/interval_min_120"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/setting_snack_time_items_margin"
                    android:layout_weight="1"
                    android:background="@drawable/setting_item_bg_selector"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/setting_dinner_switch_item_text_margin_left"
                    android:paddingRight="@dimen/setting_dinner_switch_item_text_margin_left"
                    android:textColor="#333333"
                    android:textSize="@dimen/setting_dinner_switch_item_size"
                    android:text="@string/timing_print_120" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>