<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/customer_account_table_h"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:paddingLeft="@dimen/customer_intrgral_time_l"
                android:text="@string/customer_accont_list_empty_data"
                android:textColor="@color/customer_text_black"
                android:textSize="@dimen/text_16"
                tools:text="2017-01-01" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/trade_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_accont_list_empty_data"
                    android:gravity="center"
                    android:textColor="@color/customer_text_black"
                    android:textSize="@dimen/text_16"
                    tools:text="1000" />

                <TextView
                    android:id="@+id/trade_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/available"
                android:layout_width="0dp"
                android:text="@string/customer_accont_list_empty_data"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/customer_text_black"
                android:textSize="@dimen/text_16"
                tools:text="1000" />

            <TextView
                android:id="@+id/person"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/customer_accont_list_empty_data"
                android:layout_weight="1.5"
                android:paddingRight="@dimen/customer_intrgral_person_r"
                android:gravity="right"
                android:textColor="@color/customer_text_black"
                android:textSize="@dimen/text_16"
                tools:text="weixin" />
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/customer_divide_line"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/customer_intrgral_divider_l"
        android:layout_marginRight="@dimen/customer_intrgral_divider_r"
        android:layout_alignParentBottom="true" />
</LinearLayout>
