<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/handover_layout"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="53.33dp">

    <TextView
        android:id="@+id/handover_user_name"
        style="@style/handover_title_tv"
        tools:text="@string/handover_name_value"
        android:layout_alignBaseline="@+id/handover_date"
        android:layout_alignBottom="@+id/handover_date"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/handover_local_date"
        style="@style/handover_title_tv"
        tools:text="@string/handover_date_local_value" />

    <TextView
        android:layout_toLeftOf="@id/handover_local_date"
        android:layout_marginRight="38dp"
        android:id="@+id/handover_date"
        style="@style/handover_title_tv"
        android:layout_marginLeft="322dp"
        tools:text="@string/handover_to_date_of_account" />


</RelativeLayout>