<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/orderTypPOPMainView"
    style="@style/layout.w.w"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="1dp">

        <TextView
            android:id="@+id/byPackage"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:background="@drawable/function_line_onclick"
            android:drawableLeft="@drawable/send_icon"
            android:gravity="center"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="@string/byPackage"
            android:textColor="@drawable/bule_but_text_color"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_blue" />

        <TextView
            android:id="@+id/sinceTheMention"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:background="@drawable/function_line_onclick"
            android:drawableLeft="@drawable/take_icon_gray"
            android:gravity="center"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="@string/sinceTheMention"
            android:textColor="@drawable/bule_but_text_color"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_blue" />

        <TextView
            android:id="@+id/salesReturn"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:background="@drawable/function_line_onclick"
            android:drawableLeft="@drawable/sales_return"
            android:gravity="center"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="@string/salesReturn"
            android:textColor="@drawable/bule_but_text_color"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>