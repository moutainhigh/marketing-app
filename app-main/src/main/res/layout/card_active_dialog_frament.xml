<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:background="@drawable/active_card_dialog_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/card_active_title_rl"
            android:layout_width="match_parent"
            android:layout_height="68dp">

            <ImageButton
                android:id="@+id/card_active_dialog_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"
                android:background="@drawable/closing_back_selector"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/card_active_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/customer_active"
                android:textColor="@color/settings_normalword"
                android:textSize="26sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/bg_light" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_marginTop="12dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@+id/card_actice_choose_tv"
                android:background="#f2f3f5"></View>

            <TextView
                android:id="@+id/card_actice_choose_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:textColor="#999999"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/card_actice_choose_tv"
                android:background="#f2f3f5"></View>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="34dp"
                android:layout_toStartOf="@+id/card_active_query_bt">

                <EditText
                    android:id="@+id/card_active_no_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@drawable/customer_password_border"
                    android:hint="@string/card_enter_phone"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:singleLine="true"
                    android:textColorHint="#d2d2d5"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/card_active_no_clean_iv"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/card_del"
                    android:visibility="visible" />
            </RelativeLayout>

            <Button
                android:id="@+id/card_active_query_bt"
                android:layout_width="145dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btn_bottom_selector"
                android:gravity="center"
                android:text="@string/card_import_query"
                android:textColor="@color/text_white"
                android:textSize="20sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/card_customer_info_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="36dp"
                android:paddingRight="36dp"
                android:paddingTop="36dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/customer_head" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/memeber_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/customer_list_text_unselected"
                            android:textSize="26sp" />

                        <TextView
                            android:id="@+id/memeber_ismale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text=""
                            android:textColor="@color/customer_list_text_unselected"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/memeber_integral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/card_little_integral"
                            android:drawablePadding="10dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/customer_list_text_unselected"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/memeber_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:drawableLeft="@drawable/card_little_money"
                            android:drawablePadding="10dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/customer_list_text_unselected"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/memeber_grade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textColor="@color/customer_list_text_unselected"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bg_light"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/memeber_card_have_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:layout_marginTop="38dp"
                android:text=""
                android:textColor="#999999"
                android:textSize="18sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <LinearLayout
                    android:id="@+id/actived_card_infos_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="140dp"
                    android:orientation="vertical"></LinearLayout>
            </ScrollView>
        </LinearLayout>

        <Button
            android:id="@+id/card_active_btn"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@drawable/booking_dialog_print_onclick"
            android:gravity="center"
            android:text="@string/customer_active_btn_info"
            android:textColor="@color/card_active_button_selector"
            android:textSize="26sp" />

        <View
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:focusable="true"
            android:focusableInTouchMode="true" />
    </LinearLayout>

</LinearLayout>