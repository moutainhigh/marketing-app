<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/v_main_content"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="11dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_short_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:maxLength="4"
                android:singleLine="true"
                android:paddingTop="0px"
                android:textColor="@color/text_white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_market_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_short_name"
                android:layout_marginTop="1dp"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_short_name"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="1dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_14"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="14dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/dinner_dish_property_icon" />

            <TextView
                android:id="@+id/tv_residue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#fffc1a"
                android:textSize="@dimen/text_12" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/dish_item_bottom_bg"
            android:paddingLeft="10dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_16"
            android:gravity="center_vertical" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_number"
        style="@style/layout.w.w"
        android:layout_gravity="top|right"
        android:background="@drawable/dinner_dish_tip_bg"
        android:gravity="center"
        android:textColor="@color/orderdish_text_orange"
        android:textSize="24sp" />

</FrameLayout>