<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/printer_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@color/beauty_color_2C3031"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/ll_back"
            style="@style/beauty.customer.list.title_button"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/title_back" />

        <ImageView
            android:id="@+id/iv_title_bar_menu"
            style="@style/beauty.customer.list.title_button"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/ll_back"
            android:scaleType="centerInside"
            android:src="@drawable/queue_menu"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_queue_notify_center"
            style="@style/beauty.customer.list.title_button"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_title_bar_menu"
            android:scaleType="centerInside"
            android:src="@drawable/notice_icon"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/tip_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/iv_queue_notify_center"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="22dp"
            android:scaleType="centerInside"
            android:src="@drawable/notice_tip"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/view_notify_tip_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_queue_notify_center"
            android:layout_alignTop="@+id/iv_queue_notify_center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/notice_tips_number_other"
            android:gravity="center"
            android:textColor="@color/text_white"
            android:textSize="@dimen/notification_item_textSize2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/view_notify_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/iv_queue_notify_center"
            android:layout_alignTop="@+id/iv_queue_notify_center"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/order_tips_num_bar_other"
            android:gravity="center"
            android:textColor="@color/notifycenter_tips_trade"
            android:textSize="@dimen/notification_item_textSize2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/customer_title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/beauty_customer_list_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_20"
            android:textStyle="bold"
            tools:visibility="visible" />

        <RadioGroup
            android:id="@+id/customer_ordercenter_titletab_rg"
            android:layout_width="400dp"
            android:layout_height="@dimen/customer_title_items_height"
            android:layout_centerInParent="true"
            android:background="@drawable/beauty_customer_title_order_bg"
            android:orientation="horizontal"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/card_sell_rb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/customer_card_sale"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_15"
                android:visibility="gone" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/beauty_color_959798"
                android:visibility="gone" />


            <RadioButton
                android:id="@+id/member_store_value_rb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="@string/customer_member_storevalue"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_15" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/beauty_color_959798" />

            <RadioButton
                android:id="@+id/card_store_value_rb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="@string/card_time_storevalue"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_15" />

            <!--<RadioButton-->
            <!--android:id="@+id/entity_card_change_rb"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@drawable/customer_ordercenter_titletab_selector"-->
            <!--android:button="@null"-->
            <!--android:gravity="center"-->
            <!--android:text="@string/customer_entity_card_change"-->
            <!--android:textColor="@color/text_white"-->
            <!--android:textSize="@dimen/text_15" />-->
        </RadioGroup>

        <!--<RelativeLayout-->
        <!--android:id="@+id/ivCreate_Customer"-->
        <!--android:layout_width="120dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="21dp"-->
        <!--android:background="@drawable/beauty_btn_customer_add_customer">-->

        <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:gravity="center"-->
        <!--android:orientation="horizontal">-->

        <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="6dp"-->
        <!--android:src="@drawable/beauty_ic_create_customer" />-->

        <com.zhongmei.beauty.widgets.DrawableCenterTextView
            android:id="@+id/ivCreate_Customer"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="21dp"
            android:background="@drawable/beauty_btn_customer_add_customer"
            android:drawableLeft="@drawable/beauty_ic_create_customer"
            android:drawablePadding="4dp"
            android:gravity="left|center"
            android:text="@string/beauty_customer_add_customer"
            android:textColor="@color/beauty_btn_customer_add_customer_text"
            android:textSize="@dimen/text_12" />
        <!--</LinearLayout>-->
        <!--</RelativeLayout>-->
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/beauty_line" />

    <RelativeLayout
        android:id="@+id/titleRightView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/customer_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/beauty_customer_detail_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_20"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/customer_edit"
            style="@style/title_icon_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/customer_edit1"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>