<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dp900_shopping_cart_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left"
            android:maxLines="2"
            android:textColor="@color/print_text_black"
            android:textSize="28px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dp900_shopping_cart_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20px"
            android:gravity="center"
            android:padding="10px"
            android:singleLine="true"
            android:text="@string/dinner_order_center_goods_item_quantity"
            android:textColor="@color/print_text_black"
            android:textSize="28px"
            android:textStyle="bold" />

        <com.zhongmei.bty.commonmodule.view.AutofitTextView
            android:id="@+id/dp900_shopping_cart_item_total"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:gravity="right"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="#ff7b23"
            android:textSize="28px"
            android:textStyle="bold"
            autofit:minTextSize="14px" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/dp900_shopping_cart_layout_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13px">

        <TextView
            android:id="@+id/dp900_shopping_cart_item_method_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@string/heji"
            android:textColor="#666666"
            android:textSize="22px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dp900_shopping_cart_item_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/dp900_shopping_cart_item_method_total"
            android:singleLine="true"
            android:text="@string/print_trade_name"
            android:textColor="#666666"
            android:textSize="22px"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dp900_shopping_cart_layout_charge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13px">

        <TextView
            android:id="@+id/dp900_shopping_cart_item_charge_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@string/heji"
            android:textColor="#666666"
            android:textSize="22px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dp900_shopping_cart_item_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/dp900_shopping_cart_item_charge_total"
            android:singleLine="true"
            android:text="@string/print_trade_name"
            android:textColor="#666666"
            android:textSize="22px"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20px"
        android:background="#e2e6eb" />

</LinearLayout>