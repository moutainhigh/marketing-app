<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4ab6f6"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/customer_alter_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/left_menu_customer_alter_bg"
        android:orientation="vertical">

        <com.zhongmei.bty.commonmodule.view.AutofitTextView
            android:id="@+id/customer_alter_status"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="9dp"
            android:background="@drawable/bg_oval_blue_shap"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/customer_arrived"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_12"
            android:visibility="visible" />

        <TextView
            android:id="@+id/customer_alter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="5"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/text_12"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>