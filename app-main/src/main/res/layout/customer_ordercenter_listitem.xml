<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_time_tv"
            style="@style/customer_ordercenter_listitem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="left|center_vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_number_tv"
                style="@style/customer_ordercenter_listitem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/iv_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/lable_bg_black_border_333333_22px_radius"
                android:paddingBottom="2dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="2dp"
                android:text="@string/anonymous_entity"
                android:textColor="@color/color_333333"
                android:textSize="7sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/sell_price_tv"
            style="@style/customer_ordercenter_listitem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:maxLines="2"
            android:singleLine="false" />

        <TextView
            android:id="@+id/operater_tv"
            style="@style/customer_ordercenter_listitem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/device_number_tv"
            style="@style/customer_ordercenter_listitem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5" />

        <TextView
            android:id="@+id/card_order_status_tv"
            style="@style/customer_ordercenter_listitem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5" />
    </LinearLayout>

</LinearLayout>