<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54.67dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical">

    <CheckBox
        android:id="@+id/cb_select_label_device"
        android:layout_width="29.33dp"
        android:layout_height="29.33dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="14.67dp"
        android:button="@null"
        android:background="@drawable/retail_choose_label_device_item_selector" />

    <TextView
        android:id="@+id/tv_label_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="16sp" />


</LinearLayout>