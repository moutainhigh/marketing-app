<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_parent"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View
        android:id="@+id/topline"
        style="@style/style_topline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp" />

        <!-- 菜名 -->
        <RelativeLayout
            android:id="@+id/dishView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="3dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price"
                    style="@style/layout.w.w"
                    android:layout_height="wrap_content"
                    android:minWidth="20dp"
                    android:text="2434"
                    android:textColor="@color/orderdish_text_black"
                    android:textSize="@dimen/text_18" />

                <Button
                    android:id="@+id/btn_edit_deposit"
                    style="@style/buffet_btn_tradefinish"
                    android:layout_width="60dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/edit"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dishNumPriceView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    style="@style/dinnerdishTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:ellipsize="end"
                    android:textColor="@color/orderdish_text_black"
                    android:gravity="bottom"
                    android:text="dddd"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/property"
                    style="@style/layout.w.w"
                    android:layout_marginLeft="0dp"
                    android:text="dddd"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_10" />
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
</LinearLayout>