<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 列标题 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="@string/handover_type"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="@string/handover_cash_box_amount"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="@string/print_order_amount"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="@string/print_valued_amount"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="@string/handover_amount"
            android:visibility="gone"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="@string/handover_actual_amount"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="@string/handover_diff_amount"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 明细 -->

    <LinearLayout
        android:id="@+id/handover_cash_list_finish"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"></LinearLayout>
    <!-- 合计 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DBDBDB" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <com.zhongmei.bty.basemodule.shopmanager.handover.views.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/handover_list_total"
                android:textColor="#5e605f"
                android:textSize="16sp" />

            <com.zhongmei.bty.basemodule.shopmanager.handover.views.CustomTextView
                android:id="@+id/txtTotal_cash_box_amount_finish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="#5e605f"
                android:textSize="16sp" />

            <com.zhongmei.bty.basemodule.shopmanager.handover.views.CustomTextView
                android:id="@+id/txtTotal_order_amount_finish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="#5e605f"
                android:textSize="16sp" />

            <com.zhongmei.bty.basemodule.shopmanager.handover.views.CustomTextView
                android:id="@+id/txtTotal_valuecard_amount_finish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="#5e605f"
                android:textSize="16sp" />

            <com.zhongmei.bty.basemodule.shopmanager.handover.views.CustomTextView
                android:id="@+id/txtTotal_amount_finish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="#5e605f"
                android:visibility="gone"
                android:textSize="16sp" />

            <com.zhongmei.bty.basemodule.shopmanager.handover.views.CustomTextView
                android:id="@+id/txtTotal_actual_amount_finish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="#5e605f"
                android:textSize="16sp" />

            <com.zhongmei.bty.basemodule.shopmanager.handover.views.CustomTextView
                android:id="@+id/txtTotal_diff_amount_finish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="#5e605f"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 销货单统计 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sale_order_count_finish"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/orderdish_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/refund_order_count_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="60dp"
                android:textColor="@color/orderdish_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/credit_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/orderdish_text_black"
                android:text="@string/handover_creditnum_label"
                android:textSize="16sp" />

        </LinearLayout>
        <!-- 储值单统计 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sale_valuecard_count_finish"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/orderdish_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/refund_valuecard_count_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="60dp"
                android:textColor="@color/orderdish_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/credit_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/orderdish_text_black"
                android:text="@string/handover_creditamount_label"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>