<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/booking_create_s_agent_label"
                    style="@style/style_label"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/booking_create_s_agent_label"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/booking_create_s_manager_label"
                    style="@style/style_label"
                    android:layout_width="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:text="@string/booking_create_s_manager_label"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/booking_create_s_agent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:background="@drawable/booking_create_info_item_bg"
                    android:textColor="#333333"
                    android:prompt="@string/booking_agent_prompt"
                    android:popupBackground="@drawable/button_gray_bg"
                    android:divider="@drawable/list_divider"
                    android:dividerHeight="0.5dp"
                    android:dropDownSelector="@android:drawable/list_selector_background" />

                <Spinner
                    android:id="@+id/booking_create_s_manager"
                    style="@style/spinner_style"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:background="@drawable/booking_create_info_item_bg"
                    android:textColor="#333333"
                    android:prompt="@string/booking_agent_prompt"
                    android:popupBackground="@drawable/button_gray_bg"
                    android:divider="@drawable/list_divider"
                    android:dividerHeight="0.5dp"
                    android:dropDownSelector="@android:drawable/list_selector_background"
                    android:layout_marginStart="15dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/booking_create_s_mark_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/booking_create_s_mark_label"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <EditText
                android:id="@+id/booking_create_s_mark"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/booking_create_info_item_bg"
                android:textSize="14sp"
                android:hint="@string/booking_create_remark_hint"
                android:paddingLeft="10dp" />


            <TextView
                android:id="@+id/booking_create_s_environment_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="12sp"
                android:text="@string/booking_create_s_environment_label" />

            <com.zhongmei.yunfu.ui.view.WrapGridView
                android:id="@+id/booking_create_s_envir_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:horizontalSpacing="10dp"
                android:numColumns="4"
                android:verticalSpacing="10dp" />

            <TextView
                android:id="@+id/booking_create_s_from_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="12sp"
                android:text="@string/booking_create_s_from_label" />

            <com.zhongmei.yunfu.ui.view.WrapGridView
                android:id="@+id/booking_create_s_from_gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_horizontal"
                android:horizontalSpacing="10dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="4"
                android:scrollbars="none"
                android:verticalSpacing="10dp" />
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_dotted_line"
        android:layout_marginBottom="10dp" />

    <CheckBox
        android:id="@+id/booking_create_s_important"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:button="@drawable/booking_create_choose_selector"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        android:text="@string/booking_create_s_important"
        android:textColor="#333333"
        android:checked="true" />

</LinearLayout>