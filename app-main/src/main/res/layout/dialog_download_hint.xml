<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="150dp">



    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="120dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="75dp"
        android:background="@drawable/bg_rect_gray"
        >

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="正在下载中，请稍等。。。"
            android:gravity="center_horizontal"
            android:textColor="@color/bg_white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_negative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/beauty_text_white"
                android:background="@drawable/beauty_btn_dialog_cancel_selector"
                android:visibility="gone"
                android:text="取消"
                />

            <Button
                android:id="@+id/btn_positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/beauty_btn_main_selector"
                android:textColor="@color/text_white"
                android:visibility="gone"
                android:text="确定"
                />

        </LinearLayout>

    </RelativeLayout>


    <com.zhongmei.yunfu.ui.view.RoundProgressBar
        android:id="@+id/pb_round"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/bg_round_gray"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

</RelativeLayout>