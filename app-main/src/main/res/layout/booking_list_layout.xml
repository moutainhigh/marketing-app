<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/customer_card_bg"
    android:orientation="vertical"
    android:padding="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@drawable/customer_card_bg_top"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/booking_pre_date"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/left_arrow_slector" />

        <android.support.v4.view.ViewPager
            android:id="@+id/booking_date_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none" />

        <ImageView
            android:id="@+id/booking_next_date"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/right_arrow_selector" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_gray" />

    <include layout="@layout/booking_listview_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customer_card_bg_bottom"
        android:orientation="horizontal"
        android:padding="-0.5dp">

        <com.zhongmei.bty.customer.views.DrawableLeftCenterTextView
            android:id="@+id/booking_group_order"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@drawable/booking_bottom_left_btn_white_bg"
            android:drawableLeft="@drawable/booking_group"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:text="@string/booking_create_group_booking"
            android:textColor="#32ADF6"
            android:textSize="18sp" />

        <com.zhongmei.bty.customer.views.DrawableLeftCenterTextView
            android:id="@+id/booking_create_order"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@drawable/booking_bottom_right_btn_white_bg"
            android:drawableLeft="@drawable/booking_dinner"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:text="@string/booking_create_order"
            android:textColor="#32ADF6"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>