<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:minHeight="50dp"
    android:background="@color/bg_white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_centerVertical="true"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dialog_operate_reason_list_item_size"
        android:gravity="center"
        android:paddingLeft="9dp" />

    <com.zhongmei.bty.commonmodule.view.CurrencyTextView
        android:id="@+id/tv_hint"
        style="@style/buffet_trade_property_hint"
        android:layout_toRightOf="@id/tv_name"
        android:layout_alignBaseline="@id/tv_name"
        android:layout_marginLeft="10dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_decrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_decrease_selector" />

        <EditText
            android:id="@+id/et_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="50dp"
            android:singleLine="true"
            android:text="1"
            android:padding="10dp"
            android:textColor="@color/text_black"
            android:background="@color/transparent"
            android:inputType="number"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="@dimen/dialog_operate_reason_list_item_size" />

        <ImageButton
            android:id="@+id/ib_increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_increase_selector"
            android:layout_marginRight="9dp" />
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        style="@style/buffet_horizontal_line"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
