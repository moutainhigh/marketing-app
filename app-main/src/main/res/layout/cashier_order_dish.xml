<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DADBDA">

    <LinearLayout
        style="@style/layout.m.m"
        android:orientation="horizontal">

        <com.zhongmei.bty.snack.orderdish.OrderDishLeftBand_View_
            android:id="@+id/order_dish_left_band"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="16dp"
            android:layout_weight="3"
            android:background="@drawable/orderdish_bg"
            android:orientation="vertical" />

        <com.zhongmei.bty.snack.orderdish.OrderDishRightBand_View_
            android:id="@+id/order_dish_right_band"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="2"
            android:background="@drawable/orderdish_bg" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>