<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:id="@+id/v_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/coupons_item_bg_cash"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/ll_center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.8"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_coupons_gift_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:maxLength="20"
                android:textColor="#333333"
                android:textSize="20dp"
                tools:text="中式大餐" />

            <TextView
                android:id="@+id/tv_coupons_type_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="13dp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="12dp"
                tools:text="好礼送不停" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time_limit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:textColor="#666666"
            android:textSize="10.6dp"
            tools:text="2015-09-90丟789933" />

        <LinearLayout
            android:id="@+id/item_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1.4"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/dinner_order_center_showinfo"
                android:textColor="#333333"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/tv_market_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="14dp"
                android:background="@android:color/transparent"
                android:src="@drawable/notifycenter_to_right" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:background="@drawable/coupons_item_selected_icon" />

</FrameLayout>