<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dinner_left_menu_width"
    android:layout_height="match_parent"
    android:background="#4ab6f6"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <!--<com.zhongmei.bty.basemodule.queue.TurnToOtherModuleView
        android:id="@+id/ll_back"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:background="@drawable/green_bg_onclick"
        android:visibility="gone" />-->

    <ImageView
        android:id="@+id/dinner_bar_menu_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_bg_onclick"
        android:contentDescription="@null"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:src="@drawable/cashier_main_menu" />

    <View
        android:layout_width="72dp"
        android:layout_height="2dp"
        android:background="@drawable/dinner_blue_separator" />

    <FrameLayout
        android:id="@+id/rl_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_bg_onclick">

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/dinner_notice_icon"
            android:gravity="center"
            android:text="@string/order_dish_notice"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_11" />

        <TextView
            android:id="@+id/view_notify_tip_other"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/notice_tips_number_other_shape"
            android:gravity="center"
            android:minWidth="16dp"
            android:textColor="@color/text_white"
            android:textSize="@dimen/notification_item_textSize2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/view_notify_tip"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/order_tips_number_bar_other_shape"
            android:gravity="center"
            android:minWidth="16dp"
            android:textColor="@color/notifycenter_tips_trade"
            android:textSize="@dimen/notification_item_textSize2"
            android:visibility="gone" />

    </FrameLayout>

    <View
        android:layout_width="72dp"
        android:layout_height="2dp"
        android:background="@drawable/dinner_blue_separator" />

    <LinearLayout
        android:id="@+id/ll_customer"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/green_bg_onclick"
        android:orientation="vertical"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/fl_customer"
            android:layout_width="match_parent"
            android:layout_height="88dp">

            <com.zhongmei.bty.commonmodule.view.AutofitTextView
                android:id="@+id/tv_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/left_menu_customer_icon"
                android:gravity="center"
                android:text="@string/label_customer_arrive_history"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_11" />

            <TextView
                android:id="@+id/view_notify_customer"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="top|right|center_horizontal"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/notice_tips_number_other_shape"
                android:gravity="center"
                android:minWidth="16dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:text="new"
                android:textColor="@color/text_white"
                android:textSize="@dimen/notification_item_textSize2"
                android:visibility="gone" />
        </FrameLayout>

        <View
            android:layout_width="72dp"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/dinner_blue_separator" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlDinner_bomb_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/dinner_bomb_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_bg_onclick"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/icon_bomb_box"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/cashbox"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_11" />

        <View
            android:layout_width="72dp"
            android:layout_height="2dp"
            android:layout_below="@id/dinner_bomb_box"
            android:background="@drawable/dinner_blue_separator" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlDinner_queue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dinner_queue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_bg_onclick"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/icon_dinner_queue"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/queue_app_name"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_11" />

        <View
            android:layout_width="72dp"
            android:layout_height="2dp"
            android:layout_below="@id/dinner_queue"
            android:background="@drawable/dinner_blue_separator" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlDinner_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dinner_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_bg_onclick"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/icon_dinner_booking"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/booking"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_11" />

        <View
            android:layout_width="72dp"
            android:layout_height="2dp"
            android:layout_below="@id/dinner_booking"
            android:background="@drawable/dinner_blue_separator" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlDinner_Group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dinner_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_bg_onclick"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/icon_dinner_group"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/group_app_name"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_11" />

        <View
            android:layout_width="72dp"
            android:layout_height="2dp"
            android:layout_below="@id/dinner_group"
            android:background="@drawable/dinner_blue_separator" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlDinner_Dinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dinner_dinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_bg_onclick"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/icon_dinner_dinner"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/dinner"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_11" />

        <View
            android:layout_width="72dp"
            android:layout_height="2dp"
            android:layout_below="@id/dinner_dinner"
            android:background="@drawable/dinner_blue_separator" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <!--
      <ImageView
          android:id="@+id/dinner_left_logo_img"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:contentDescription="@null"
          android:src="@drawable/logo" />
  -->

    <TextView
        android:id="@+id/dinner_left_login_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:contentDescription="@null"
        android:drawablePadding="2dp"
        android:drawableTop="@drawable/dinner_unlogin_icon"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_11" />

    <ToggleButton
        android:id="@+id/btn_switch_lang"
        android:layout_width="42dp"
        android:layout_height="23dp"
        android:layout_marginBottom="13dp"
        android:gravity="center_horizontal"
        android:background="@drawable/lang_switch_selector"
        android:checked="false"
        android:textOff=""
        android:textOn=""
        android:visibility="gone" />
</LinearLayout>