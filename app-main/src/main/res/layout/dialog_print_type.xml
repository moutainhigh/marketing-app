<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/settings_rightTitle"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:background="@drawable/cashier_bg_title_bar">

        <ImageView
            android:id="@+id/set_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/settings_close_btn" />

        <TextView
            android:id="@+id/net_printer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/setting_print_type_choose_print_type"
            android:textColor="@color/bg_white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/common_save"
            style="@drawable/usual_address_bt"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_top_bg"
            android:text="@string/common_save"
            android:textColor="@drawable/printer_title_text_color"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_print_type_wpt810"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_vertical"
                android:padding="24dp"
                android:background="@drawable/item_btn_bg"
                android:text="@string/setting_print_type_wpt_990"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/text_print_type_wpt990"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_gravity="center_vertical"
                android:padding="24dp"
                android:background="@drawable/item_btn_bg"
                android:text="@string/setting_print_type_wpt_810"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/text_print_type_kry610"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_gravity="center_vertical"
                android:padding="24dp"
                android:background="@drawable/item_btn_bg"
                android:text="@string/setting_print_type_kr_610"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/text_print_type_wpt300i"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_gravity="center_vertical"
                android:padding="24dp"
                android:background="@drawable/item_btn_bg"
                android:text="@string/setting_print_type_kr_300i"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/text_print_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_gravity="center_vertical"
                android:padding="24dp"
                android:background="@drawable/item_btn_bg"
                android:text="@string/setting_print_type_other"
                android:textColor="@color/black"

                android:textSize="22sp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>