<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="28dp"
    android:paddingRight="28dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/igLogo"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:scaleType="fitCenter"
            android:src="@drawable/download_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/h5_down_title"
                android:textColor="#333333"
                android:textSize="16sp" />

            <ProgressBar
                android:id="@+id/pbChanged"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:layout_marginRight="120dp"
                android:layout_marginTop="11dp"
                android:max="100"
                android:progress="30"
                android:progressDrawable="@drawable/h5_download_progress_bar" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:text="正在下载：0M/50M"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvResume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/download_resume_selector"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:text="@string/h5_down_already_stop"
            android:textColor="#525252"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/download_pause_selector"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:text="@string/h5_down_stop"
            android:textColor="#525252"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvInstall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/download_install_selector"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:text="@string/h5_down_install"
            android:textColor="#525252"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/download_delete_selector"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:text="@string/h5_down_delete"
            android:textColor="#525252"
            android:textSize="11sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DDDDDD" />
</LinearLayout>