<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:fitsSystemWindows="true"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="373dp"
        android:layout_height="480dp"
        android:layout_gravity="center"
        android:background="@drawable/customer_charging_bg">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:text="@string/uion_active_band_card_title"
            android:textColor="@color/text_red_2"
            android:textSize="21sp"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/tv_title"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_15" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/close_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="17dp"
            android:layout_below="@id/tv_title_name"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:background="@color/color_F6F6F6"
                    android:gravity="center_vertical"
                    android:text="@string/keyat_yaz_bind_card_choose"
                    android:textColor="@color/color_999999"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_bind_member"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/selector_uion_sale_and_active_btn"
                    android:gravity="center"
                    android:text="@string/keyat_yaz_bind_member"
                    android:textColor="@color/select_uion_sale_and_active"
                    android:textSize="@dimen/text_18" />

                <TextView
                    android:id="@+id/tv_bind_member_none"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/selector_uion_sale_and_active_btn"
                    android:gravity="center"
                    android:text="@string/keyat_yaz_bind_member_none"
                    android:textColor="@color/select_uion_sale_and_active"
                    android:textSize="@dimen/text_18" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_active_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="34dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="@string/keyat_yaz_bind_card_active_none"
                android:textColor="#27acf9"
                android:textSize="@dimen/text_16" />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>