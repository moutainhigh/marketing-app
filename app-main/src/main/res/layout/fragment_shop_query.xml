<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trade_orderdish_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activation_shopQuery_title_marginTop"
        android:text="@string/selft_activation"
        android:textColor="@color/dinner_label_printed"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/input_info_and_config_then_use"
        android:textColor="@color/second_title_gray"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="540dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activation_shopQuery_content_marginTop"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/shop_no"
            android:textColor="@color/second_title_gray"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_shop_no"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/customer_edit_bg"
            android:gravity="center_vertical"
            android:hint="@string/please_input_shop_no"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:maxLength="9"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/btn_green_selector"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/text_white"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/if_have_no_shop"
                android:textColor="@color/second_title_gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_click_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:autoLink="all"
                android:text="@string/click_to_register"
                android:textColor="@color/title_blue"
                android:textSize="18sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activation_shopQuery_explain_marginTop"
            android:text="@string/shop_no_notice"
            android:textColor="@color/notice_title_gray"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/shop_no_notice_content_1"
            android:textColor="@color/notice_content_gray"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/shop_no_notice_content_2"
            android:textColor="@color/notice_content_gray"
            android:layout_marginBottom="84dp"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>