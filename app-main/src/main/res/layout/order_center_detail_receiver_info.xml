<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_delivery_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:text="type "
            android:textColor="@color/dinner_dishname_color"
            android:textSize="@dimen/text_14" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_dinner_order_center_detail_content_item"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="24dp">

            <TextView
                android:id="@+id/tv_delivery_name"
                style="@style/payinfo_item_text_style"
                tools:text="TextView" />

            <TextView
                android:id="@+id/tv_delivery_phone"
                style="@style/payinfo_item_text_style"
                tools:text="TextView" />

            <TextView
                android:id="@+id/tv_delivery_time"
                style="@style/payinfo_item_text_style"
                android:gravity="right"
                tools:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_delivery_address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dfe4e9" />

            <TextView
                android:id="@+id/tv_delivery_address"
                style="@style/payinfo_item_text_style"
                android:layout_width="match_parent"
                android:paddingBottom="24dp"
                android:paddingTop="24dp"
                tools:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_delivery_invoice_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dfe4e9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_delivery_invoice_title"
                    style="@style/payinfo_item_text_style"
                    tools:text="TextView" />

                <TextView
                    android:id="@+id/tv_delivery_invoice_code"
                    style="@style/payinfo_item_text_style"
                    tools:text="TextView" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dfe4e9" />
    </LinearLayout>

</LinearLayout>