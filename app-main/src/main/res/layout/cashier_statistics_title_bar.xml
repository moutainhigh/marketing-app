<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="86sp"
    android:background="@drawable/cashier_bg_title_bar"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/statistics_title_bar_menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="3.0dip"
        android:gravity="center"
        android:src="@drawable/cashier_main_menu" />

    <TextView
        android:id="@+id/title_bar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="75.0dip"
        android:paddingRight="75.0dip"
        android:singleLine="true"
        android:text="@string/statistics"
        android:textColor="@color/text_white"
        android:textSize="22sp" />

</RelativeLayout>