<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/v_top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"
        android:visibility="visible" />

    <!-- 菜名 -->

    <LinearLayout
        android:id="@+id/ll_dish_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/enable_whole_privilege"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/order_center_whole_privilege"
                android:layout_marginRight="8dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_dish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:ellipsize="end"
                android:singleLine="false"
                android:textColor="#555555"
                android:textSize="@dimen/text_12"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_technician"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_vertical"
                android:textSize="10sp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:layout_marginLeft="12dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/produce_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="7sp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:layout_marginLeft="12dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/pack_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="30dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@drawable/lable_bg_orange_fdaf33_2px_radius"
                android:layout_marginLeft="12dp"
                android:textColor="@color/color_ffffff"
                android:textSize="7sp"
                android:padding="2dp"
                android:text="@string/packup"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_dish_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#555555"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tv_singledish_price"
            style="@style/layout.w.w"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#555555"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/tv_dish_price"
            style="@style/layout.w.w"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#555555"
            android:textSize="@dimen/text_12" />
    </LinearLayout>

    <!-- 口味做法 -->

    <LinearLayout
        android:id="@+id/ll_dish_property"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_property_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:textColor="#84898e"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/tv_property_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#555555"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tv_property_price"
            style="@style/layout.w.w"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#555555"
            android:textSize="@dimen/text_12"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_property_amount"
            style="@style/layout.w.w"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#555555"
            android:textSize="@dimen/text_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dish_extra"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_extra_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:textColor="#84898e"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/tv_extra_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#555555"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/tv_extra_price"
            style="@style/layout.w.w"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#555555"
            android:textSize="@dimen/text_12"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_extra_amount"
            style="@style/layout.w.w"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#555555"
            android:textSize="@dimen/text_12" />
    </LinearLayout>

</LinearLayout>