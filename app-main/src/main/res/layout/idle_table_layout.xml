<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/queue_content_margin"
    android:layout_marginLeft="@dimen/queue_content_margin2"
    android:layout_marginRight="@dimen/queue_content_margin"
    android:layout_marginTop="@dimen/queue_content_margin"
    android:background="@drawable/customer_card_bg"
    android:orientation="vertical"
    android:padding="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/queue_area_pre"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/left_arrow_slector" />

        <android.support.v4.view.ViewPager
            android:id="@+id/arealine_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none"></android.support.v4.view.ViewPager>

        <ImageView
            android:id="@+id/queue_area_next"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/right_arrow_selector" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line" />

    <TextView
        android:id="@+id/tv_queue_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:maxEms="5"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="全部" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridView
            android:id="@+id/gv_table"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="12dp"
            android:horizontalSpacing="12dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:scrollbars="none" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_line" />

        <LinearLayout
            android:id="@+id/idle_table_buttom_button"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:visibility="visible"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/idle_table_entry_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/booking_selecte_table_green_btn"
                android:gravity="center"
                android:text="@string/direct_entry"
                android:textColor="@color/text_white"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/text_20" />

            <Button
                android:id="@+id/idle_table_entry_start_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/booking_selecte_table_blue_btn"
                android:gravity="center"
                android:text="@string/entry_and_open_table"
                android:textColor="@color/text_white"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/text_20" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>