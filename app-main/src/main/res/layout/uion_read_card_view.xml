<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlTitle_ReadCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_blue">

        <View
            android:id="@+id/vwLine_ReadCard"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#62C5FF" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/read_card_title"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_22"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="@dimen/uion_read_card_layout_margin"
        android:layout_marginTop="@dimen/uion_read_card_layout_margin"
        android:layout_marginBottom="@dimen/uion_read_card_layout_margin"
        android:background="@drawable/uion_read_card_layout">

        <include layout="@layout/uion_read_card_layout" />

        <!--<include layout="@layout/uion_read_card_loading" />-->

        <!--<include layout="@layout/uion_read_card_success" />-->

        <!--<include layout="@layout/uion_read_card_error" />-->
    </RelativeLayout>

</LinearLayout>