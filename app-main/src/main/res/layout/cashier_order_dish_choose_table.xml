<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/verify_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/table_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:id="@+id/table_tips_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/table_timeout_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:drawableLeft="@drawable/icon_table_timeout"
                    android:text="@string/timeout_str"
                    android:textColor="@color/settings_grayword"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@id/table_timeout_tips"
                    android:drawableLeft="@drawable/icon_table_occupied"
                    android:text="@string/occupied_str"
                    android:textColor="@color/settings_grayword"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/change_table_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:text="@string/change_table"
                android:textColor="@color/change_table_button_selector"
                android:drawableLeft="@drawable/change_table_icon_selector"
                android:drawablePadding="5dp" />

            <CheckBox
                android:id="@+id/table_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/available_table_str"
                android:textColor="@color/date_bg"
                android:layout_alignParentRight="true"
                android:paddingLeft="5dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:button="@drawable/buffet_table_chek_selector" />

            <TextView
                android:id="@+id/check_table_mode_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_table"
                android:textColor="@color/text_black"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/change_table_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_table_tips"
                android:textColor="#ff7901"
                android:textSize="18sp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/exit_change_table_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/dinner_close"
            android:layout_marginRight="15dp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#e6ebef" />

    <TextView
        android:id="@+id/change_table_click_tips"
        android:layout_width="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_height="24dp"
        android:textColor="#ff6a4d"
        android:background="#ffefe4"
        android:textSize="14sp"
        android:gravity="center"
        android:text="@string/change_table_click_tips"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <Button
                    android:id="@+id/left_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_left_arrow" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewPager_dish_number_area"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scrollbars="none"></android.support.v4.view.ViewPager>

                <Button
                    android:id="@+id/right_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_right_arrow" />
            </LinearLayout>

            <View
                android:id="@+id/type_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef" />

            <GridView
                android:id="@+id/gridView_dish_number"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="9dp"
                android:layout_weight="1"
                android:horizontalSpacing="12dp"
                android:listSelector="@color/transparent"
                android:numColumns="3"
                android:scrollbarFadeDuration="500"
                android:verticalSpacing="12dp"></GridView>

            <include layout="@layout/confirm_layout" />
        </LinearLayout>

        <ImageView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/table_loading"
            android:visibility="visible" />

        <TextView
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="12dp"
            android:singleLine="true"
            android:text="@string/order_dish_no_tables"
            android:textColor="#aebbc4"
            android:textSize="@dimen/text_24"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>