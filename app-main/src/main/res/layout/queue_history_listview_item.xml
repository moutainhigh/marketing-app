<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/queue_list_item_height"
    android:background="@color/bg_white"
    android:minHeight="@dimen/queue_list_item_height"
    android:orientation="horizontal">

    <View
        android:id="@+id/history_selected_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/queue_list_item_height"
        android:background="#2032ADF6"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/queue_list_item_height"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_queue_history_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A002号"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/queue_list_item_text1_size" />

                <TextView
                    android:id="@+id/id_queue_history_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/queue_waitting_min"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/queue_list_item_text2_size" />
            </LinearLayout>

            <ImageView
                android:id="@+id/booking_ex_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:src="@drawable/queue_order_dish"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_queue_history_personcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18人"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/queue_list_item_text1_size" />

            <TextView
                android:id="@+id/id_queue_history_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="匿名客户"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/queue_list_item_text2_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_remind"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/queue_history_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/queue_remind"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/id_queue_history_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:text="18012345678"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/queue_list_item_text2_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:gravity="center_vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/lv_queue_goin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/queue_list_item_in_selector"
                    android:contentDescription="@null"
                    android:scaleType="centerInside" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/lv_queue_revocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/queue_list_item_recovr_selector"
                    android:contentDescription="@null"
                    android:scaleType="centerInside" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/queue_history_show_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/queue_list_item_detail_selector" />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>