<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F0F3F6"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/receipt_title"
        style="@style/settings_rightTitle"
        android:background="@drawable/cashier_bg_title_bar"
        android:orientation="horizontal"
        android:paddingRight="@dimen/print_setting_content_margin_left">

        <RelativeLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/print_setting_content_margin_left"
            android:paddingRight="@dimen/print_setting_content_margin_left">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/print_setting_back_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/queue_tv_miracast"
            android:textColor="@color/bg_white"
            android:textSize="@dimen/setting_title_bar_size" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="@dimen/print_setting_item_btn_width"
            android:layout_height="@dimen/print_setting_item_btn_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/print_setting_title_btn_selector"
            android:text="@string/common_save"
            android:textColor="@color/write"
            android:textSize="@dimen/print_setting_item_title_size"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        style="@style/setting_right_content_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<TextView
            style="@style/setting_switch_item_title_text"
            android:text="@string/queue_tv_miracast_switch" />

        <LinearLayout style="@style/setting_switch_item">

            <TextView
                style="@style/setting_switch_item_text"
                android:text="@string/queue_tv_miracast_switch" />

            <ToggleButton
                android:id="@+id/queue_tv_miracast_switch"
                style="@style/setting_switch_item_toggle" />
        </LinearLayout>-->

        <LinearLayout
            android:id="@+id/queue_tv_miracast_ip_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/print_setting_item_title_style"
                android:text="@string/queue_tv_miracast_ip" />

            <com.zhongmei.bty.settings.view.PrintIPAdressSetLayout_
                android:id="@+id/settings_ip_address_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/setting_dinner_switch_item_margin_top"
                android:gravity="center_horizontal"
                android:orientation="horizontal" />

            <Button
                android:id="@+id/print_id_address_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_dinner_switch_item_height"
                android:layout_marginTop="@dimen/setting_dinner_switch_item_margin_top"
                android:background="@drawable/setting_blue_btn_selector"
                android:text="@string/common_save"
                android:textColor="#28ACF9"
                android:textSize="@dimen/print_setting_btn_size" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>