<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/number_one"
            style="@style/zm_login_number_style"
            android:layout_marginRight="@dimen/zm_login_number_marginRight"
            android:text="1" />

        <Button
            android:id="@+id/number_two"
            style="@style/zm_login_number_style"
            android:layout_marginRight="@dimen/zm_login_number_marginRight"
            android:text="2" />

        <Button
            android:id="@+id/number_three"
            style="@style/zm_login_number_style"
            android:text="3" />
    </LinearLayout>
    <!-- 4,5,6 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_number_marginTop"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/number_four"
            style="@style/zm_login_number_style"
            android:layout_marginRight="@dimen/zm_login_number_marginRight"
            android:text="4" />

        <Button
            android:id="@+id/number_five"
            style="@style/zm_login_number_style"
            android:layout_marginRight="@dimen/zm_login_number_marginRight"
            android:text="5" />

        <Button
            android:id="@+id/number_six"
            style="@style/zm_login_number_style"
            android:text="6" />
    </LinearLayout>
    <!-- 7,8,9 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_number_marginTop"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/number_seven"
            style="@style/zm_login_number_style"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="@dimen/zm_login_number_marginRight"
            android:text="7"
            android:textSize="14sp" />

        <Button
            android:id="@+id/number_eight"
            style="@style/zm_login_number_style"
            android:layout_marginRight="@dimen/zm_login_number_marginRight"
            android:text="8" />

        <Button
            android:id="@+id/number_nine"
            style="@style/zm_login_number_style"
            android:text="9" />
    </LinearLayout>
    <!-- change user,0,delete -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_number_marginTop"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/number_clean"
            style="@style/zm_login_number_style"
            android:layout_marginRight="@dimen/zm_login_number_marginRight"
            android:text="@string/keyboard_clear"
            android:textColor="@drawable/tv_color_selector" />

        <TextView
            android:id="@+id/number_zero"
            style="@style/zm_login_number_style"
            android:layout_marginRight="@dimen/zm_login_number_marginRight"
            android:text="0" />

        <ImageButton
            android:id="@+id/number_delete"
            style="@style/zm_login_number_style"
            android:src="@drawable/zm_delete_icon_large" />
    </LinearLayout>

</LinearLayout>