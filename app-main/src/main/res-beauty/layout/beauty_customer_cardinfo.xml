<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/card_no_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/customer_card_num"
            android:textColor="@color/beauty_color_666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/card_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="@color/beauty_color_FF9F00"
            android:textSize="14sp" />

        <ImageView
            style="@style/customer_info_item_img"
            android:contentDescription="@null"
            android:src="@drawable/beauty_ic_yellow_right_arrow" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/beauty_color_D9D9D9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="13dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/card_money_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/customer_detail_item_bg"
                android:paddingLeft="6dp"
                android:paddingRight="6dp">

                <TextView
                    style="@style/customer_info_item_left"
                    android:text="@string/customer_entity_card_yue"
                    android:textColor="@color/beauty_color_333333" />

                <TextView
                    android:id="@+id/card_money"
                    style="@style/customer_info_item_right"
                    android:textColor="@color/beauty_color_FF7901" />

                <ImageView style="@style/customer_info_item_img" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_point_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/customer_detail_item_bg"
                android:paddingLeft="6dp"
                android:paddingRight="6dp">

                <TextView
                    style="@style/customer_info_item_left"
                    android:text="@string/customer_jifen"
                    android:textColor="@color/beauty_color_333333" />

                <TextView
                    android:id="@+id/card_point"
                    style="@style/customer_info_item_right"
                    android:textColor="@color/beauty_color_FF7901" />

                <ImageView style="@style/customer_info_item_img" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/beauty_customer_cardinfo_card" />

    </LinearLayout>
</LinearLayout>
