<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="1dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/beauty_bg_white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上午班次"
            android:textColor="@color/beauty_color_black"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:21-13:00"
            android:textColor="@color/beauty_text_gray" />
    </LinearLayout>

    <View style="@style/beauty_vertical_line" />

    <com.zhongmei.beauty.widgets.SchedulingView
        android:id="@+id/sv_monday"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" />


    <com.zhongmei.beauty.widgets.SchedulingView
        android:id="@+id/sv_tuesday"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/bg_red"
        android:orientation="vertical" />

    <com.zhongmei.beauty.widgets.SchedulingView
        android:id="@+id/sv_wednesday"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" />

    <com.zhongmei.beauty.widgets.SchedulingView
        android:id="@+id/sv_thirsday"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" />

    <com.zhongmei.beauty.widgets.SchedulingView
        android:id="@+id/sv_friday"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" />

    <com.zhongmei.beauty.widgets.SchedulingView
        android:id="@+id/sv_staurday"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" />

    <com.zhongmei.beauty.widgets.SchedulingView
        android:id="@+id/sv_sunday"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" />


    <LinearLayout
        android:layout_width="147dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="67dp"
            android:layout_height="31dp"
            android:textSize="@dimen/text_13"
            android:textColor="@color/beauty_color_btn_red_nomal"
            android:background="@drawable/beauty_btn_square_selector"
            android:text="编辑" />
    </LinearLayout>

</LinearLayout>