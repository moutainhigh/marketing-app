<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/beauty_order_card_nonuse_discounts"
            style="@style/beauty.order.membership.item_title"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/beauty_membership_card_nonuse_discounts" />

        <View
            android:id="@+id/beauty_order_card_item_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/beauty_color_BCBCBC" />
    </LinearLayout>

</FrameLayout>